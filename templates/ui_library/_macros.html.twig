{#
    Story Macro - Creates a Storybook-like story block with preview and source code

    Usage:
    {% set preview %}
        <twig:ui:button primary>Click me</twig:ui:button>
    {% endset %}
    {% set code %}{% verbatim %}<twig:ui:button primary>Click me</twig:ui:button>{% endverbatim %}{% endset %}
    {{ _self.story('Story Title', preview, code) }}
#}

{% macro story(title, preview, source) %}
<div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 overflow-hidden" data-controller="code-toggle">
    {# Header with title and show code button #}
    <div class="flex items-center justify-between px-6 py-4 border-b border-gray-200 dark:border-gray-700">
        <h3 class="text-sm font-semibold text-gray-900 dark:text-white">{{ title }}</h3>
        <button
            type="button"
            data-code-toggle-target="button"
            data-action="code-toggle#toggle"
            aria-expanded="false"
            class="inline-flex items-center gap-1.5 px-3 py-1.5 text-xs font-medium text-gray-600 dark:text-gray-400 bg-gray-100 dark:bg-gray-700 rounded-md hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors"
        >
            <svg class="size-4 transition-transform" data-code-toggle-target="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
            </svg>
            <span>Show code</span>
        </button>
    </div>

    {# Preview area - use template_from_string to render Twig components #}
    <div class="p-6 bg-gray-50 dark:bg-gray-900/30">
        {{ include(template_from_string(preview)) }}
    </div>

    {# Collapsible source code #}
    <div class="hidden border-t border-gray-200 dark:border-gray-700" data-code-toggle-target="code" data-controller="copy-code">
        <div class="flex items-center justify-between px-4 py-2 bg-gray-800 dark:bg-gray-950 border-b border-gray-700">
            <span class="text-xs text-gray-400">Twig</span>
            <button
                type="button"
                data-copy-code-target="button"
                data-action="copy-code#copy"
                class="inline-flex items-center gap-1 px-2 py-1 text-xs text-gray-400 hover:text-white transition-colors"
            >
                <svg class="size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                </svg>
                <span>Copy</span>
            </button>
        </div>
        <pre class="p-4 text-sm overflow-x-auto !m-0" data-copy-code-target="code"><code class="language-markup">{{ source|e }}</code></pre>
    </div>
</div>
{% endmacro %}

{#
    Props Table Macro - Displays component props documentation

    Usage:
    {{ ui.props([
        { name: 'title', type: 'string', default: "''", description: 'The dialog title' },
        { name: 'variant', type: "'info'|'danger'|'warning'|'success'", default: "'info'", description: 'Visual variant' },
    ]) }}
#}
{% macro props(items) %}
<div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
        <h3 class="text-sm font-semibold text-gray-900 dark:text-white flex items-center gap-2">
            <svg class="size-4 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            Props
        </h3>
    </div>
    <div class="overflow-x-auto">
        <table class="w-full text-sm">
            <thead class="bg-gray-50 dark:bg-gray-900/50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Name</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Type</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Default</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Description</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                {% for item in items %}
                <tr class="hover:bg-gray-50 dark:hover:bg-gray-900/30">
                    <td class="px-6 py-3 whitespace-nowrap">
                        <code class="text-xs font-mono text-primary-600 dark:text-primary-400 bg-primary-50 dark:bg-primary-900/30 px-1.5 py-0.5 rounded">{{ item.name }}</code>
                    </td>
                    <td class="px-6 py-3 whitespace-nowrap">
                        <code class="text-xs font-mono text-gray-600 dark:text-gray-400">{{ item.type }}</code>
                    </td>
                    <td class="px-6 py-3 whitespace-nowrap">
                        <code class="text-xs font-mono text-gray-500 dark:text-gray-500">{{ item.default }}</code>
                    </td>
                    <td class="px-6 py-3 text-gray-700 dark:text-gray-300">{{ item.description }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endmacro %}

{#
