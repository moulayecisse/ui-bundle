{% extends '@Ui/ui_library/base.html.twig' %}

{% block title %}{{ componentInfo.label }} - UI Bundle{% endblock %}

{% block styles %}
    <script type="module">
        import { Application, Controller } from 'https://unpkg.com/@hotwired/stimulus/dist/stimulus.js'

        const application = Application.start()

        // Code toggle controller for showing/hiding source code
        application.register('code-toggle', class extends Controller {
            static targets = ['code', 'button', 'icon']

            toggle() {
                const isHidden = this.codeTarget.classList.contains('hidden')
                this.codeTarget.classList.toggle('hidden')
                this.buttonTarget.setAttribute('aria-expanded', isHidden)

                // Update button text
                const buttonText = this.buttonTarget.querySelector('span')
                if (buttonText) {
                    buttonText.textContent = isHidden ? 'Hide code' : 'Show code'
                }

                // Rotate icon
                if (this.hasIconTarget) {
                    this.iconTarget.style.transform = isHidden ? 'rotate(180deg)' : 'rotate(0deg)'
                }
            }
        })

        // Copy code controller
        application.register('copy-code', class extends Controller {
            static targets = ['code', 'button']
            static values = { copied: Boolean }

            copy() {
                const code = this.codeTarget.textContent
                navigator.clipboard.writeText(code).then(() => {
                    this.copiedValue = true
                    const originalText = this.buttonTarget.innerHTML
                    this.buttonTarget.innerHTML = '<svg class="size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg><span>Copied!</span>'
                    setTimeout(() => {
                        this.buttonTarget.innerHTML = originalText
                        this.copiedValue = false
                    }, 2000)
                })
            }
        })

        // Category collapse controller
        application.register('category-collapse', class extends Controller {
            static targets = ['content', 'icon']
            static values = { expanded: { type: Boolean, default: true } }

            toggle() {
                this.expandedValue = !this.expandedValue
                this.updateVisibility()
            }

            expandedValueChanged() {
                this.updateVisibility()
            }

            updateVisibility() {
                if (this.hasContentTarget) {
                    this.contentTarget.classList.toggle('hidden', !this.expandedValue)
                }
                if (this.hasIconTarget) {
                    this.iconTarget.style.transform = this.expandedValue ? 'rotate(0deg)' : 'rotate(-90deg)'
                }
            }
        })

        // Sidebar search controller
        application.register('sidebar-search', class extends Controller {
            static targets = ['input', 'category', 'item']

            filter() {
                const query = this.inputTarget.value.toLowerCase().trim()

                this.itemTargets.forEach(item => {
                    const text = item.textContent.toLowerCase()
                    const matches = query === '' || text.includes(query)
                    item.classList.toggle('hidden', !matches)
                })

                // Show/hide categories based on whether they have visible items
                this.categoryTargets.forEach(category => {
                    const visibleItems = category.querySelectorAll('[data-sidebar-search-target="item"]:not(.hidden)')
                    category.classList.toggle('hidden', visibleItems.length === 0 && query !== '')
                })
            }

            clear() {
                this.inputTarget.value = ''
                this.filter()
            }
        })
    </script>
    <style>
        /* Syntax highlighting for code blocks */
        .code-block { font-family: 'JetBrains Mono', 'Fira Code', monospace; }
        .code-tag { color: #ff79c6; }
        .code-attr { color: #50fa7b; }
        .code-string { color: #f1fa8c; }
        .code-comment { color: #6272a4; }
    </style>
{% endblock %}

{% block body %}
    <div class="min-h-full flex">
        {# Sidebar #}
        <aside class="w-64 bg-white dark:bg-gray-800 border-r border-gray-200 dark:border-gray-700 overflow-y-auto fixed h-full flex flex-col">
            {# Header with logo #}
            <div class="p-4 border-b border-gray-200 dark:border-gray-700 flex-shrink-0">
                <a href="{{ path('_ui_index') }}" class="text-lg font-bold text-gray-900 dark:text-white hover:text-primary-600 flex items-center gap-2">
                    <svg class="size-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="3" width="7" height="7" rx="1"></rect>
                        <rect x="14" y="3" width="7" height="7" rx="1"></rect>
                        <rect x="14" y="14" width="7" height="7" rx="1"></rect>
                        <rect x="3" y="14" width="7" height="7" rx="1"></rect>
                    </svg>
                    UI Bundle
                </a>
            </div>

            {# Search box #}
            <div class="p-3 border-b border-gray-200 dark:border-gray-700 flex-shrink-0" data-controller="sidebar-search">
                <div class="relative">
                    <svg class="absolute left-3 top-1/2 -translate-y-1/2 size-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                    <input
                        type="text"
                        placeholder="Search components..."
                        class="w-full pl-9 pr-3 py-2 text-sm border border-gray-200 dark:border-gray-600 rounded-lg bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                        data-sidebar-search-target="input"
                        data-action="input->sidebar-search#filter"
                    >
                </div>
            </div>

            {# Navigation with collapsible categories #}
            <nav class="flex-1 overflow-y-auto p-2" data-controller="sidebar-search">
                {% for cat, categoryComponents in components %}
                    <div class="mb-1" data-controller="category-collapse" data-category-collapse-expanded-value="true" data-sidebar-search-target="category">
                        {# Category header #}
                        <button
                            type="button"
                            class="w-full flex items-center justify-between px-2 py-1.5 text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md transition-colors"
                            data-action="click->category-collapse#toggle"
                        >
                            <span class="flex items-center gap-1.5">
                                <svg class="size-3.5 transition-transform duration-200" data-category-collapse-target="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                </svg>
                                {{ cat }}
                            </span>
                            <span class="text-[10px] font-normal text-gray-400 dark:text-gray-500 bg-gray-100 dark:bg-gray-700 px-1.5 py-0.5 rounded">
                                {{ categoryComponents|length }}
                            </span>
                        </button>

                        {# Component list #}
                        <ul class="mt-1 space-y-0.5" data-category-collapse-target="content">
                            {% for compKey, compInfo in categoryComponents %}
                                <li data-sidebar-search-target="item">
                                    <a
                                        href="{{ path('_ui_component', { category: cat, component: compKey }) }}"
                                        class="flex items-center gap-2 px-2 py-1.5 text-sm rounded-md transition-colors {{ cat == category and compKey == component ? 'bg-primary-50 text-primary-700 dark:bg-primary-900/30 dark:text-primary-300 font-medium' : 'text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700' }}"
                                    >
                                        <svg class="size-3.5 flex-shrink-0 {{ cat == category and compKey == component ? 'text-primary-500' : 'text-gray-400' }}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                                        </svg>
                                        <span class="truncate">{{ compInfo.label }}</span>
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endfor %}
            </nav>

            {# Footer with dark mode toggle #}
            <div class="p-3 border-t border-gray-200 dark:border-gray-700 flex-shrink-0">
                <button
                    onclick="document.documentElement.classList.toggle('dark')"
                    class="w-full flex items-center justify-center gap-2 px-3 py-2 text-sm text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md transition-colors"
                >
                    <svg class="size-4 dark:hidden" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
                    </svg>
                    <svg class="size-4 hidden dark:block" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="dark:hidden">Dark mode</span>
                    <span class="hidden dark:inline">Light mode</span>
                </button>
            </div>
        </aside>

        {# Main content #}
        <main class="flex-1 ml-64 overflow-y-auto">
            {# Header #}
            <header class="bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 px-8 py-4 sticky top-0 z-10">
                <div class="flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400 mb-1">
                    <span class="capitalize">{{ category }}</span>
                    <svg class="size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                    <span>{{ componentInfo.label }}</span>
                </div>
                <h1 class="text-2xl font-bold text-gray-900 dark:text-white">{{ componentInfo.label }}</h1>
                <p class="text-gray-600 dark:text-gray-400 mt-1">{{ componentInfo.description }}</p>
            </header>

            {# Component preview #}
            <div class="p-8">
                {# Try to include a preview template for this component #}
                {% set previewTemplate = '@Ui/ui_library/previews/' ~ category ~ '/' ~ component ~ '.html.twig' %}
                {% set previewContent = include(previewTemplate, ignore_missing = true) %}

                {% if previewContent %}
                    {{ previewContent|raw }}
                {% else %}
                    <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700">
                        <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                            <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Preview</h2>
                        </div>
                        <div class="p-8">
                            <div class="border border-dashed border-gray-300 dark:border-gray-600 rounded-lg p-8 bg-gray-50 dark:bg-gray-900/50">
                                <p class="text-center text-gray-500 dark:text-gray-400">
                                    <svg class="size-12 mx-auto mb-4 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"></path>
                                    </svg>
                                    Preview template not found.<br>
                                    <code class="text-xs bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded mt-2 inline-block">{{ previewTemplate }}</code>
                                </p>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </main>
    </div>
{% endblock %}
