{% import '@Ui/ui_library/_macros.html.twig' as ui %}

<div class="space-y-6">
    {# Props Documentation #}
    {{ ui.props([
        { name: 'name', type: 'string | null', default: 'null', description: 'Form field name for submission' },
        { name: 'id', type: 'string | null', default: 'null', description: 'Input element ID' },
        { name: 'value', type: 'number', default: '0', description: 'Current slider value' },
        { name: 'min', type: 'number', default: '0', description: 'Minimum value' },
        { name: 'max', type: 'number', default: '100', description: 'Maximum value' },
        { name: 'step', type: 'number', default: '1', description: 'Step increment between values' },
        { name: 'disabled', type: 'boolean', default: 'false', description: 'Disable the slider' },
        { name: 'showValue', type: 'boolean', default: 'false', description: 'Show current value' },
        { name: 'showMinMax', type: 'boolean', default: 'true', description: 'Show min and max labels' },
        { name: 'size', type: "'sm' | 'md' | 'lg'", default: "'md'", description: 'Slider track and thumb size' },
        { name: 'color', type: "'primary' | 'secondary' | 'success' | 'warning' | 'danger' | 'info'", default: "'primary'", description: 'Slider color theme' },
        { name: 'showTicks', type: 'boolean', default: 'false', description: 'Show tick marks below slider' },
        { name: 'tickCount', type: 'number', default: '5', description: 'Number of tick marks when showTicks is true' },
        { name: 'valueFormat', type: 'string | null', default: 'null', description: 'Format string for value display (use %value% placeholder)' },
        { name: 'class', type: 'string', default: "''", description: 'Additional CSS classes' },
    ]) }}

    {# Basic Slider #}
    {% set basicPreview %}
        <div class="max-w-md">
            <twig:Ui:slider name="basic" value="50" />
        </div>
    {% endset %}
    {% set basicCode %}{% verbatim %}<twig:Ui:slider name="basic" value="50" />{% endverbatim %}{% endset %}
    {{ ui.story('Basic Slider', basicPreview, basicCode) }}

    {# With Value Display #}
    {% set valuePreview %}
        <div class="max-w-md">
            <twig:Ui:slider name="display" value="75" showValue />
        </div>
    {% endset %}
    {% set valueCode %}{% verbatim %}<twig:Ui:slider name="display" value="75" showValue />{% endverbatim %}{% endset %}
    {{ ui.story('With Value Display', valuePreview, valueCode) }}

    {# Size Variants #}
    {% set sizesPreview %}
        <div class="max-w-md space-y-6">
            <div>
                <p class="text-sm text-gray-500 mb-2">Small</p>
                <twig:Ui:slider name="size-sm" value="40" size="sm" showValue />
            </div>
            <div>
                <p class="text-sm text-gray-500 mb-2">Medium (default)</p>
                <twig:Ui:slider name="size-md" value="50" size="md" showValue />
            </div>
            <div>
                <p class="text-sm text-gray-500 mb-2">Large</p>
                <twig:Ui:slider name="size-lg" value="60" size="lg" showValue />
            </div>
        </div>
    {% endset %}
    {% set sizesCode %}{% verbatim %}<twig:Ui:slider size="sm" value="40" showValue />
<twig:Ui:slider size="md" value="50" showValue />
<twig:Ui:slider size="lg" value="60" showValue />{% endverbatim %}{% endset %}
    {{ ui.story('Size Variants', sizesPreview, sizesCode) }}

    {# Color Variants #}
    {% set colorsPreview %}
        <div class="max-w-md space-y-4">
            <twig:Ui:slider name="color-primary" value="50" color="primary" :showMinMax="false" />
            <twig:Ui:slider name="color-success" value="50" color="success" :showMinMax="false" />
            <twig:Ui:slider name="color-warning" value="50" color="warning" :showMinMax="false" />
            <twig:Ui:slider name="color-danger" value="50" color="danger" :showMinMax="false" />
            <twig:Ui:slider name="color-info" value="50" color="info" :showMinMax="false" />
        </div>
    {% endset %}
    {% set colorsCode %}{% verbatim %}<twig:Ui:slider color="primary" value="50" />
<twig:Ui:slider color="success" value="50" />
<twig:Ui:slider color="warning" value="50" />
<twig:Ui:slider color="danger" value="50" />
<twig:Ui:slider color="info" value="50" />{% endverbatim %}{% endset %}
    {{ ui.story('Color Variants', colorsPreview, colorsCode) }}

    {# With Ticks #}
    {% set ticksPreview %}
        <div class="max-w-md">
            <twig:Ui:slider name="ticks" value="40" showTicks :tickCount="5" :showMinMax="false" />
        </div>
    {% endset %}
    {% set ticksCode %}{% verbatim %}<twig:Ui:slider value="40" showTicks :tickCount="5" />{% endverbatim %}{% endset %}
    {{ ui.story('With Tick Marks', ticksPreview, ticksCode) }}

    {# Value Format #}
    {% set formatPreview %}
        <div class="max-w-md">
            <twig:Ui:slider name="format" value="75" showValue valueFormat="%value%%" />
        </div>
    {% endset %}
    {% set formatCode %}{% verbatim %}<twig:Ui:slider value="75" showValue valueFormat="%value%%" />{% endverbatim %}{% endset %}
    {{ ui.story('Custom Value Format', formatPreview, formatCode) }}

    {# Custom Range #}
    {% set rangePreview %}
        <div class="max-w-md">
            <twig:Ui:slider name="range" value="25" min="0" max="50" showValue />
        </div>
    {% endset %}
    {% set rangeCode %}{% verbatim %}<twig:Ui:slider value="25" min="0" max="50" showValue />{% endverbatim %}{% endset %}
    {{ ui.story('Custom Range (0-50)', rangePreview, rangeCode) }}

    {# With Steps #}
    {% set stepsPreview %}
        <div class="max-w-md">
            <twig:Ui:slider name="steps" value="50" step="10" showValue />
        </div>
    {% endset %}
    {% set stepsCode %}{% verbatim %}<twig:Ui:slider value="50" step="10" showValue />{% endverbatim %}{% endset %}
    {{ ui.story('With Steps (10)', stepsPreview, stepsCode) }}

    {# Disabled #}
    {% set disabledPreview %}
        <div class="max-w-md">
            <twig:Ui:slider name="disabled" value="30" disabled showValue />
        </div>
    {% endset %}
    {% set disabledCode %}{% verbatim %}<twig:Ui:slider value="30" disabled showValue />{% endverbatim %}{% endset %}
    {{ ui.story('Disabled', disabledPreview, disabledCode) }}
</div>
