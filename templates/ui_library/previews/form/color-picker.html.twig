{% import '@Ui/ui_library/_macros.html.twig' as ui %}

<div class="space-y-6">
    {# Props Documentation #}
    {{ ui.props([
        { name: 'name', type: 'string | null', default: 'null', description: 'Form field name for submission' },
        { name: 'id', type: 'string | null', default: 'null', description: 'Input element ID' },
        { name: 'value', type: 'string', default: "'#3b82f6'", description: 'Current color value (hex format)' },
        { name: 'swatches', type: 'array', default: '[20 colors]', description: 'Preset color swatches to display' },
        { name: 'showInput', type: 'boolean', default: 'true', description: 'Show text/native color input below swatches' },
        { name: 'disabled', type: 'boolean', default: 'false', description: 'Disable the color picker' },
        { name: 'label', type: 'string | null', default: 'null', description: 'Label text above the picker' },
        { name: 'class', type: 'string', default: "''", description: 'Additional CSS classes' },
    ]) }}

    {# Basic Color Picker #}
    {% set basicPreview %}
        <twig:Ui:color-picker name="color" value="#3b82f6" />
    {% endset %}
    {% set basicCode %}{% verbatim %}<twig:Ui:color-picker name="color" value="#3b82f6" />{% endverbatim %}{% endset %}
    {{ ui.story('Basic Color Picker', basicPreview, basicCode) }}

    {# With Label #}
    {% set labelPreview %}
        <twig:Ui:color-picker name="theme-color" label="Theme Color" value="#8b5cf6" />
    {% endset %}
    {% set labelCode %}{% verbatim %}<twig:Ui:color-picker name="theme-color" label="Theme Color" value="#8b5cf6" />{% endverbatim %}{% endset %}
    {{ ui.story('With Label', labelPreview, labelCode) }}

    {# Custom Swatches #}
    {% set swatchesPreview %}
        <twig:Ui:color-picker
            name="brand"
            label="Brand Color"
            value="#ef4444"
            :swatches="['#ef4444', '#f97316', '#eab308', '#22c55e', '#3b82f6', '#8b5cf6']"
        />
    {% endset %}
    {% set swatchesCode %}{% verbatim %}<twig:Ui:color-picker
    name="brand"
    label="Brand Color"
    value="#ef4444"
    :swatches="['#ef4444', '#f97316', '#eab308', '#22c55e', '#3b82f6', '#8b5cf6']"
/>{% endverbatim %}{% endset %}
    {{ ui.story('Custom Swatches', swatchesPreview, swatchesCode) }}

    {# Without Text Input #}
    {% set noInputPreview %}
        <twig:Ui:color-picker name="simple" value="#22c55e" :showInput="false" />
    {% endset %}
    {% set noInputCode %}{% verbatim %}<twig:Ui:color-picker name="simple" value="#22c55e" :showInput="false" />{% endverbatim %}{% endset %}
    {{ ui.story('Without Text Input', noInputPreview, noInputCode) }}

    {# Disabled #}
    {% set disabledPreview %}
        <twig:Ui:color-picker name="disabled" label="Disabled" value="#64748b" disabled />
    {% endset %}
    {% set disabledCode %}{% verbatim %}<twig:Ui:color-picker name="disabled" label="Disabled" value="#64748b" disabled />{% endverbatim %}{% endset %}
    {{ ui.story('Disabled', disabledPreview, disabledCode) }}
</div>
