{% import '@Ui/ui_library/_macros.html.twig' as ui %}

<div class="space-y-6">
    {# Props Documentation #}
    {{ ui.props([
        { name: 'name', type: 'string', default: 'null', description: 'Input name attribute' },
        { name: 'id', type: 'string', default: 'null', description: 'Input id attribute' },
        { name: 'checked', type: 'boolean', default: 'false', description: 'Whether the switch is on' },
        { name: 'label', type: 'string', default: 'null', description: 'Label text next to the switch' },
        { name: 'description', type: 'string', default: 'null', description: 'Description text below the label' },
        { name: 'disabled', type: 'boolean', default: 'false', description: 'Disable the switch' },
        { name: 'required', type: 'boolean', default: 'false', description: 'Mark as required field' },
        { name: 'size', type: 'string', default: "'md'", description: 'Switch size (sm, md, lg)' },
        { name: 'color', type: 'string', default: "'primary'", description: 'Switch color when on (primary, success, warning, danger, info)' },
        { name: 'labelPosition', type: 'string', default: "'right'", description: 'Position of label (left, right)' },
        { name: 'value', type: 'string', default: "'1'", description: 'Value when checked' },
    ]) }}

    {# Basic Switch #}
    {% set basicPreview %}
        <twig:ui:switch name="basic" label="Basic Switch" />
    {% endset %}
    {% set basicCode %}{% verbatim %}<twig:ui:switch name="basic" label="Basic Switch" />{% endverbatim %}{% endset %}
    {{ ui.story('Basic Switch', basicPreview, basicCode) }}

    {# Color Variants #}
    {% set colorPreview %}
        <div class="space-y-3">
            <twig:ui:switch name="primary" label="Primary" color="primary" checked />
            <twig:ui:switch name="success" label="Success" color="success" checked />
            <twig:ui:switch name="warning" label="Warning" color="warning" checked />
            <twig:ui:switch name="danger" label="Danger" color="danger" checked />
            <twig:ui:switch name="info" label="Info" color="info" checked />
        </div>
    {% endset %}
    {% set colorCode %}{% verbatim %}<twig:ui:switch name="primary" label="Primary" color="primary" checked />
<twig:ui:switch name="success" label="Success" color="success" checked />
<twig:ui:switch name="warning" label="Warning" color="warning" checked />
<twig:ui:switch name="danger" label="Danger" color="danger" checked />
<twig:ui:switch name="info" label="Info" color="info" checked />{% endverbatim %}{% endset %}
    {{ ui.story('Color Variants', colorPreview, colorCode) }}

    {# Size Variants #}
    {% set sizePreview %}
        <div class="space-y-3">
            <twig:ui:switch name="small" label="Small" size="sm" />
            <twig:ui:switch name="medium" label="Medium (default)" size="md" />
            <twig:ui:switch name="large" label="Large" size="lg" />
        </div>
    {% endset %}
    {% set sizeCode %}{% verbatim %}<twig:ui:switch name="small" label="Small" size="sm" />
<twig:ui:switch name="medium" label="Medium" size="md" />
<twig:ui:switch name="large" label="Large" size="lg" />{% endverbatim %}{% endset %}
    {{ ui.story('Size Variants', sizePreview, sizeCode) }}

    {# With Description #}
    {% set descriptionPreview %}
        <twig:ui:switch name="description" label="Email Notifications" description="Receive email updates about your account." />
    {% endset %}
    {% set descriptionCode %}{% verbatim %}<twig:ui:switch name="description" label="Email Notifications" description="Receive email updates about your account." />{% endverbatim %}{% endset %}
    {{ ui.story('With Description', descriptionPreview, descriptionCode) }}

    {# Label Position #}
    {% set positionPreview %}
        <div class="space-y-3">
            <twig:ui:switch name="right-label" label="Label on right" labelPosition="right" checked />
            <twig:ui:switch name="left-label" label="Label on left" labelPosition="left" checked />
        </div>
    {% endset %}
    {% set positionCode %}{% verbatim %}<twig:ui:switch name="right-label" label="Label on right" labelPosition="right" />
<twig:ui:switch name="left-label" label="Label on left" labelPosition="left" />{% endverbatim %}{% endset %}
    {{ ui.story('Label Position', positionPreview, positionCode) }}

    {# Required Field #}
    {% set requiredPreview %}
        <twig:ui:switch name="required" label="Accept Terms" description="You must accept the terms to continue." required />
    {% endset %}
    {% set requiredCode %}{% verbatim %}<twig:ui:switch name="required" label="Accept Terms" description="You must accept the terms to continue." required />{% endverbatim %}{% endset %}
    {{ ui.story('Required Field', requiredPreview, requiredCode) }}

    {# Disabled States #}
    {% set disabledPreview %}
        <div class="space-y-3">
            <twig:ui:switch name="disabled-off" label="Disabled (Off)" disabled />
            <twig:ui:switch name="disabled-on" label="Disabled (On)" disabled checked />
        </div>
    {% endset %}
    {% set disabledCode %}{% verbatim %}<twig:ui:switch name="disabled-off" label="Disabled (Off)" disabled />
<twig:ui:switch name="disabled-on" label="Disabled (On)" disabled checked />{% endverbatim %}{% endset %}
    {{ ui.story('Disabled States', disabledPreview, disabledCode) }}

    {# Settings Example #}
    {% set settingsPreview %}
        <div class="space-y-4 max-w-md">
            <twig:ui:switch name="dark-mode" label="Dark Mode" description="Switch to dark color scheme" checked color="primary" />
            <twig:ui:switch name="notifications" label="Push Notifications" description="Receive push notifications on your device" color="info" />
            <twig:ui:switch name="marketing" label="Marketing Emails" description="Receive promotional emails and offers" color="success" />
            <twig:ui:switch name="sounds" label="Sound Effects" description="Play sounds for interactions" checked color="primary" />
        </div>
    {% endset %}
    {% set settingsCode %}{% verbatim %}<twig:ui:switch name="dark-mode" label="Dark Mode" description="..." checked color="primary" />
<twig:ui:switch name="notifications" label="Push Notifications" description="..." color="info" />
<twig:ui:switch name="marketing" label="Marketing Emails" description="..." color="success" />
<twig:ui:switch name="sounds" label="Sound Effects" description="..." checked color="primary" />{% endverbatim %}{% endset %}
    {{ ui.story('Settings Example', settingsPreview, settingsCode) }}
</div>
