{% import '@Ui/ui_library/_macros.html.twig' as ui %}

<div class="space-y-6">
    {# Basic Switch #}
    {% set basicPreview %}
        <twig:Ui:switch name="basic" label="Basic Switch" />
    {% endset %}
    {% set basicCode %}{% verbatim %}<twig:Ui:switch name="basic" label="Basic Switch" />{% endverbatim %}{% endset %}
    {{ ui.story('Basic Switch', basicPreview, basicCode) }}

    {# Enabled by Default #}
    {% set checkedPreview %}
        <twig:Ui:switch name="checked" label="Enabled by Default" checked />
    {% endset %}
    {% set checkedCode %}{% verbatim %}<twig:Ui:switch name="checked" label="Enabled by Default" checked />{% endverbatim %}{% endset %}
    {{ ui.story('Enabled by Default', checkedPreview, checkedCode) }}

    {# With Description #}
    {% set descriptionPreview %}
        <twig:Ui:switch name="description" label="Email Notifications" description="Receive email updates about your account." />
    {% endset %}
    {% set descriptionCode %}{% verbatim %}<twig:Ui:switch name="description" label="Email Notifications" description="Receive email updates about your account." />{% endverbatim %}{% endset %}
    {{ ui.story('With Description', descriptionPreview, descriptionCode) }}

    {# Disabled States #}
    {% set disabledPreview %}
        <div class="space-y-3">
            <twig:Ui:switch name="disabled-off" label="Disabled (Off)" disabled />
            <twig:Ui:switch name="disabled-on" label="Disabled (On)" disabled checked />
        </div>
    {% endset %}
    {% set disabledCode %}{% verbatim %}<twig:Ui:switch name="disabled-off" label="Disabled (Off)" disabled />
<twig:Ui:switch name="disabled-on" label="Disabled (On)" disabled checked />{% endverbatim %}{% endset %}
    {{ ui.story('Disabled States', disabledPreview, disabledCode) }}

    {# Settings Example #}
    {% set settingsPreview %}
        <div class="space-y-3">
            <twig:Ui:switch name="dark-mode" label="Dark Mode" checked />
            <twig:Ui:switch name="notifications" label="Push Notifications" />
            <twig:Ui:switch name="sounds" label="Sound Effects" checked />
        </div>
    {% endset %}
    {% set settingsCode %}{% verbatim %}<twig:Ui:switch name="dark-mode" label="Dark Mode" checked />
<twig:Ui:switch name="notifications" label="Push Notifications" />
<twig:Ui:switch name="sounds" label="Sound Effects" checked />{% endverbatim %}{% endset %}
    {{ ui.story('Settings Example', settingsPreview, settingsCode) }}
</div>
