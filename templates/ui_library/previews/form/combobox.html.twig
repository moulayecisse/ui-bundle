{% import '@Ui/ui_library/_macros.html.twig' as ui %}

<div class="space-y-6">
    {# Basic Combobox #}
    {% set basicPreview %}
        <div class="max-w-xs">
            <twig:Ui:combobox
                name="country"
                placeholder="Select a country"
                :options="[
                    { value: 'us', label: 'United States' },
                    { value: 'uk', label: 'United Kingdom' },
                    { value: 'ca', label: 'Canada' },
                    { value: 'au', label: 'Australia' },
                    { value: 'de', label: 'Germany' },
                    { value: 'fr', label: 'France' }
                ]"
            />
        </div>
    {% endset %}
    {% set basicCode %}{% verbatim %}<twig:Ui:combobox
    name="country"
    placeholder="Select a country"
    :options="[
        { value: 'us', label: 'United States' },
        { value: 'uk', label: 'United Kingdom' },
        { value: 'ca', label: 'Canada' },
        { value: 'au', label: 'Australia' }
    ]"
/>{% endverbatim %}{% endset %}
    {{ ui.story('Basic Combobox', basicPreview, basicCode) }}

    {# With Selected Value #}
    {% set selectedPreview %}
        <div class="max-w-xs">
            <twig:Ui:combobox
                name="language"
                value="en"
                :options="[
                    { value: 'en', label: 'English' },
                    { value: 'es', label: 'Spanish' },
                    { value: 'fr', label: 'French' },
                    { value: 'de', label: 'German' }
                ]"
            />
        </div>
    {% endset %}
    {% set selectedCode %}{% verbatim %}<twig:Ui:combobox
    name="language"
    value="en"
    :options="[
        { value: 'en', label: 'English' },
        { value: 'es', label: 'Spanish' },
        ...
    ]"
/>{% endverbatim %}{% endset %}
    {{ ui.story('With Selected Value', selectedPreview, selectedCode) }}

    {# Multiple Selection #}
    {% set multiplePreview %}
        <div class="max-w-xs">
            <twig:Ui:combobox
                name="skills"
                placeholder="Select skills"
                multiple
                :options="[
                    { value: 'js', label: 'JavaScript' },
                    { value: 'ts', label: 'TypeScript' },
                    { value: 'php', label: 'PHP' },
                    { value: 'python', label: 'Python' },
                    { value: 'go', label: 'Go' }
                ]"
            />
        </div>
    {% endset %}
    {% set multipleCode %}{% verbatim %}<twig:Ui:combobox
    name="skills"
    placeholder="Select skills"
    multiple
    :options="[
        { value: 'js', label: 'JavaScript' },
        { value: 'ts', label: 'TypeScript' },
        ...
    ]"
/>{% endverbatim %}{% endset %}
    {{ ui.story('Multiple Selection', multiplePreview, multipleCode) }}

    {# Clearable #}
    {% set clearablePreview %}
        <div class="max-w-xs">
            <twig:Ui:combobox
                name="status"
                value="active"
                clearable
                :options="[
                    { value: 'active', label: 'Active' },
                    { value: 'pending', label: 'Pending' },
                    { value: 'inactive', label: 'Inactive' }
                ]"
            />
        </div>
    {% endset %}
    {% set clearableCode %}{% verbatim %}<twig:Ui:combobox
    name="status"
    value="active"
    clearable
    :options="[...]"
/>{% endverbatim %}{% endset %}
    {{ ui.story('Clearable', clearablePreview, clearableCode) }}

    {# Disabled #}
    {% set disabledPreview %}
        <div class="max-w-xs">
            <twig:Ui:combobox
                name="disabled"
                value="option1"
                disabled
                :options="[
                    { value: 'option1', label: 'Option 1' },
                    { value: 'option2', label: 'Option 2' }
                ]"
            />
        </div>
    {% endset %}
    {% set disabledCode %}{% verbatim %}<twig:Ui:combobox
    name="disabled"
    value="option1"
    disabled
    :options="[...]"
/>{% endverbatim %}{% endset %}
    {{ ui.story('Disabled', disabledPreview, disabledCode) }}

    {# Sizes #}
    {% set sizesPreview %}
        <div class="max-w-xs space-y-4">
            <twig:Ui:combobox
                name="size-sm"
                size="sm"
                value="small"
                :options="[{ value: 'small', label: 'Small Size' }]"
            />
            <twig:Ui:combobox
                name="size-md"
                size="md"
                value="medium"
                :options="[{ value: 'medium', label: 'Medium Size' }]"
            />
            <twig:Ui:combobox
                name="size-lg"
                size="lg"
                value="large"
                :options="[{ value: 'large', label: 'Large Size' }]"
            />
        </div>
    {% endset %}
    {% set sizesCode %}{% verbatim %}<twig:Ui:combobox size="sm" ... />
<twig:Ui:combobox size="md" ... />
<twig:Ui:combobox size="lg" ... />{% endverbatim %}{% endset %}
    {{ ui.story('Sizes', sizesPreview, sizesCode) }}
</div>
