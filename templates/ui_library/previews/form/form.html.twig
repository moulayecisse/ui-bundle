{% import '@Ui/ui_library/_macros.html.twig' as ui %}

<div class="space-y-6">
    {# Basic Form #}
    {% set basicPreview %}
        <twig:ui:form action="#" method="POST" class="max-w-lg">
            <twig:ui:input name="name" label="Full Name" placeholder="Enter your name" />
            <twig:ui:input name="email" type="email" label="Email Address" placeholder="you@example.com" class="mt-4" />
            <twig:ui:form-actions class="mt-6">
                <twig:ui:button type="submit">Submit</twig:ui:button>
            </twig:ui:form-actions>
        </twig:ui:form>
    {% endset %}
    {% set basicCode %}{% verbatim %}<twig:ui:form action="#" method="POST">
    <twig:ui:input name="name" label="Full Name" placeholder="Enter your name" />
    <twig:ui:input name="email" type="email" label="Email Address" placeholder="you@example.com" />
    <twig:ui:form-actions>
        <twig:ui:button type="submit">Submit</twig:ui:button>
    </twig:ui:form-actions>
</twig:ui:form>{% endverbatim %}{% endset %}
    {{ ui.story('Basic Form', basicPreview, basicCode) }}

    {# With Form Section #}
    {% set sectionPreview %}
        <twig:ui:form action="#" class="max-w-2xl">
            <twig:ui:form-section title="Personal Information" description="Your basic profile information.">
                <div class="grid grid-cols-2 gap-4">
                    <twig:ui:input name="first_name" label="First Name" />
                    <twig:ui:input name="last_name" label="Last Name" />
                </div>
                <twig:ui:input name="email" type="email" label="Email" class="mt-4" />
            </twig:ui:form-section>

            <twig:ui:form-section title="Preferences" description="Customize your experience." class="mt-8">
                <twig:ui:switch name="newsletter" label="Subscribe to newsletter" />
                <twig:ui:switch name="notifications" label="Enable notifications" class="mt-3" />
            </twig:ui:form-section>

            <twig:ui:form-actions class="mt-8">
                <twig:ui:button variant="outline">Cancel</twig:ui:button>
                <twig:ui:button type="submit">Save Changes</twig:ui:button>
            </twig:ui:form-actions>
        </twig:ui:form>
    {% endset %}
    {% set sectionCode %}{% verbatim %}<twig:ui:form action="#">
    <twig:ui:form-section title="Personal Information" description="Your basic profile information.">
        <div class="grid grid-cols-2 gap-4">
            <twig:ui:input name="first_name" label="First Name" />
            <twig:ui:input name="last_name" label="Last Name" />
        </div>
        <twig:ui:input name="email" type="email" label="Email" />
    </twig:ui:form-section>

    <twig:ui:form-section title="Preferences" description="Customize your experience.">
        <twig:ui:switch name="newsletter" label="Subscribe to newsletter" />
    </twig:ui:form-section>

    <twig:ui:form-actions>
        <twig:ui:button variant="outline">Cancel</twig:ui:button>
        <twig:ui:button type="submit">Save Changes</twig:ui:button>
    </twig:ui:form-actions>
</twig:ui:form>{% endverbatim %}{% endset %}
    {{ ui.story('With Form Sections', sectionPreview, sectionCode) }}

    {# Form Actions Alignment #}
    {% set actionsPreview %}
        <div class="space-y-6 max-w-lg">
            <div>
                <p class="text-sm text-gray-500 mb-2">Left aligned (default)</p>
                <twig:ui:form-actions>
                    <twig:ui:button variant="outline">Cancel</twig:ui:button>
                    <twig:ui:button>Submit</twig:ui:button>
                </twig:ui:form-actions>
            </div>
            <div>
                <p class="text-sm text-gray-500 mb-2">Right aligned</p>
                <twig:ui:form-actions class="justify-end">
                    <twig:ui:button variant="outline">Cancel</twig:ui:button>
                    <twig:ui:button>Submit</twig:ui:button>
                </twig:ui:form-actions>
            </div>
            <div>
                <p class="text-sm text-gray-500 mb-2">Space between</p>
                <twig:ui:form-actions class="justify-between">
                    <twig:ui:button variant="ghost">Delete</twig:ui:button>
                    <div class="flex gap-3">
                        <twig:ui:button variant="outline">Cancel</twig:ui:button>
                        <twig:ui:button>Submit</twig:ui:button>
                    </div>
                </twig:ui:form-actions>
            </div>
        </div>
    {% endset %}
    {% set actionsCode %}{% verbatim %}<twig:ui:form-actions>
    <twig:ui:button variant="outline">Cancel</twig:ui:button>
    <twig:ui:button>Submit</twig:ui:button>
</twig:ui:form-actions>

