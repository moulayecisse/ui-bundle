{% import '@Ui/ui_library/_macros.html.twig' as ui %}

<div class="space-y-6">
    {# Props Documentation #}
    {{ ui.props([
        { name: 'type', type: "'date' | 'datetime-local' | 'time' | 'month' | 'week'", default: "'date'", description: 'Input type for date selection' },
        { name: 'name', type: 'string | null', default: 'null', description: 'Form field name' },
        { name: 'id', type: 'string | null', default: 'null', description: 'Input element ID' },
        { name: 'value', type: 'string | null', default: 'null', description: 'Date value (YYYY-MM-DD format)' },
        { name: 'placeholder', type: 'string', default: "'YYYY-MM-DD'", description: 'Placeholder text' },
        { name: 'disabled', type: 'boolean', default: 'false', description: 'Disabled state' },
        { name: 'required', type: 'boolean', default: 'false', description: 'Required field' },
        { name: 'autofocus', type: 'boolean', default: 'false', description: 'Autofocus on page load' },
        { name: 'autocomplete', type: 'string | null', default: 'null', description: 'Autocomplete attribute' },
        { name: 'form', type: 'FormView | null', default: 'null', description: 'Symfony form field for auto-configuration' },
        { name: 'class', type: 'string', default: "''", description: 'Additional CSS classes' },
    ]) }}

    {# Basic Date Picker #}
    {% set basicPreview %}
        <div class="max-w-xs">
            <twig:Ui:input:date name="date" />
        </div>
    {% endset %}
    {% set basicCode %}{% verbatim %}<twig:Ui:input:date name="date" />{% endverbatim %}{% endset %}
    {{ ui.story('Basic Date Picker', basicPreview, basicCode) }}

    {# With Pre-filled Value #}
    {% set valuePreview %}
        <div class="max-w-xs">
            <twig:Ui:input:date name="date-value" value="2024-06-15" />
        </div>
    {% endset %}
    {% set valueCode %}{% verbatim %}<twig:Ui:input:date name="date" value="2024-06-15" />{% endverbatim %}{% endset %}
    {{ ui.story('With Pre-filled Value', valuePreview, valueCode) }}

    {# Different Types #}
    {% set typesPreview %}
        <div class="max-w-xs space-y-4">
            <div>
                <span class="text-xs text-gray-500 mb-1 block">Date</span>
                <twig:Ui:input:date name="date-type" type="date" />
            </div>
            <div>
                <span class="text-xs text-gray-500 mb-1 block">Date & Time</span>
                <twig:Ui:input:date name="datetime-type" type="datetime-local" />
            </div>
            <div>
                <span class="text-xs text-gray-500 mb-1 block">Time only</span>
                <twig:Ui:input:date name="time-type" type="time" />
            </div>
            <div>
                <span class="text-xs text-gray-500 mb-1 block">Month</span>
                <twig:Ui:input:date name="month-type" type="month" />
            </div>
            <div>
                <span class="text-xs text-gray-500 mb-1 block">Week</span>
                <twig:Ui:input:date name="week-type" type="week" />
            </div>
        </div>
    {% endset %}
    {% set typesCode %}{% verbatim %}<twig:Ui:input:date type="date" />
<twig:Ui:input:date type="datetime-local" />
<twig:Ui:input:date type="time" />
<twig:Ui:input:date type="month" />
<twig:Ui:input:date type="week" />{% endverbatim %}{% endset %}
    {{ ui.story('Different Types', typesPreview, typesCode) }}

    {# With Label #}
    {% set labelPreview %}
        <div class="max-w-xs">
            <twig:Ui:label for="birth-date">Birth Date</twig:Ui:label>
            <twig:Ui:input:date name="birth-date" id="birth-date" required />
        </div>
    {% endset %}
    {% set labelCode %}{% verbatim %}<twig:Ui:label for="birth-date">Birth Date</twig:Ui:label>
<twig:Ui:input:date name="birth-date" id="birth-date" required />{% endverbatim %}{% endset %}
    {{ ui.story('With Label', labelPreview, labelCode) }}

    {# Date Range Example #}
    {% set rangePreview %}
        <div class="max-w-md space-y-4">
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <twig:Ui:label for="start-date">Start Date</twig:Ui:label>
                    <twig:Ui:input:date name="start-date" id="start-date" />
                </div>
                <div>
                    <twig:Ui:label for="end-date">End Date</twig:Ui:label>
                    <twig:Ui:input:date name="end-date" id="end-date" />
                </div>
            </div>
        </div>
    {% endset %}
    {% set rangeCode %}{% verbatim %}<div class="grid grid-cols-2 gap-4">
    <div>
        <twig:Ui:label for="start-date">Start Date</twig:Ui:label>
        <twig:Ui:input:date name="start-date" id="start-date" />
    </div>
    <div>
        <twig:Ui:label for="end-date">End Date</twig:Ui:label>
        <twig:Ui:input:date name="end-date" id="end-date" />
    </div>
</div>{% endverbatim %}{% endset %}
    {{ ui.story('Date Range Example', rangePreview, rangeCode) }}

    {# Disabled #}
    {% set disabledPreview %}
        <div class="max-w-xs">
            <twig:Ui:input:date name="date-disabled" value="2024-01-01" disabled />
        </div>
    {% endset %}
    {% set disabledCode %}{% verbatim %}<twig:Ui:input:date name="date" value="2024-01-01" disabled />{% endverbatim %}{% endset %}
    {{ ui.story('Disabled', disabledPreview, disabledCode) }}
</div>
