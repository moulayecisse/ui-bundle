{% import '@Ui/ui_library/_macros.html.twig' as ui %}

<div class="space-y-6">
    {# Props Documentation #}
    {{ ui.props([
        { name: 'name', type: 'string | null', default: 'null', description: 'Form field name' },
        { name: 'id', type: 'string | null', default: 'null', description: 'Input element ID' },
        { name: 'value', type: 'number | null', default: 'null', description: 'Input value' },
        { name: 'placeholder', type: 'string', default: "'0'", description: 'Placeholder text' },
        { name: 'size', type: "'sm' | 'md' | 'lg'", default: "'md'", description: 'Input size' },
        { name: 'disabled', type: 'boolean', default: 'false', description: 'Disabled state' },
        { name: 'min', type: 'number | null', default: 'null', description: 'Minimum value' },
        { name: 'max', type: 'number | null', default: 'null', description: 'Maximum value' },
        { name: 'step', type: 'number', default: '1', description: 'Step increment value' },
        { name: 'showStepper', type: 'boolean', default: 'true', description: 'Show increment/decrement buttons' },
        { name: 'required', type: 'boolean', default: 'false', description: 'Required field' },
        { name: 'class', type: 'string', default: "''", description: 'Additional CSS classes' },
    ]) }}

    {# Basic Number Input #}
    {% set basicPreview %}
        <div class="max-w-xs">
            <twig:ui:input:number name="number" placeholder="Enter a number..." />
        </div>
    {% endset %}
    {% set basicCode %}{% verbatim %}<twig:ui:input:number name="number" placeholder="Enter a number..." />{% endverbatim %}{% endset %}
    {{ ui.story('Basic Number Input', basicPreview, basicCode) }}

    {# With Stepper Buttons #}
    {% set stepperPreview %}
        <div class="max-w-xs">
            <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
                Click the + and - buttons to increment/decrement the value.
            </p>
            <twig:ui:input:number name="number-stepper" :value="5" :showStepper="true" />
        </div>
    {% endset %}
    {% set stepperCode %}{% verbatim %}<twig:ui:input:number name="number" :value="5" :showStepper="true" />{% endverbatim %}{% endset %}
    {{ ui.story('With Stepper Buttons', stepperPreview, stepperCode) }}

    {# Without Stepper #}
    {% set noStepperPreview %}
        <div class="max-w-xs">
            <twig:ui:input:number name="number-no-stepper" :showStepper="false" placeholder="Type a number..." />
        </div>
    {% endset %}
    {% set noStepperCode %}{% verbatim %}<twig:ui:input:number name="number" :showStepper="false" />{% endverbatim %}{% endset %}
    {{ ui.story('Without Stepper', noStepperPreview, noStepperCode) }}

    {# With Min/Max #}
    {% set minMaxPreview %}
        <div class="max-w-xs space-y-4">
            <p class="text-sm text-gray-600 dark:text-gray-400">
                Value clamped between 0 and 10. Try to enter values outside this range.
            </p>
            <twig:ui:input:number name="number-minmax" :min="0" :max="10" :value="5" />
        </div>
    {% endset %}
    {% set minMaxCode %}{% verbatim %}<twig:ui:input:number name="number" :min="0" :max="10" :value="5" />{% endverbatim %}{% endset %}
    {{ ui.story('With Min/Max Constraints', minMaxPreview, minMaxCode) }}

    {# Custom Step #}
    {% set stepPreview %}
        <div class="max-w-xs space-y-4">
            <div>
                <span class="text-xs text-gray-500 mb-1 block">Step: 1 (default)</span>
                <twig:ui:input:number name="number-step1" :step="1" :value="0" />
            </div>
            <div>
                <span class="text-xs text-gray-500 mb-1 block">Step: 5</span>
                <twig:ui:input:number name="number-step5" :step="5" :value="0" />
            </div>
            <div>
                <span class="text-xs text-gray-500 mb-1 block">Step: 0.1</span>
                <twig:ui:input:number name="number-step01" :step="0.1" :value="0" />
            </div>
        </div>
    {% endset %}
    {% set stepCode %}{% verbatim %}<twig:ui:input:number :step="1" />
<twig:ui:input:number :step="5" />
<twig:ui:input:number :step="0.1" />{% endverbatim %}{% endset %}
    {{ ui.story('Custom Step', stepPreview, stepCode) }}

    {# Sizes #}
    {% set sizesPreview %}
        <div class="max-w-xs space-y-4">
            <div>
                <span class="text-xs text-gray-500 mb-1 block">Small</span>
                <twig:ui:input:number name="number-sm" size="sm" :value="10" />
            </div>
            <div>
                <span class="text-xs text-gray-500 mb-1 block">Medium (default)</span>
                <twig:ui:input:number name="number-md" size="md" :value="10" />
            </div>
            <div>
                <span class="text-xs text-gray-500 mb-1 block">Large</span>
                <twig:ui:input:number name="number-lg" size="lg" :value="10" />
            </div>
        </div>
    {% endset %}
    {% set sizesCode %}{% verbatim %}<twig:ui:input:number size="sm" />
<twig:ui:input:number size="md" />
<twig:ui:input:number size="lg" />{% endverbatim %}{% endset %}
    {{ ui.story('Sizes', sizesPreview, sizesCode) }}

    {# Disabled #}
    {% set disabledPreview %}
        <div class="max-w-xs">
            <twig:ui:input:number name="number-disabled" :value="42" disabled />
        </div>
    {% endset %}
    {% set disabledCode %}{% verbatim %}<twig:ui:input:number name="number" :value="42" disabled />{% endverbatim %}{% endset %}
    {{ ui.story('Disabled', disabledPreview, disabledCode) }}
</div>
