{% import '@Ui/ui_library/_macros.html.twig' as ui %}

<div class="space-y-6">
    {# Basic Progress #}
    {% set basicPreview %}
        <div class="max-w-lg space-y-4">
            <twig:ui:progress :value="25" />
            <twig:ui:progress :value="50" />
            <twig:ui:progress :value="75" />
        </div>
    {% endset %}
    {% set basicCode %}{% verbatim %}<twig:ui:progress :value="25" />
<twig:ui:progress :value="50" />
<twig:ui:progress :value="75" />{% endverbatim %}{% endset %}
    {{ ui.story('Basic Progress', basicPreview, basicCode) }}

    {# Props Documentation #}
    {{ ui.props([
        { name: 'value', type: 'number', default: '0', description: 'Current progress value' },
        { name: 'max', type: 'number', default: '100', description: 'Maximum value for progress' },
        { name: 'variant', type: "'solid' | 'gradient'", default: "'solid'", description: 'Progress bar style variant' },
        { name: 'color', type: "'primary' | 'secondary' | 'success' | 'warning' | 'danger' | 'info' | 'neutral'", default: "'primary'", description: 'Progress bar color' },
        { name: 'size', type: "'xs' | 'sm' | 'md' | 'lg' | 'xl'", default: "'md'", description: 'Height of the progress bar' },
        { name: 'showLabel', type: 'boolean', default: 'false', description: 'Show progress label' },
        { name: 'label', type: 'string | null', default: 'null', description: 'Custom label text' },
        { name: 'labelPosition', type: "'top' | 'bottom' | 'inside'", default: "'top'", description: 'Label position' },
        { name: 'showValue', type: 'boolean', default: 'true', description: 'Show percentage value when showLabel is true' },
        { name: 'valueFormat', type: "'percent' | 'fraction' | 'value'", default: "'percent'", description: 'Value display format' },
        { name: 'striped', type: 'boolean', default: 'false', description: 'Add striped pattern' },
        { name: 'animated', type: 'boolean', default: 'false', description: 'Animate the stripes' },
        { name: 'indeterminate', type: 'boolean', default: 'false', description: 'Show indeterminate loading state' },
        { name: 'rounded', type: 'boolean', default: 'true', description: 'Rounded corners' },
        { name: 'class', type: 'string', default: "''", description: 'Additional CSS classes' },
    ]) }}

    {# With Label #}
    {% set labelPreview %}
        <div class="max-w-lg space-y-4">
            <twig:ui:progress :value="60" showLabel />
            <twig:ui:progress :value="40" showLabel label="Uploading..." />
        </div>
    {% endset %}
    {% set labelCode %}{% verbatim %}<twig:ui:progress :value="60" showLabel />
<twig:ui:progress :value="40" showLabel label="Uploading..." />{% endverbatim %}{% endset %}
    {{ ui.story('With Label', labelPreview, labelCode) }}

    {# Color Variants #}
    {% set colorsPreview %}
        <div class="max-w-lg space-y-3">
            <div>
                <span class="text-xs text-gray-500 mb-1 block">Primary</span>
                <twig:ui:progress :value="60" color="primary" />
            </div>
            <div>
                <span class="text-xs text-gray-500 mb-1 block">Secondary</span>
                <twig:ui:progress :value="60" color="secondary" />
            </div>
            <div>
                <span class="text-xs text-gray-500 mb-1 block">Success</span>
                <twig:ui:progress :value="60" color="success" />
            </div>
            <div>
                <span class="text-xs text-gray-500 mb-1 block">Warning</span>
                <twig:ui:progress :value="60" color="warning" />
            </div>
            <div>
                <span class="text-xs text-gray-500 mb-1 block">Danger</span>
                <twig:ui:progress :value="60" color="danger" />
            </div>
            <div>
                <span class="text-xs text-gray-500 mb-1 block">Info</span>
                <twig:ui:progress :value="60" color="info" />
            </div>
            <div>
                <span class="text-xs text-gray-500 mb-1 block">Neutral</span>
                <twig:ui:progress :value="60" color="neutral" />
            </div>
        </div>
    {% endset %}
    {% set colorsCode %}{% verbatim %}<twig:ui:progress :value="60" color="primary" />
<twig:ui:progress :value="60" color="secondary" />
<twig:ui:progress :value="60" color="success" />
<twig:ui:progress :value="60" color="warning" />
<twig:ui:progress :value="60" color="danger" />
<twig:ui:progress :value="60" color="info" />
<twig:ui:progress :value="60" color="neutral" />{% endverbatim %}{% endset %}
    {{ ui.story('Color Variants', colorsPreview, colorsCode) }}

    {# Sizes #}
    {% set sizesPreview %}
        <div class="max-w-lg space-y-4">
            <div>
                <span class="text-xs text-gray-500 mb-1 block">Extra Small (xs)</span>
                <twig:ui:progress :value="60" size="xs" />
            </div>
            <div>
                <span class="text-xs text-gray-500 mb-1 block">Small (sm)</span>
                <twig:ui:progress :value="60" size="sm" />
            </div>
            <div>
                <span class="text-xs text-gray-500 mb-1 block">Medium (md)</span>
                <twig:ui:progress :value="60" size="md" />
            </div>
            <div>
                <span class="text-xs text-gray-500 mb-1 block">Large (lg)</span>
                <twig:ui:progress :value="60" size="lg" />
            </div>
            <div>
                <span class="text-xs text-gray-500 mb-1 block">Extra Large (xl)</span>
                <twig:ui:progress :value="60" size="xl" />
            </div>
        </div>
    {% endset %}
    {% set sizesCode %}{% verbatim %}<twig:ui:progress :value="60" size="xs" />
<twig:ui:progress :value="60" size="sm" />
<twig:ui:progress :value="60" size="md" />
<twig:ui:progress :value="60" size="lg" />
<twig:ui:progress :value="60" size="xl" />{% endverbatim %}{% endset %}
    {{ ui.story('Sizes', sizesPreview, sizesCode) }}

    {# Label Positions #}
    {% set labelPositionPreview %}
        <div class="max-w-lg space-y-6">
            <div>
                <span class="text-xs text-gray-500 mb-2 block">Top (default)</span>
                <twig:ui:progress :value="60" showLabel labelPosition="top" />
            </div>
            <div>
                <span class="text-xs text-gray-500 mb-2 block">Bottom</span>
                <twig:ui:progress :value="60" showLabel labelPosition="bottom" />
            </div>
            <div>
                <span class="text-xs text-gray-500 mb-2 block">Inside (large size)</span>
                <twig:ui:progress :value="60" size="lg" showLabel labelPosition="inside" />
            </div>
        </div>
    {% endset %}
    {% set labelPositionCode %}{% verbatim %}<twig:ui:progress :value="60" showLabel labelPosition="top" />
<twig:ui:progress :value="60" showLabel labelPosition="bottom" />
<twig:ui:progress :value="60" size="lg" showLabel labelPosition="inside" />{% endverbatim %}{% endset %}
    {{ ui.story('Label Positions', labelPositionPreview, labelPositionCode) }}

    {# Value Formats #}
    {% set valueFormatPreview %}
        <div class="max-w-lg space-y-4">
            <div>
                <span class="text-xs text-gray-500 mb-1 block">Percent (default)</span>
                <twig:ui:progress :value="45" :max="100" showLabel valueFormat="percent" />
            </div>
            <div>
                <span class="text-xs text-gray-500 mb-1 block">Fraction</span>
                <twig:ui:progress :value="45" :max="100" showLabel valueFormat="fraction" />
            </div>
            <div>
                <span class="text-xs text-gray-500 mb-1 block">Value Only</span>
                <twig:ui:progress :value="45" :max="100" showLabel valueFormat="value" />
            </div>
        </div>
    {% endset %}
    {% set valueFormatCode %}{% verbatim %}<twig:ui:progress :value="45" :max="100" showLabel valueFormat="percent" />
<twig:ui:progress :value="45" :max="100" showLabel valueFormat="fraction" />
<twig:ui:progress :value="45" :max="100" showLabel valueFormat="value" />{% endverbatim %}{% endset %}
    {{ ui.story('Value Formats', valueFormatPreview, valueFormatCode) }}

    {# Striped & Animated #}
    {% set stripedPreview %}
        <div class="max-w-lg space-y-4">
            <div>
                <span class="text-xs text-gray-500 mb-1 block">Striped</span>
                <twig:ui:progress :value="60" striped />
            </div>
            <div>
                <span class="text-xs text-gray-500 mb-1 block">Striped + Animated</span>
                <twig:ui:progress :value="60" striped animated />
            </div>
        </div>
    {% endset %}
    {% set stripedCode %}{% verbatim %}<twig:ui:progress :value="60" striped />
<twig:ui:progress :value="60" striped animated />{% endverbatim %}{% endset %}
    {{ ui.story('Striped & Animated', stripedPreview, stripedCode) }}

    {# Indeterminate #}
    {% set indeterminatePreview %}
        <div class="max-w-lg space-y-4">
            <twig:ui:progress indeterminate />
            <twig:ui:progress indeterminate color="success" />
        </div>
    {% endset %}
    {% set indeterminateCode %}{% verbatim %}<twig:ui:progress indeterminate />
<twig:ui:progress indeterminate color="success" />{% endverbatim %}{% endset %}
    {{ ui.story('Indeterminate', indeterminatePreview, indeterminateCode) }}

    {# Custom Max Value #}
    {% set customMaxPreview %}
        <div class="max-w-lg">
            <twig:ui:progress :value="7" :max="10" showLabel label="Steps Completed" valueFormat="fraction" />
        </div>
    {% endset %}
    {% set customMaxCode %}{% verbatim %}<twig:ui:progress :value="7" :max="10" showLabel label="Steps Completed" valueFormat="fraction" />{% endverbatim %}{% endset %}
    {{ ui.story('Custom Max Value', customMaxPreview, customMaxCode) }}

    {# Practical Examples #}
    {% set examplesPreview %}
        <div class="max-w-lg space-y-6">
            <div>
                <span class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2 block">File Upload</span>
                <twig:ui:progress :value="73" color="primary" showLabel label="Uploading file..." />
            </div>
            <div>
                <span class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2 block">Storage Used</span>
                <twig:ui:progress :value="85" color="warning" showLabel label="Storage" />
            </div>
            <div>
                <span class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2 block">Task Progress</span>
                <twig:ui:progress :value="100" color="success" showLabel label="Complete!" />
            </div>
        </div>
    {% endset %}
    {% set examplesCode %}{% verbatim %}<twig:ui:progress :value="73" color="primary" showLabel label="Uploading file..." />
<twig:ui:progress :value="85" color="warning" showLabel label="Storage" />
<twig:ui:progress :value="100" color="success" showLabel label="Complete!" />{% endverbatim %}{% endset %}
    {{ ui.story('Practical Examples', examplesPreview, examplesCode) }}
</div>
