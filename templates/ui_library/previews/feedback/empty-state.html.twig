{% import '@Ui/ui_library/_macros.html.twig' as ui %}

<div class="space-y-6">
    {# Props Documentation #}
    {{ ui.props([
        { name: 'icon', type: 'string', default: "'lucide:inbox'", description: 'Icon name (Iconify)' },
        { name: 'title', type: 'string | null', default: 'null', description: 'Title text' },
        { name: 'message', type: 'string', default: "'No results found'", description: 'Description message' },
        { name: 'size', type: "'sm' | 'md' | 'lg' | 'xl'", default: "'md'", description: 'Empty state size' },
        { name: 'variant', type: "'default' | 'card' | 'dashed'", default: "'default'", description: 'Visual style variant' },
        { name: 'class', type: 'string', default: "''", description: 'Additional CSS classes' },
    ]) }}

    {# Slots Documentation #}
    {{ ui.slots([
        { name: 'icon', description: 'Custom icon content' },
        { name: 'title', description: 'Title content (alternative to title prop)' },
        { name: 'message', description: 'Message content (alternative to message prop)' },
        { name: 'action', description: 'Primary action button' },
        { name: 'secondaryAction', description: 'Secondary action button' },
    ]) }}

    {# Basic Empty State #}
    {% set basicPreview %}
        <twig:ui:empty-state
            icon="lucide:inbox"
            title="No messages"
            message="You don't have any messages yet. Start a conversation!"
        >
            <twig:ui:button color="primary" icon="lucide:plus">New Message</twig:ui:button>
        </twig:ui:empty-state>
    {% endset %}
    {% set basicCode %}{% verbatim %}<twig:ui:empty-state
    icon="lucide:inbox"
    title="No messages"
    message="You don't have any messages yet. Start a conversation!"
>
    <twig:ui:button color="primary" icon="lucide:plus">New Message</twig:ui:button>
</twig:ui:empty-state>{% endverbatim %}{% endset %}
    {{ ui.story('Basic Empty State', basicPreview, basicCode) }}

    {# Search Empty State #}
    {% set searchPreview %}
        <twig:ui:empty-state
            icon="lucide:search"
            title="No results found"
            message="We couldn't find anything matching your search. Try different keywords."
        >
            <twig:ui:button variant="outline" color="neutral">Clear Search</twig:ui:button>
        </twig:ui:empty-state>
    {% endset %}
    {% set searchCode %}{% verbatim %}<twig:ui:empty-state
    icon="lucide:search"
    title="No results found"
    message="We couldn't find anything matching your search."
>
    <twig:ui:button variant="outline" color="neutral">Clear Search</twig:ui:button>
</twig:ui:empty-state>{% endverbatim %}{% endset %}
    {{ ui.story('Search Empty State', searchPreview, searchCode) }}

    {# Error State #}
    {% set errorPreview %}
        <twig:ui:empty-state
            icon="lucide:alert-circle"
            title="Something went wrong"
            message="We encountered an error while loading your data. Please try again."
        >
            <twig:ui:button color="primary">Try Again</twig:ui:button>
        </twig:ui:empty-state>
    {% endset %}
    {% set errorCode %}{% verbatim %}<twig:ui:empty-state
    icon="lucide:alert-circle"
    title="Something went wrong"
    message="We encountered an error while loading your data."
>
    <twig:ui:button color="primary">Try Again</twig:ui:button>
</twig:ui:empty-state>{% endverbatim %}{% endset %}
    {{ ui.story('Error State', errorPreview, errorCode) }}

    {# Card Variant #}
    {% set cardPreview %}
        <twig:ui:empty-state
            variant="card"
            icon="lucide:folder"
            title="No files"
            message="Upload your first file to get started."
        >
            <twig:ui:button color="primary" icon="lucide:upload">Upload File</twig:ui:button>
        </twig:ui:empty-state>
    {% endset %}
    {% set cardCode %}{% verbatim %}<twig:ui:empty-state
    variant="card"
    icon="lucide:folder"
    title="No files"
    message="Upload your first file to get started."
>
    <twig:ui:button color="primary" icon="lucide:upload">Upload File</twig:ui:button>
</twig:ui:empty-state>{% endverbatim %}{% endset %}
    {{ ui.story('Card Variant', cardPreview, cardCode) }}

    {# Dashed Variant #}
    {% set dashedPreview %}
        <twig:ui:empty-state
            variant="dashed"
            icon="lucide:image"
            title="No images"
            message="Drag and drop images here or click to browse."
        >
            <twig:ui:button variant="outline" color="primary" icon="lucide:plus">Add Images</twig:ui:button>
        </twig:ui:empty-state>
    {% endset %}
    {% set dashedCode %}{% verbatim %}<twig:ui:empty-state
    variant="dashed"
    icon="lucide:image"
    title="No images"
    message="Drag and drop images here or click to browse."
>
    <twig:ui:button variant="outline" color="primary" icon="lucide:plus">Add Images</twig:ui:button>
</twig:ui:empty-state>{% endverbatim %}{% endset %}
    {{ ui.story('Dashed Variant', dashedPreview, dashedCode) }}

    {# Sizes #}
    {% set sizesPreview %}
        <div class="space-y-6">
            <div>
                <span class="text-xs text-gray-500 mb-2 block">Small</span>
                <twig:ui:empty-state size="sm" icon="lucide:inbox" title="No items" message="Your list is empty." />
            </div>
            <div>
                <span class="text-xs text-gray-500 mb-2 block">Medium (default)</span>
                <twig:ui:empty-state size="md" icon="lucide:inbox" title="No items" message="Your list is empty." />
            </div>
            <div>
                <span class="text-xs text-gray-500 mb-2 block">Large</span>
                <twig:ui:empty-state size="lg" icon="lucide:inbox" title="No items" message="Your list is empty." />
            </div>
        </div>
    {% endset %}
    {% set sizesCode %}{% verbatim %}<twig:ui:empty-state size="sm" icon="lucide:inbox" title="No items" message="Your list is empty." />
<twig:ui:empty-state size="md" icon="lucide:inbox" title="No items" message="Your list is empty." />
<twig:ui:empty-state size="lg" icon="lucide:inbox" title="No items" message="Your list is empty." />{% endverbatim %}{% endset %}
    {{ ui.story('Sizes', sizesPreview, sizesCode) }}

    {# With Multiple Actions #}
    {% set actionsPreview %}
        <twig:ui:empty-state
            icon="lucide:users"
            title="No team members"
            message="Invite team members to collaborate on this project."
        >
            <twig:block name="action">
                <twig:ui:button color="primary" icon="lucide:user-plus">Invite Members</twig:ui:button>
            </twig:block>
            <twig:block name="secondaryAction">
                <twig:ui:button variant="ghost" color="neutral">Import from CSV</twig:ui:button>
            </twig:block>
        </twig:ui:empty-state>
    {% endset %}
    {% set actionsCode %}{% verbatim %}<twig:ui:empty-state
    icon="lucide:users"
    title="No team members"
    message="Invite team members to collaborate."
>
    <twig:block name="action">
        <twig:ui:button color="primary" icon="lucide:user-plus">Invite Members</twig:ui:button>
    </twig:block>
    <twig:block name="secondaryAction">
        <twig:ui:button variant="ghost" color="neutral">Import from CSV</twig:ui:button>
    </twig:block>
</twig:ui:empty-state>{% endverbatim %}{% endset %}
    {{ ui.story('With Multiple Actions', actionsPreview, actionsCode) }}

    {# Message Only (No Title) #}
    {% set messageOnlyPreview %}
        <twig:ui:empty-state
            size="sm"
            icon="lucide:file-text"
            message="No documents to display."
        />
    {% endset %}
    {% set messageOnlyCode %}{% verbatim %}<twig:ui:empty-state
    size="sm"
    icon="lucide:file-text"
    message="No documents to display."
/>{% endverbatim %}{% endset %}
    {{ ui.story('Message Only (No Title)', messageOnlyPreview, messageOnlyCode) }}
</div>
