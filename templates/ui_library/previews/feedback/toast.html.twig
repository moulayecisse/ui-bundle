{% import '@Ui/ui_library/_macros.html.twig' as ui %}

<div class="space-y-6">
    {# Props Documentation #}
    {{ ui.props([
        { name: 'type', type: "'info' | 'success' | 'warning' | 'error' | 'default'", default: "'info'", description: 'Toast type (determines color and icon)' },
        { name: 'variant', type: "'default' | 'solid' | 'minimal'", default: "'default'", description: 'Toast style variant' },
        { name: 'message', type: 'string', default: "''", description: 'Toast message content' },
        { name: 'title', type: 'string | null', default: 'null', description: 'Optional toast title' },
        { name: 'closable', type: 'boolean', default: 'true', description: 'Show close button' },
        { name: 'duration', type: 'number', default: '5000', description: 'Auto-dismiss duration in ms (0 = no auto-dismiss)' },
        { name: 'icon', type: 'string | null', default: 'null', description: 'Custom icon (overrides type default)' },
        { name: 'showIcon', type: 'boolean', default: 'true', description: 'Show icon' },
        { name: 'actionLabel', type: 'string | null', default: 'null', description: 'Action button label' },
        { name: 'actionUrl', type: 'string | null', default: 'null', description: 'Action button URL' },
        { name: 'class', type: 'string', default: "''", description: 'Additional CSS classes' },
    ]) }}

    {# Slots Documentation #}
    {{ ui.slots([
        { name: 'message', description: 'Toast message content (alternative to message prop)' },
        { name: 'title', description: 'Toast title (alternative to title prop)' },
        { name: 'action', description: 'Custom action content' },
    ]) }}

    {# Toast Types #}
    {% set typesPreview %}
        <div class="space-y-3 max-w-sm">
            <twig:ui:toast type="info" message="This is an informational message." />
            <twig:ui:toast type="success" message="Operation completed successfully!" />
            <twig:ui:toast type="warning" message="Please review your changes before proceeding." />
            <twig:ui:toast type="error" message="An error occurred. Please try again." />
            <twig:ui:toast type="default" message="This is a default notification." />
        </div>
    {% endset %}
    {% set typesCode %}{% verbatim %}<twig:ui:toast type="info" message="This is an informational message." />
<twig:ui:toast type="success" message="Operation completed successfully!" />
<twig:ui:toast type="warning" message="Please review your changes before proceeding." />
<twig:ui:toast type="error" message="An error occurred. Please try again." />
<twig:ui:toast type="default" message="This is a default notification." />{% endverbatim %}{% endset %}
    {{ ui.story('Toast Types', typesPreview, typesCode) }}

    {# With Title #}
    {% set titlePreview %}
        <div class="space-y-3 max-w-sm">
            <twig:ui:toast type="success" title="Success!" message="Your profile has been updated." />
            <twig:ui:toast type="error" title="Error" message="Failed to save changes. Please try again." />
            <twig:ui:toast type="info" title="New Update" message="A new version is available for download." />
        </div>
    {% endset %}
    {% set titleCode %}{% verbatim %}<twig:ui:toast type="success" title="Success!" message="Your profile has been updated." />
<twig:ui:toast type="error" title="Error" message="Failed to save changes." />
<twig:ui:toast type="info" title="New Update" message="A new version is available." />{% endverbatim %}{% endset %}
    {{ ui.story('With Title', titlePreview, titleCode) }}

    {# Solid Variant #}
    {% set solidPreview %}
        <div class="space-y-3 max-w-sm">
            <twig:ui:toast type="info" variant="solid" message="Solid info toast." />
            <twig:ui:toast type="success" variant="solid" message="Solid success toast." />
            <twig:ui:toast type="warning" variant="solid" message="Solid warning toast." />
            <twig:ui:toast type="error" variant="solid" message="Solid error toast." />
        </div>
    {% endset %}
    {% set solidCode %}{% verbatim %}<twig:ui:toast type="info" variant="solid" message="Solid info toast." />
<twig:ui:toast type="success" variant="solid" message="Solid success toast." />
<twig:ui:toast type="warning" variant="solid" message="Solid warning toast." />
<twig:ui:toast type="error" variant="solid" message="Solid error toast." />{% endverbatim %}{% endset %}
    {{ ui.story('Solid Variant', solidPreview, solidCode) }}

    {# Minimal Variant #}
    {% set minimalPreview %}
        <div class="space-y-3 max-w-sm">
            <twig:ui:toast type="info" variant="minimal" message="Minimal info toast." />
            <twig:ui:toast type="success" variant="minimal" message="Minimal success toast." />
        </div>
    {% endset %}
    {% set minimalCode %}{% verbatim %}<twig:ui:toast type="info" variant="minimal" message="Minimal info toast." />
<twig:ui:toast type="success" variant="minimal" message="Minimal success toast." />{% endverbatim %}{% endset %}
    {{ ui.story('Minimal Variant', minimalPreview, minimalCode) }}

    {# With Action #}
    {% set actionPreview %}
        <div class="space-y-3 max-w-sm">
            <twig:ui:toast type="info" title="New Message" message="You have a new message." actionLabel="View" actionUrl="#" />
            <twig:ui:toast type="warning" message="Your session will expire soon." actionLabel="Extend" actionUrl="#" />
        </div>
    {% endset %}
    {% set actionCode %}{% verbatim %}<twig:ui:toast type="info" title="New Message" message="You have a new message." actionLabel="View" actionUrl="#" />
<twig:ui:toast type="warning" message="Your session will expire soon." actionLabel="Extend" actionUrl="#" />{% endverbatim %}{% endset %}
    {{ ui.story('With Action', actionPreview, actionCode) }}

    {# Not Closable #}
    {% set notClosablePreview %}
        <div class="max-w-sm">
            <twig:ui:toast type="info" message="This toast cannot be dismissed manually." :closable="false" />
        </div>
    {% endset %}
    {% set notClosableCode %}{% verbatim %}<twig:ui:toast type="info" message="This toast cannot be dismissed." :closable="false" />{% endverbatim %}{% endset %}
    {{ ui.story('Not Closable', notClosablePreview, notClosableCode) }}

    {# Without Icon #}
    {% set noIconPreview %}
        <div class="max-w-sm">
            <twig:ui:toast type="info" message="This toast has no icon." :showIcon="false" />
        </div>
    {% endset %}
    {% set noIconCode %}{% verbatim %}<twig:ui:toast type="info" message="This toast has no icon." :showIcon="false" />{% endverbatim %}{% endset %}
    {{ ui.story('Without Icon', noIconPreview, noIconCode) }}

    {# Custom Icon #}
    {% set customIconPreview %}
        <div class="space-y-3 max-w-sm">
            <twig:ui:toast type="info" icon="lucide:bell" message="You have new notifications." />
            <twig:ui:toast type="success" icon="lucide:party-popper" message="Congratulations on your achievement!" />
        </div>
    {% endset %}
    {% set customIconCode %}{% verbatim %}<twig:ui:toast type="info" icon="lucide:bell" message="You have new notifications." />
<twig:ui:toast type="success" icon="lucide:party-popper" message="Congratulations!" />{% endverbatim %}{% endset %}
    {{ ui.story('Custom Icon', customIconPreview, customIconCode) }}

    {# Toast Container Example #}
    {% set containerPreview %}
        <div class="relative h-48 bg-gray-100 dark:bg-gray-900 rounded-lg overflow-hidden">
            <div class="absolute top-4 right-4 flex flex-col gap-2 w-80">
                <twig:ui:toast type="success" message="File uploaded successfully!" />
                <twig:ui:toast type="info" message="Processing your request..." />
            </div>
        </div>
    {% endset %}
    {% set containerCode %}{% verbatim %}<twig:ui:toast-container position="top-right" :toasts="[
    { type: 'success', message: 'File uploaded successfully!' },
    { type: 'info', message: 'Processing your request...' }
]" />{% endverbatim %}{% endset %}
    {{ ui.story('Toast Container Example', containerPreview, containerCode) }}
</div>
