{% import '@Ui/ui_library/_macros.html.twig' as ui %}

<div class="space-y-6">
    {# Props Documentation #}
    {{ ui.props([
        { name: 'variant', type: "'filled' | 'outline'", default: "'filled'", description: 'Alert style variant' },
        { name: 'color', type: "'primary' | 'secondary' | 'success' | 'warning' | 'danger' | 'info'", default: "'primary'", description: 'Alert color theme' },
        { name: 'size', type: "'sm' | 'md' | 'lg'", default: "'md'", description: 'Alert size' },
        { name: 'title', type: 'string', default: "''", description: 'Alert title' },
        { name: 'icon', type: 'boolean', default: 'true', description: 'Show default icon based on color' },
        { name: 'customIcon', type: 'string | null', default: 'null', description: 'Custom icon name (overrides default)' },
        { name: 'dismissible', type: 'boolean', default: 'false', description: 'Allow dismissing the alert' },
        { name: 'bordered', type: 'boolean', default: 'false', description: 'Add left border accent' },
        { name: 'class', type: 'string', default: "''", description: 'Additional CSS classes' },
    ]) }}

    {# Slots Documentation #}
    {{ ui.slots([
        { name: 'content', description: 'Alert content (default slot)' },
        { name: 'title', description: 'Alert title (alternative to title prop)' },
        { name: 'actions', description: 'Action buttons slot' },
    ]) }}

    {# All Colors - Filled Variant #}
    {% set filledPreview %}
        <div class="space-y-3">
            <twig:ui:alert color="primary" title="Primary">
                This is a primary alert message.
            </twig:ui:alert>
            <twig:ui:alert color="secondary" title="Secondary">
                This is a secondary alert message.
            </twig:ui:alert>
            <twig:ui:alert color="success" title="Success">
                Your changes have been saved successfully.
            </twig:ui:alert>
            <twig:ui:alert color="warning" title="Warning">
                Please review your input before submitting.
            </twig:ui:alert>
            <twig:ui:alert color="danger" title="Danger">
                Something went wrong. Please try again.
            </twig:ui:alert>
            <twig:ui:alert color="info" title="Information">
                This is an informational alert message.
            </twig:ui:alert>
        </div>
    {% endset %}
    {% set filledCode %}{% verbatim %}<twig:ui:alert color="primary" title="Primary">
    This is a primary alert message.
</twig:ui:alert>
<twig:ui:alert color="secondary" title="Secondary">
    This is a secondary alert message.
</twig:ui:alert>
<twig:ui:alert color="success" title="Success">
    Your changes have been saved successfully.
</twig:ui:alert>
<twig:ui:alert color="warning" title="Warning">
    Please review your input before submitting.
</twig:ui:alert>
<twig:ui:alert color="danger" title="Danger">
    Something went wrong. Please try again.
</twig:ui:alert>
<twig:ui:alert color="info" title="Information">
    This is an informational alert message.
</twig:ui:alert>{% endverbatim %}{% endset %}
    {{ ui.story('Filled Variant (default)', filledPreview, filledCode) }}

    {# Outline Variant #}
    {% set outlinePreview %}
        <div class="space-y-3">
            <twig:ui:alert variant="outline" color="primary" title="Primary">
                This is a primary outline alert.
            </twig:ui:alert>
            <twig:ui:alert variant="outline" color="success" title="Success">
                Operation completed successfully.
            </twig:ui:alert>
            <twig:ui:alert variant="outline" color="danger" title="Error">
                An error occurred during the operation.
            </twig:ui:alert>
        </div>
    {% endset %}
    {% set outlineCode %}{% verbatim %}<twig:ui:alert variant="outline" color="primary" title="Primary">
    This is a primary outline alert.
</twig:ui:alert>
<twig:ui:alert variant="outline" color="success" title="Success">
    Operation completed successfully.
</twig:ui:alert>
<twig:ui:alert variant="outline" color="danger" title="Error">
    An error occurred during the operation.
</twig:ui:alert>{% endverbatim %}{% endset %}
    {{ ui.story('Outline Variant', outlinePreview, outlineCode) }}

    {# With Border Accent #}
    {% set borderedPreview %}
        <div class="space-y-3">
            <twig:ui:alert color="info" title="Tip" bordered>
                Use the bordered style for important notices.
            </twig:ui:alert>
            <twig:ui:alert color="warning" title="Caution" bordered>
                This action cannot be undone.
            </twig:ui:alert>
        </div>
    {% endset %}
    {% set borderedCode %}{% verbatim %}<twig:ui:alert color="info" title="Tip" bordered>
    Use the bordered style for important notices.
</twig:ui:alert>
<twig:ui:alert color="warning" title="Caution" bordered>
    This action cannot be undone.
</twig:ui:alert>{% endverbatim %}{% endset %}
    {{ ui.story('With Border Accent', borderedPreview, borderedCode) }}

    {# Sizes #}
    {% set sizesPreview %}
        <div class="space-y-3">
            <twig:ui:alert color="info" title="Small Alert" size="sm">
                This is a small alert.
            </twig:ui:alert>
            <twig:ui:alert color="info" title="Medium Alert" size="md">
                This is a medium alert (default).
            </twig:ui:alert>
            <twig:ui:alert color="info" title="Large Alert" size="lg">
                This is a large alert with more padding.
            </twig:ui:alert>
        </div>
    {% endset %}
    {% set sizesCode %}{% verbatim %}<twig:ui:alert color="info" title="Small Alert" size="sm">
    This is a small alert.
</twig:ui:alert>
<twig:ui:alert color="info" title="Medium Alert" size="md">
    This is a medium alert (default).
</twig:ui:alert>
<twig:ui:alert color="info" title="Large Alert" size="lg">
    This is a large alert with more padding.
</twig:ui:alert>{% endverbatim %}{% endset %}
    {{ ui.story('Sizes', sizesPreview, sizesCode) }}

    {# Dismissible #}
    {% set dismissiblePreview %}
        <div class="space-y-3">
            <twig:ui:alert color="info" title="Dismissible Alert" dismissible>
                Click the X button to dismiss this alert.
            </twig:ui:alert>
            <twig:ui:alert color="success" title="Success" dismissible>
                Your settings have been saved.
            </twig:ui:alert>
        </div>
    {% endset %}
    {% set dismissibleCode %}{% verbatim %}<twig:ui:alert color="info" title="Dismissible Alert" dismissible>
    Click the X button to dismiss this alert.
</twig:ui:alert>
<twig:ui:alert color="success" title="Success" dismissible>
    Your settings have been saved.
</twig:ui:alert>{% endverbatim %}{% endset %}
    {{ ui.story('Dismissible', dismissiblePreview, dismissibleCode) }}

    {# With Custom Icon #}
    {% set iconPreview %}
        <div class="space-y-3">
            <twig:ui:alert color="info" customIcon="lucide:bell" title="Notification">
                You have new notifications.
            </twig:ui:alert>
            <twig:ui:alert color="primary" customIcon="lucide:sparkles" title="New Feature">
                Check out our latest feature update!
            </twig:ui:alert>
        </div>
    {% endset %}
    {% set iconCode %}{% verbatim %}<twig:ui:alert color="info" customIcon="lucide:bell" title="Notification">
    You have new notifications.
</twig:ui:alert>
<twig:ui:alert color="primary" customIcon="lucide:sparkles" title="New Feature">
    Check out our latest feature update!
</twig:ui:alert>{% endverbatim %}{% endset %}
    {{ ui.story('With Custom Icon', iconPreview, iconCode) }}

    {# Without Icon #}
    {% set noIconPreview %}
        <twig:ui:alert color="info" title="No Icon" :icon="false">
            This alert has no icon displayed.
        </twig:ui:alert>
    {% endset %}
    {% set noIconCode %}{% verbatim %}<twig:ui:alert color="info" title="No Icon" :icon="false">
    This alert has no icon displayed.
</twig:ui:alert>{% endverbatim %}{% endset %}
    {{ ui.story('Without Icon', noIconPreview, noIconCode) }}

    {# Content Only (No Title) #}
    {% set contentOnlyPreview %}
        <div class="space-y-3">
            <twig:ui:alert color="info">
                This is a simple alert without a title.
            </twig:ui:alert>
            <twig:ui:alert color="warning">
                Please save your work before leaving.
            </twig:ui:alert>
        </div>
    {% endset %}
    {% set contentOnlyCode %}{% verbatim %}<twig:ui:alert color="info">
    This is a simple alert without a title.
</twig:ui:alert>
<twig:ui:alert color="warning">
    Please save your work before leaving.
</twig:ui:alert>{% endverbatim %}{% endset %}
    {{ ui.story('Content Only (No Title)', contentOnlyPreview, contentOnlyCode) }}
</div>
