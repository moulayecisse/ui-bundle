{% import '@Ui/ui_library/_macros.html.twig' as ui %}

<div class="space-y-6">
    {# Info Alert #}
    {% set infoPreview %}
        <twig:ui:alert variant="info" title="Information">
            This is an informational alert message.
        </twig:ui:alert>
    {% endset %}
    {% set infoCode %}{% verbatim %}<twig:ui:alert variant="info" title="Information">
    This is an informational alert message.
</twig:ui:alert>{% endverbatim %}{% endset %}
    {{ ui.story('Info', infoPreview, infoCode) }}

    {# Success Alert #}
    {% set successPreview %}
        <twig:ui:alert variant="success" title="Success">
            Your changes have been saved successfully.
        </twig:ui:alert>
    {% endset %}
    {% set successCode %}{% verbatim %}<twig:ui:alert variant="success" title="Success">
    Your changes have been saved successfully.
</twig:ui:alert>{% endverbatim %}{% endset %}
    {{ ui.story('Success', successPreview, successCode) }}

    {# Warning Alert #}
    {% set warningPreview %}
        <twig:ui:alert variant="warning" title="Warning">
            Please review your input before submitting.
        </twig:ui:alert>
    {% endset %}
    {% set warningCode %}{% verbatim %}<twig:ui:alert variant="warning" title="Warning">
    Please review your input before submitting.
</twig:ui:alert>{% endverbatim %}{% endset %}
    {{ ui.story('Warning', warningPreview, warningCode) }}

    {# Error Alert #}
    {% set errorPreview %}
        <twig:ui:alert variant="error" title="Error">
            Something went wrong. Please try again.
        </twig:ui:alert>
    {% endset %}
    {% set errorCode %}{% verbatim %}<twig:ui:alert variant="error" title="Error">
    Something went wrong. Please try again.
</twig:ui:alert>{% endverbatim %}{% endset %}
    {{ ui.story('Error', errorPreview, errorCode) }}

    {# Dismissible Alert #}
    {% set dismissiblePreview %}
        <twig:ui:alert variant="info" title="Dismissible Alert" dismissible>
            Click the X button to dismiss this alert.
        </twig:ui:alert>
    {% endset %}
    {% set dismissibleCode %}{% verbatim %}<twig:ui:alert variant="info" title="Dismissible Alert" dismissible>
    Click the X button to dismiss this alert.
</twig:ui:alert>{% endverbatim %}{% endset %}
    {{ ui.story('Dismissible', dismissiblePreview, dismissibleCode) }}

    {# With Custom Icon #}
    {% set iconPreview %}
        <twig:ui:alert variant="info" icon="lucide:bell" title="Notification">
            You have new notifications.
        </twig:ui:alert>
    {% endset %}
    {% set iconCode %}{% verbatim %}<twig:ui:alert variant="info" icon="lucide:bell" title="Notification">
    You have new notifications.
</twig:ui:alert>{% endverbatim %}{% endset %}
    {{ ui.story('With Custom Icon', iconPreview, iconCode) }}
</div>
