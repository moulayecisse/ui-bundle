{% import '@Ui/ui_library/_macros.html.twig' as ui %}

<div class="space-y-6">
    {# Props Documentation #}
    {{ ui.props([
        { name: 'title', type: 'string', default: "''", description: 'Hero title text' },
        { name: 'subtitle', type: 'string | null', default: 'null', description: 'Subtitle text below title' },
        { name: 'badge', type: 'string | null', default: 'null', description: 'Badge text displayed above title' },
        { name: 'badgeIcon', type: 'string | null', default: 'null', description: 'SVG icon path for badge' },
        { name: 'showBlobs', type: 'boolean', default: 'true', description: 'Show animated background blobs' },
        { name: 'showWave', type: 'boolean', default: 'true', description: 'Show wave decoration at bottom' },
        { name: 'stats', type: 'array', default: '[]', description: 'Stats array: { label, value, icon? }' },
        { name: 'colorScheme', type: 'string', default: "'primary'", description: 'Color theme: primary, cyan, violet, emerald, rose, amber, blue, teal' },
        { name: 'class', type: 'string', default: "''", description: 'Additional CSS classes' },
    ]) }}

    {# Slots Documentation #}
    {{ ui.slots([
        { name: 'content', description: 'Additional content below stats' },
    ]) }}

    {# Basic Hero #}
    {% set basicPreview %}
        <div class="rounded-lg overflow-hidden">
            <twig:ui:layout:page-hero
                title="Welcome Back!"
                subtitle="Here's what's happening with your projects today"
            />
        </div>
    {% endset %}
    {% set basicCode %}{% verbatim %}<twig:ui:layout:page-hero
    title="Welcome Back!"
    subtitle="Here's what's happening with your projects today"
/>{% endverbatim %}{% endset %}
    {{ ui.story('Basic Hero', basicPreview, basicCode) }}

    {# With Badge #}
    {% set badgePreview %}
        <div class="rounded-lg overflow-hidden">
            <twig:ui:layout:page-hero
                title="Dashboard Overview"
                subtitle="Your analytics at a glance"
                badge="Pro Plan"
            />
        </div>
    {% endset %}
    {% set badgeCode %}{% verbatim %}<twig:ui:layout:page-hero
    title="Dashboard Overview"
    subtitle="Your analytics at a glance"
    badge="Pro Plan"
/>{% endverbatim %}{% endset %}
    {{ ui.story('With Badge', badgePreview, badgeCode) }}

    {# With Stats #}
    {% set statsPreview %}
        <div class="rounded-lg overflow-hidden">
            <twig:ui:layout:page-hero
                title="Monthly Report"
                subtitle="Performance metrics for this month"
                :stats="[
                    { label: 'Total Users', value: '12,543' },
                    { label: 'Revenue', value: '$45.2K' },
                    { label: 'Growth', value: '+23%' }
                ]"
            />
        </div>
    {% endset %}
    {% set statsCode %}{% verbatim %}<twig:ui:layout:page-hero
    title="Monthly Report"
    subtitle="Performance metrics for this month"
    :stats="[
        { label: 'Total Users', value: '12,543' },
        { label: 'Revenue', value: '$45.2K' },
        { label: 'Growth', value: '+23%' }
    ]"
/>{% endverbatim %}{% endset %}
    {{ ui.story('With Stats', statsPreview, statsCode) }}

    {# Different Color Schemes #}
    {% set colorsPreview %}
        <div class="space-y-4">
            <div class="rounded-lg overflow-hidden">
                <twig:ui:layout:page-hero title="Primary Theme" colorScheme="primary" :showWave="false" />
            </div>
            <div class="rounded-lg overflow-hidden">
                <twig:ui:layout:page-hero title="Violet Theme" colorScheme="violet" :showWave="false" />
            </div>
            <div class="rounded-lg overflow-hidden">
                <twig:ui:layout:page-hero title="Emerald Theme" colorScheme="emerald" :showWave="false" />
            </div>
            <div class="rounded-lg overflow-hidden">
                <twig:ui:layout:page-hero title="Rose Theme" colorScheme="rose" :showWave="false" />
            </div>
        </div>
    {% endset %}
    {% set colorsCode %}{% verbatim %}<twig:ui:layout:page-hero title="Primary Theme" colorScheme="primary" />
<twig:ui:layout:page-hero title="Violet Theme" colorScheme="violet" />
<twig:ui:layout:page-hero title="Emerald Theme" colorScheme="emerald" />
<twig:ui:layout:page-hero title="Rose Theme" colorScheme="rose" />{% endverbatim %}{% endset %}
    {{ ui.story('Color Schemes', colorsPreview, colorsCode) }}

    {# Without Decorations #}
    {% set simplePreview %}
        <div class="rounded-lg overflow-hidden">
            <twig:ui:layout:page-hero
                title="Simple Hero"
                subtitle="Clean and minimal"
                :showBlobs="false"
                :showWave="false"
            />
        </div>
    {% endset %}
    {% set simpleCode %}{% verbatim %}<twig:ui:layout:page-hero
    title="Simple Hero"
    subtitle="Clean and minimal"
    :showBlobs="false"
    :showWave="false"
/>{% endverbatim %}{% endset %}
    {{ ui.story('Without Decorations', simplePreview, simpleCode) }}
</div>
