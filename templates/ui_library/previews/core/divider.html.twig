{% import '@Ui/ui_library/_macros.html.twig' as ui %}

<div class="space-y-6">
    {# Props Documentation #}
    {{ ui.props([
        { name: 'orientation', type: "'horizontal' | 'vertical'", default: "'horizontal'", description: 'Divider direction' },
        { name: 'variant', type: "'solid' | 'dashed' | 'dotted'", default: "'solid'", description: 'Line style variant' },
        { name: 'size', type: "'sm' | 'md' | 'lg'", default: "'md'", description: 'Line thickness' },
        { name: 'label', type: 'string | null', default: 'null', description: 'Optional text label centered on the divider' },
        { name: 'color', type: "'default' | 'primary' | 'muted'", default: "'default'", description: 'Color scheme' },
        { name: 'class', type: 'string', default: "''", description: 'Additional CSS classes' },
    ]) }}

    {# Basic Divider #}
    {% set basicPreview %}
        <div class="space-y-4">
            <p class="text-gray-600 dark:text-gray-400">Content above the divider</p>
            <twig:ui:divider />
            <p class="text-gray-600 dark:text-gray-400">Content below the divider</p>
        </div>
    {% endset %}
    {% set basicCode %}{% verbatim %}<twig:ui:divider />{% endverbatim %}{% endset %}
    {{ ui.story('Basic Divider', basicPreview, basicCode) }}

    {# With Label #}
    {% set labelPreview %}
        <div class="space-y-4">
            <twig:ui:divider label="OR" />
            <twig:ui:divider label="Section Break" />
            <twig:ui:divider label="Continue reading" />
        </div>
    {% endset %}
    {% set labelCode %}{% verbatim %}<twig:ui:divider label="OR" />
<twig:ui:divider label="Section Break" />{% endverbatim %}{% endset %}
    {{ ui.story('With Label', labelPreview, labelCode) }}

    {# Size Options #}
    {% set sizesPreview %}
        <div class="space-y-6">
            <div>
                <p class="text-xs text-gray-500 mb-2">Small (sm)</p>
                <twig:ui:divider size="sm" />
            </div>
            <div>
                <p class="text-xs text-gray-500 mb-2">Medium (md) - default</p>
                <twig:ui:divider size="md" />
            </div>
            <div>
                <p class="text-xs text-gray-500 mb-2">Large (lg)</p>
                <twig:ui:divider size="lg" />
            </div>
        </div>
    {% endset %}
    {% set sizesCode %}{% verbatim %}<twig:ui:divider size="sm" />
<twig:ui:divider size="md" />
<twig:ui:divider size="lg" />{% endverbatim %}{% endset %}
    {{ ui.story('Size Options', sizesPreview, sizesCode) }}

    {# Variant Styles #}
    {% set variantsPreview %}
        <div class="space-y-6">
            <div>
                <p class="text-xs text-gray-500 mb-2">Solid (default)</p>
                <twig:ui:divider variant="solid" />
            </div>
            <div>
                <p class="text-xs text-gray-500 mb-2">Dashed</p>
                <twig:ui:divider variant="dashed" />
            </div>
            <div>
                <p class="text-xs text-gray-500 mb-2">Dotted</p>
                <twig:ui:divider variant="dotted" />
            </div>
        </div>
    {% endset %}
    {% set variantsCode %}{% verbatim %}<twig:ui:divider variant="solid" />
<twig:ui:divider variant="dashed" />
<twig:ui:divider variant="dotted" />{% endverbatim %}{% endset %}
    {{ ui.story('Variant Styles', variantsPreview, variantsCode) }}

    {# Color Options #}
    {% set colorsPreview %}
        <div class="space-y-6">
            <div>
                <p class="text-xs text-gray-500 mb-2">Default</p>
                <twig:ui:divider color="default" />
            </div>
            <div>
                <p class="text-xs text-gray-500 mb-2">Primary</p>
                <twig:ui:divider color="primary" />
            </div>
            <div>
                <p class="text-xs text-gray-500 mb-2">Muted</p>
                <twig:ui:divider color="muted" />
            </div>
        </div>
    {% endset %}
    {% set colorsCode %}{% verbatim %}<twig:ui:divider color="default" />
<twig:ui:divider color="primary" />
<twig:ui:divider color="muted" />{% endverbatim %}{% endset %}
    {{ ui.story('Color Options', colorsPreview, colorsCode) }}

    {# Vertical Orientation #}
    {% set verticalPreview %}
        <div class="flex items-center gap-4 h-20">
            <span class="text-gray-600 dark:text-gray-400">Left content</span>
            <twig:ui:divider orientation="vertical" />
            <span class="text-gray-600 dark:text-gray-400">Middle</span>
            <twig:ui:divider orientation="vertical" color="primary" />
            <span class="text-gray-600 dark:text-gray-400">Right content</span>
        </div>
    {% endset %}
    {% set verticalCode %}{% verbatim %}<div class="flex items-center gap-4 h-20">
    <span>Left content</span>
    <twig:ui:divider orientation="vertical" />
    <span>Middle</span>
    <twig:ui:divider orientation="vertical" color="primary" />
    <span>Right content</span>
</div>{% endverbatim %}{% endset %}
    {{ ui.story('Vertical Orientation', verticalPreview, verticalCode) }}

    {# Combined Options #}
    {% set combinedPreview %}
        <div class="space-y-6">
            <twig:ui:divider label="Primary Large" color="primary" size="lg" />
            <twig:ui:divider label="Dashed with Label" variant="dashed" />
            <div class="flex items-center h-16">
                <span class="text-gray-600 dark:text-gray-400">Item 1</span>
                <twig:ui:divider orientation="vertical" size="lg" color="primary" />
                <span class="text-gray-600 dark:text-gray-400">Item 2</span>
            </div>
        </div>
    {% endset %}
    {% set combinedCode %}{% verbatim %}<twig:ui:divider label="Primary Large" color="primary" size="lg" />
<twig:ui:divider label="Dashed with Label" variant="dashed" />{% endverbatim %}{% endset %}
    {{ ui.story('Combined Options', combinedPreview, combinedCode) }}
</div>
