{% import '@Ui/ui_library/_macros.html.twig' as ui %}

<div class="space-y-6">
    {# Props Documentation #}
    {{ ui.props([
        { name: 'items', type: 'array', default: '[]', description: 'Array of timeline items with title, description, date, status, icon' },
        { name: 'orientation', type: "'vertical' | 'horizontal'", default: "'vertical'", description: 'Timeline orientation' },
        { name: 'class', type: 'string', default: "''", description: 'Additional CSS classes' },
    ]) }}

    {# Item Structure #}
    <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4 mb-6">
        <h4 class="font-semibold text-blue-900 dark:text-blue-100 mb-2">Item Structure</h4>
        <pre class="text-xs text-blue-800 dark:text-blue-200 bg-blue-100 dark:bg-blue-800 p-2 rounded">{{ '{
  title: "Step Title",
  description: "Optional description",
  date: "Jan 1, 2024",
  status: "completed|current|error|upcoming",
  icon: "heroicons:icon-name"
}' }}</pre>
    </div>

    {# Vertical Timeline #}
    {% set verticalPreview %}
        <twig:ui:timeline :items="[
            { title: 'Order Placed', description: 'Your order #12345 has been placed successfully.', date: 'Jan 1, 2024', status: 'completed' },
            { title: 'Processing', description: 'Your order is being processed.', date: 'Jan 2, 2024', status: 'completed' },
            { title: 'Shipped', description: 'Your order has been shipped via Express.', date: 'Jan 3, 2024', status: 'current' },
            { title: 'Delivered', description: 'Expected delivery.', date: 'Jan 5, 2024', status: 'upcoming' }
        ]" />
    {% endset %}
    {% set verticalCode %}&lt;twig:ui:timeline :items="[
    { title: 'Order Placed', date: 'Jan 1, 2024', status: 'completed' },
    { title: 'Processing', date: 'Jan 2, 2024', status: 'completed' },
    { title: 'Shipped', date: 'Jan 3, 2024', status: 'current' },
    { title: 'Delivered', date: 'Jan 5, 2024', status: 'upcoming' }
]" /&gt;{% endset %}
    {{ ui.story('Vertical Timeline', verticalPreview, verticalCode) }}

    {# Horizontal Timeline #}
    {% set horizontalPreview %}
        <twig:ui:timeline orientation="horizontal" :items="[
            { title: 'Step 1', status: 'completed' },
            { title: 'Step 2', status: 'completed' },
            { title: 'Step 3', status: 'current' },
            { title: 'Step 4', status: 'upcoming' }
        ]" />
    {% endset %}
    {% set horizontalCode %}&lt;twig:ui:timeline orientation="horizontal" :items="[
    { title: 'Step 1', status: 'completed' },
    { title: 'Step 2', status: 'completed' },
    { title: 'Step 3', status: 'current' },
    { title: 'Step 4', status: 'upcoming' }
]" /&gt;{% endset %}
    {{ ui.story('Horizontal Timeline', horizontalPreview, horizontalCode) }}

    {# With Error State #}
    {% set errorPreview %}
        <twig:ui:timeline :items="[
            { title: 'Payment Initiated', status: 'completed', date: 'Jan 1' },
            { title: 'Processing', status: 'completed', date: 'Jan 2' },
            { title: 'Payment Failed', status: 'error', description: 'Insufficient funds', date: 'Jan 3' }
        ]" />
    {% endset %}
    {% set errorCode %}&lt;twig:ui:timeline :items="[
    { title: 'Payment Initiated', status: 'completed' },
    { title: 'Processing', status: 'completed' },
    { title: 'Payment Failed', status: 'error', description: 'Insufficient funds' }
]" /&gt;{% endset %}
    {{ ui.story('With Error State', errorPreview, errorCode) }}

    {# With Custom Icons #}
    {% set iconsPreview %}
        <twig:ui:timeline :items="[
            { title: 'Account Created', icon: 'heroicons:user-plus', status: 'completed' },
            { title: 'Email Verified', icon: 'heroicons:envelope', status: 'completed' },
            { title: 'Profile Setup', icon: 'heroicons:cog-6-tooth', status: 'current' },
            { title: 'Complete', icon: 'heroicons:rocket-launch', status: 'upcoming' }
        ]" />
    {% endset %}
    {% set iconsCode %}&lt;twig:ui:timeline :items="[
    { title: 'Account Created', icon: 'heroicons:user-plus', status: 'completed' },
    { title: 'Email Verified', icon: 'heroicons:envelope', status: 'completed' },
    { title: 'Profile Setup', icon: 'heroicons:cog-6-tooth', status: 'current' }
]" /&gt;{% endset %}
    {{ ui.story('With Custom Icons', iconsPreview, iconsCode) }}
</div>
