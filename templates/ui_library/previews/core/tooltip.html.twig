<div class="space-y-8">
    {# Basic Tooltip #}
    <div>
        <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">Basic Tooltip</h3>
        <div class="flex gap-4">
            <twig:Ui:tooltip content="This is a tooltip">
                <twig:Ui:button white>Hover me</twig:Ui:button>
            </twig:Ui:tooltip>
        </div>
    </div>

    {# Positions #}
    <div>
        <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">Positions</h3>
        <div class="flex flex-wrap gap-4">
            <twig:Ui:tooltip content="Top tooltip" position="top">
                <twig:Ui:button white>Top</twig:Ui:button>
            </twig:Ui:tooltip>
            <twig:Ui:tooltip content="Bottom tooltip" position="bottom">
                <twig:Ui:button white>Bottom</twig:Ui:button>
            </twig:Ui:tooltip>
            <twig:Ui:tooltip content="Left tooltip" position="left">
                <twig:Ui:button white>Left</twig:Ui:button>
            </twig:Ui:tooltip>
            <twig:Ui:tooltip content="Right tooltip" position="right">
                <twig:Ui:button white>Right</twig:Ui:button>
            </twig:Ui:tooltip>
        </div>
    </div>
</div>
