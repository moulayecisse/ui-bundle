<div class="space-y-8">
    {# Array-based Syntax #}
    <div>
        <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">Array-based Syntax</h3>
        <twig:ui:stepper
            :currentStep="1"
            :steps="[
                { title: 'Account', description: 'Create your account' },
                { title: 'Profile', description: 'Set up your profile' },
                { title: 'Review', description: 'Review and submit' }
            ]"
        />
    </div>

    {# Nested Item Syntax #}
    <div>
        <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">Nested Item Syntax</h3>
        <twig:ui:stepper>
            <twig:ui:stepper:item :step="1" title="Cart" completed />
            <twig:ui:stepper:item :step="2" title="Shipping" completed />
            <twig:ui:stepper:item :step="3" title="Payment" active />
            <twig:ui:stepper:item :step="4" title="Confirm" />
        </twig:ui:stepper>
    </div>

    {# With Icons (Array) #}
    <div>
        <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">With Icons (Array)</h3>
        <twig:ui:stepper
            :currentStep="1"
            :steps="[
                { title: 'Details', icon: 'lucide:user' },
                { title: 'Address', icon: 'lucide:map-pin' },
                { title: 'Payment', icon: 'lucide:credit-card' }
            ]"
        />
    </div>

    {# With Icons (Nested) #}
    <div>
        <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">With Icons (Nested)</h3>
        <twig:ui:stepper>
            <twig:ui:stepper:item title="Details" icon="lucide:user" completed />
            <twig:ui:stepper:item title="Address" icon="lucide:map-pin" active />
            <twig:ui:stepper:item title="Payment" icon="lucide:credit-card" />
        </twig:ui:stepper>
    </div>
</div>
