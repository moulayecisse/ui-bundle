<div class="space-y-8">
    {# Horizontal Stepper #}
    <div>
        <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">Horizontal Stepper</h3>
        <twig:ui:stepper currentStep="2">
            <twig:ui:stepper-item step="1" title="Account" description="Create your account" />
            <twig:ui:stepper-item step="2" title="Profile" description="Set up your profile" />
            <twig:ui:stepper-item step="3" title="Review" description="Review and submit" />
        </twig:ui:stepper>
    </div>

    {# Completed Steps #}
    <div>
        <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">With Completed Steps</h3>
        <twig:ui:stepper currentStep="3">
            <twig:ui:stepper-item step="1" title="Cart" completed />
            <twig:ui:stepper-item step="2" title="Shipping" completed />
            <twig:ui:stepper-item step="3" title="Payment" />
            <twig:ui:stepper-item step="4" title="Confirm" />
        </twig:ui:stepper>
    </div>

    {# With Icons #}
    <div>
        <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">With Icons</h3>
        <twig:ui:stepper currentStep="2">
            <twig:ui:stepper-item step="1" title="Details" icon="lucide:user" completed />
            <twig:ui:stepper-item step="2" title="Address" icon="lucide:map-pin" />
            <twig:ui:stepper-item step="3" title="Payment" icon="lucide:credit-card" />
        </twig:ui:stepper>
    </div>
</div>
