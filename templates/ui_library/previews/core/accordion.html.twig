{% import '@Ui/ui_library/_macros.html.twig' as ui %}

<div class="space-y-6">
    {# Props Documentation #}
    {{ ui.props([
        { name: 'class', type: 'string', default: "''", description: 'Additional CSS classes for the accordion container' },
        { name: 'active', type: 'string | null', default: 'null', description: 'ID of initially open item' },
        { name: 'multiple', type: 'boolean', default: 'false', description: 'Allow multiple items to be open simultaneously' },
        { name: 'duration', type: 'number', default: '300', description: 'Animation duration in milliseconds' },
        { name: 'easing', type: 'string', default: "'ease-out'", description: 'Animation easing function' },
        { name: 'variant', type: "'default' | 'bordered' | 'separated' | 'card'", default: "'default'", description: 'Visual style variant' },
        { name: 'size', type: "'sm' | 'md' | 'lg'", default: "'md'", description: 'Accordion item size' },
        { name: 'iconPosition', type: "'left' | 'right'", default: "'right'", description: 'Position of expand/collapse icon' },
        { name: 'flush', type: 'boolean', default: 'false', description: 'Remove borders between items' },
    ]) }}

    {# Slots Documentation #}
    {{ ui.slots([
        { name: 'content', description: 'Accordion items using &lt;twig:ui:accordion:item&gt; components' },
    ]) }}

    {# Related Components #}
    <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4 mb-6">
        <h4 class="font-semibold text-blue-900 dark:text-blue-100 mb-2">Related Components</h4>
        <ul class="text-sm text-blue-800 dark:text-blue-200 space-y-1">
            <li><code class="bg-blue-100 dark:bg-blue-800 px-1 rounded">accordion:item</code> - Individual accordion panel with title, icon, badge, disabled props</li>
        </ul>
    </div>

    {# Basic Accordion - Static Preview #}
    {% set basicPreview %}
        <div class="w-full">
            <div class="block border-b border-gray-800/10 dark:border-gray-200/10 pb-4 first:pt-0">
                <h2>
                    <button type="button" class="group flex w-full items-center justify-between text-left font-medium text-gray-800 dark:text-gray-200">
                        <span class="flex-1">What is Vue.js?</span>
                        <twig:ux:icon name="heroicons:chevron-up-20-solid" class="size-5 text-gray-300 dark:text-gray-700 transition-transform" />
                    </button>
                </h2>
                <div class="pt-2 text-gray-600 dark:text-gray-400">
                    Vue.js is a progressive JavaScript framework for building user interfaces.
                </div>
            </div>
            <div class="block border-b border-gray-800/10 dark:border-gray-200/10 pb-4 pt-4">
                <h2>
                    <button type="button" class="group flex w-full items-center justify-between text-left font-medium text-gray-800 dark:text-gray-200">
                        <span class="flex-1">How do I get started?</span>
                        <twig:ux:icon name="heroicons:chevron-up-20-solid" class="size-5 text-gray-300 dark:text-gray-700 transition-transform rotate-180" />
                    </button>
                </h2>
            </div>
            <div class="block pb-4 pt-4 last:border-b-0">
                <h2>
                    <button type="button" class="group flex w-full items-center justify-between text-left font-medium text-gray-800 dark:text-gray-200">
                        <span class="flex-1">What about TypeScript support?</span>
                        <twig:ux:icon name="heroicons:chevron-up-20-solid" class="size-5 text-gray-300 dark:text-gray-700 transition-transform rotate-180" />
                    </button>
                </h2>
            </div>
        </div>
    {% endset %}
    {% set basicCode %}&lt;twig:ui:accordion&gt;
    &lt;twig:ui:accordion:item title="What is Vue.js?"&gt;
        Vue.js is a progressive JavaScript framework...
    &lt;/twig:ui:accordion:item&gt;
    &lt;twig:ui:accordion:item title="How do I get started?"&gt;
        You can start by reading the documentation...
    &lt;/twig:ui:accordion:item&gt;
&lt;/twig:ui:accordion&gt;{% endset %}
    {{ ui.story('Basic Accordion', basicPreview, basicCode) }}

    {# With Icons - Static Preview #}
    {% set iconsPreview %}
        <div class="w-full">
            <div class="block border-b border-gray-800/10 dark:border-gray-200/10 pb-4 first:pt-0">
                <h2>
                    <button type="button" class="group flex w-full items-center justify-between text-left font-medium text-gray-800 dark:text-gray-200">
                        <div class="flex items-center gap-3 flex-1">
                            <twig:ux:icon name="heroicons:user" class="size-5 shrink-0 text-gray-400 dark:text-gray-500" />
                            <span class="flex-1">Account Settings</span>
                        </div>
                        <twig:ux:icon name="heroicons:chevron-up-20-solid" class="size-5 text-gray-300 dark:text-gray-700" />
                    </button>
                </h2>
                <div class="pt-2 text-gray-600 dark:text-gray-400 pl-8">
                    Manage your account preferences and profile information.
                </div>
            </div>
            <div class="block border-b border-gray-800/10 dark:border-gray-200/10 pb-4 pt-4">
                <h2>
                    <button type="button" class="group flex w-full items-center justify-between text-left font-medium text-gray-800 dark:text-gray-200">
                        <div class="flex items-center gap-3 flex-1">
                            <twig:ux:icon name="heroicons:shield-check" class="size-5 shrink-0 text-gray-400 dark:text-gray-500" />
                            <span class="flex-1">Security</span>
                        </div>
                        <twig:ux:icon name="heroicons:chevron-up-20-solid" class="size-5 text-gray-300 dark:text-gray-700 rotate-180" />
                    </button>
                </h2>
            </div>
        </div>
    {% endset %}
    {% set iconsCode %}&lt;twig:ui:accordion&gt;
    &lt;twig:ui:accordion:item title="Account Settings" icon="heroicons:user"&gt;
        Content...
    &lt;/twig:ui:accordion:item&gt;
    &lt;twig:ui:accordion:item title="Security" icon="heroicons:shield-check"&gt;
        Content...
    &lt;/twig:ui:accordion:item&gt;
&lt;/twig:ui:accordion&gt;{% endset %}
    {{ ui.story('With Icons', iconsPreview, iconsCode) }}

    {# With Badges - Static Preview #}
    {% set badgesPreview %}
        <div class="w-full">
            <div class="block border-b border-gray-800/10 dark:border-gray-200/10 pb-4 first:pt-0">
                <h2>
                    <button type="button" class="group flex w-full items-center justify-between text-left font-medium text-gray-800 dark:text-gray-200">
                        <div class="flex items-center gap-3 flex-1">
                            <span class="flex-1">New Features</span>
                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">3 new</span>
                        </div>
                        <twig:ux:icon name="heroicons:chevron-up-20-solid" class="size-5 text-gray-300 dark:text-gray-700 ml-3" />
                    </button>
                </h2>
                <div class="pt-2 text-gray-600 dark:text-gray-400">
                    Check out the latest features we've added.
                </div>
            </div>
        </div>
    {% endset %}
    {% set badgesCode %}&lt;twig:ui:accordion&gt;
    &lt;twig:ui:accordion:item title="New Features" badge="3 new"&gt;
        Content...
    &lt;/twig:ui:accordion:item&gt;
&lt;/twig:ui:accordion&gt;{% endset %}
    {{ ui.story('With Badges', badgesPreview, badgesCode) }}

    {# Multiple Open #}
    {% set multiplePreview %}
        <div class="bg-gray-100 dark:bg-gray-800 rounded-lg p-4">
            <p class="text-sm text-gray-600 dark:text-gray-400">
                Use <code class="bg-gray-200 dark:bg-gray-700 px-1 rounded">:multiple="true"</code> to allow multiple accordion items to be open at the same time.
            </p>
        </div>
    {% endset %}
    {% set multipleCode %}&lt;twig:ui:accordion :multiple="true"&gt;
    &lt;twig:ui:accordion:item title="Section One"&gt;...&lt;/twig:ui:accordion:item&gt;
    &lt;twig:ui:accordion:item title="Section Two"&gt;...&lt;/twig:ui:accordion:item&gt;
&lt;/twig:ui:accordion&gt;{% endset %}
    {{ ui.story('Multiple Open', multiplePreview, multipleCode) }}

    {# Variant Examples #}
    {% set variantsPreview %}
        <div class="space-y-8">
            <div>
                <p class="text-sm font-medium text-gray-500 mb-2">Bordered Variant</p>
                <div class="w-full border border-gray-200 dark:border-gray-700 rounded-lg divide-y divide-gray-200 dark:divide-gray-700">
                    <div class="px-4 py-4">
                        <button class="flex w-full items-center justify-between text-left font-medium text-gray-800 dark:text-gray-200">
                            <span>Bordered Item 1</span>
                            <twig:ux:icon name="heroicons:chevron-up-20-solid" class="size-5 text-gray-400" />
                        </button>
                        <div class="pt-2 text-gray-600 dark:text-gray-400">Content with border styling.</div>
                    </div>
                    <div class="px-4 py-4">
                        <button class="flex w-full items-center justify-between text-left font-medium text-gray-800 dark:text-gray-200">
                            <span>Bordered Item 2</span>
                            <twig:ux:icon name="heroicons:chevron-up-20-solid" class="size-5 text-gray-400 rotate-180" />
                        </button>
                    </div>
                </div>
            </div>
            <div>
                <p class="text-sm font-medium text-gray-500 mb-2">Card Variant</p>
                <div class="w-full bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-700 rounded-lg shadow-sm divide-y divide-gray-200 dark:divide-gray-700">
                    <div class="px-4 py-4">
                        <button class="flex w-full items-center justify-between text-left font-medium text-gray-800 dark:text-gray-200">
                            <span>Card Item 1</span>
                            <twig:ux:icon name="heroicons:chevron-up-20-solid" class="size-5 text-gray-400" />
                        </button>
                        <div class="pt-2 text-gray-600 dark:text-gray-400">Content with card styling.</div>
                    </div>
                    <div class="px-4 py-4">
                        <button class="flex w-full items-center justify-between text-left font-medium text-gray-800 dark:text-gray-200">
                            <span>Card Item 2</span>
                            <twig:ux:icon name="heroicons:chevron-up-20-solid" class="size-5 text-gray-400 rotate-180" />
                        </button>
                    </div>
                </div>
            </div>
            <div>
                <p class="text-sm font-medium text-gray-500 mb-2">Separated Variant</p>
                <div class="w-full space-y-2">
                    <div class="bg-gray-50 dark:bg-gray-800 rounded-lg px-4 py-4">
                        <button class="flex w-full items-center justify-between text-left font-medium text-gray-800 dark:text-gray-200">
                            <span>Separated Item 1</span>
                            <twig:ux:icon name="heroicons:chevron-up-20-solid" class="size-5 text-gray-400" />
                        </button>
                        <div class="pt-2 text-gray-600 dark:text-gray-400">Content with separated styling.</div>
                    </div>
                    <div class="bg-gray-50 dark:bg-gray-800 rounded-lg px-4 py-4">
                        <button class="flex w-full items-center justify-between text-left font-medium text-gray-800 dark:text-gray-200">
                            <span>Separated Item 2</span>
                            <twig:ux:icon name="heroicons:chevron-up-20-solid" class="size-5 text-gray-400 rotate-180" />
                        </button>
                    </div>
                </div>
            </div>
        </div>
    {% endset %}
    {% set variantsCode %}&lt;twig:ui:accordion variant="bordered"&gt;...&lt;/twig:ui:accordion&gt;
&lt;twig:ui:accordion variant="card"&gt;...&lt;/twig:ui:accordion&gt;
&lt;twig:ui:accordion variant="separated"&gt;...&lt;/twig:ui:accordion&gt;{% endset %}
    {{ ui.story('Variant Examples', variantsPreview, variantsCode) }}

    {# Size Examples #}
    {% set sizesPreview %}
        <div class="bg-gray-100 dark:bg-gray-800 rounded-lg p-4">
            <p class="text-sm text-gray-600 dark:text-gray-400">
                Use <code class="bg-gray-200 dark:bg-gray-700 px-1 rounded">size="sm"</code>, <code class="bg-gray-200 dark:bg-gray-700 px-1 rounded">size="md"</code>, or <code class="bg-gray-200 dark:bg-gray-700 px-1 rounded">size="lg"</code> to control text and padding size.
            </p>
        </div>
    {% endset %}
    {% set sizesCode %}&lt;twig:ui:accordion size="sm"&gt;...&lt;/twig:ui:accordion&gt;
&lt;twig:ui:accordion size="md"&gt;...&lt;/twig:ui:accordion&gt;
&lt;twig:ui:accordion size="lg"&gt;...&lt;/twig:ui:accordion&gt;{% endset %}
    {{ ui.story('Size Options', sizesPreview, sizesCode) }}
</div>
