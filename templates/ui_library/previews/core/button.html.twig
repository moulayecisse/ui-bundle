{% import '@Ui/ui_library/_macros.html.twig' as ui %}

<div class="space-y-6">
    {# Default Preview - Solid Variant with Colors #}
    {% set solidPreview %}
        <div class="flex flex-wrap gap-3">
            <twig:ui:button color="primary">Primary</twig:ui:button>
            <twig:ui:button color="secondary">Secondary</twig:ui:button>
            <twig:ui:button color="success">Success</twig:ui:button>
            <twig:ui:button color="warning">Warning</twig:ui:button>
            <twig:ui:button color="danger">Danger</twig:ui:button>
            <twig:ui:button color="info">Info</twig:ui:button>
            <twig:ui:button color="neutral">Neutral</twig:ui:button>
        </div>
    {% endset %}
    {% set solidCode %}{% verbatim %}<twig:ui:button color="primary">Primary</twig:ui:button>
<twig:ui:button color="secondary">Secondary</twig:ui:button>
<twig:ui:button color="success">Success</twig:ui:button>
<twig:ui:button color="warning">Warning</twig:ui:button>
<twig:ui:button color="danger">Danger</twig:ui:button>
<twig:ui:button color="info">Info</twig:ui:button>
<twig:ui:button color="neutral">Neutral</twig:ui:button>{% endverbatim %}{% endset %}
    {{ ui.story('Solid Variant (default)', solidPreview, solidCode) }}

    {# Props Documentation #}
    {{ ui.props([
        { name: 'variant', type: "'solid' | 'outline' | 'ghost' | 'soft'", default: "'solid'", description: 'Button style variant' },
        { name: 'color', type: "'primary' | 'secondary' | 'success' | 'warning' | 'danger' | 'info' | 'neutral'", default: "'primary'", description: 'Button color theme' },
        { name: 'size', type: "'xs' | 'sm' | 'md' | 'lg' | 'xl'", default: "'md'", description: 'Button size' },
        { name: 'type', type: "'button' | 'submit' | 'reset'", default: "'button'", description: 'Button type attribute' },
        { name: 'href', type: 'string', default: 'null', description: 'If provided, renders as <a> link instead of <button>' },
        { name: 'icon', type: 'string | null', default: 'null', description: 'Icon name (Iconify) shown before content' },
        { name: 'iconRight', type: 'string | null', default: 'null', description: 'Icon name shown after content' },
        { name: 'label', type: 'string | null', default: 'null', description: 'Button label text' },
        { name: 'loading', type: 'boolean', default: 'false', description: 'Show loading spinner and disable button' },
        { name: 'disabled', type: 'boolean', default: 'false', description: 'Disable the button' },
        { name: 'block', type: 'boolean', default: 'false', description: 'Full width button' },
        { name: 'class', type: 'string', default: "''", description: 'Additional CSS classes' },
    ]) }}

    {# Slots Documentation #}
    {{ ui.slots([
        { name: 'content', description: 'Button content (default slot)' },
    ]) }}

    {# Outline Variant #}
    {% set outlinePreview %}
        <div class="flex flex-wrap gap-3">
            <twig:ui:button variant="outline" color="primary">Primary</twig:ui:button>
            <twig:ui:button variant="outline" color="secondary">Secondary</twig:ui:button>
            <twig:ui:button variant="outline" color="success">Success</twig:ui:button>
            <twig:ui:button variant="outline" color="warning">Warning</twig:ui:button>
            <twig:ui:button variant="outline" color="danger">Danger</twig:ui:button>
            <twig:ui:button variant="outline" color="info">Info</twig:ui:button>
            <twig:ui:button variant="outline" color="neutral">Neutral</twig:ui:button>
        </div>
    {% endset %}
    {% set outlineCode %}{% verbatim %}<twig:ui:button variant="outline" color="primary">Primary</twig:ui:button>
<twig:ui:button variant="outline" color="secondary">Secondary</twig:ui:button>
<twig:ui:button variant="outline" color="success">Success</twig:ui:button>
<twig:ui:button variant="outline" color="warning">Warning</twig:ui:button>
<twig:ui:button variant="outline" color="danger">Danger</twig:ui:button>
<twig:ui:button variant="outline" color="info">Info</twig:ui:button>
<twig:ui:button variant="outline" color="neutral">Neutral</twig:ui:button>{% endverbatim %}{% endset %}
    {{ ui.story('Outline Variant', outlinePreview, outlineCode) }}

    {# Ghost Variant #}
    {% set ghostPreview %}
        <div class="flex flex-wrap gap-3">
            <twig:ui:button variant="ghost" color="primary">Primary</twig:ui:button>
            <twig:ui:button variant="ghost" color="secondary">Secondary</twig:ui:button>
            <twig:ui:button variant="ghost" color="success">Success</twig:ui:button>
            <twig:ui:button variant="ghost" color="warning">Warning</twig:ui:button>
            <twig:ui:button variant="ghost" color="danger">Danger</twig:ui:button>
            <twig:ui:button variant="ghost" color="info">Info</twig:ui:button>
            <twig:ui:button variant="ghost" color="neutral">Neutral</twig:ui:button>
        </div>
    {% endset %}
    {% set ghostCode %}{% verbatim %}<twig:ui:button variant="ghost" color="primary">Primary</twig:ui:button>
<twig:ui:button variant="ghost" color="secondary">Secondary</twig:ui:button>
<twig:ui:button variant="ghost" color="success">Success</twig:ui:button>
<twig:ui:button variant="ghost" color="warning">Warning</twig:ui:button>
<twig:ui:button variant="ghost" color="danger">Danger</twig:ui:button>
<twig:ui:button variant="ghost" color="info">Info</twig:ui:button>
<twig:ui:button variant="ghost" color="neutral">Neutral</twig:ui:button>{% endverbatim %}{% endset %}
    {{ ui.story('Ghost Variant', ghostPreview, ghostCode) }}

    {# Soft Variant #}
    {% set softPreview %}
        <div class="flex flex-wrap gap-3">
            <twig:ui:button variant="soft" color="primary">Primary</twig:ui:button>
            <twig:ui:button variant="soft" color="secondary">Secondary</twig:ui:button>
            <twig:ui:button variant="soft" color="success">Success</twig:ui:button>
            <twig:ui:button variant="soft" color="warning">Warning</twig:ui:button>
            <twig:ui:button variant="soft" color="danger">Danger</twig:ui:button>
            <twig:ui:button variant="soft" color="info">Info</twig:ui:button>
            <twig:ui:button variant="soft" color="neutral">Neutral</twig:ui:button>
        </div>
    {% endset %}
    {% set softCode %}{% verbatim %}<twig:ui:button variant="soft" color="primary">Primary</twig:ui:button>
<twig:ui:button variant="soft" color="secondary">Secondary</twig:ui:button>
<twig:ui:button variant="soft" color="success">Success</twig:ui:button>
<twig:ui:button variant="soft" color="warning">Warning</twig:ui:button>
<twig:ui:button variant="soft" color="danger">Danger</twig:ui:button>
<twig:ui:button variant="soft" color="info">Info</twig:ui:button>
<twig:ui:button variant="soft" color="neutral">Neutral</twig:ui:button>{% endverbatim %}{% endset %}
    {{ ui.story('Soft Variant', softPreview, softCode) }}

    {# All Sizes #}
    {% set sizesPreview %}
        <div class="flex flex-wrap items-center gap-3">
            <twig:ui:button color="primary" size="xs">Extra Small</twig:ui:button>
            <twig:ui:button color="primary" size="sm">Small</twig:ui:button>
            <twig:ui:button color="primary" size="md">Medium</twig:ui:button>
            <twig:ui:button color="primary" size="lg">Large</twig:ui:button>
            <twig:ui:button color="primary" size="xl">Extra Large</twig:ui:button>
        </div>
    {% endset %}
    {% set sizesCode %}{% verbatim %}<twig:ui:button color="primary" size="xs">Extra Small</twig:ui:button>
<twig:ui:button color="primary" size="sm">Small</twig:ui:button>
<twig:ui:button color="primary" size="md">Medium</twig:ui:button>
<twig:ui:button color="primary" size="lg">Large</twig:ui:button>
<twig:ui:button color="primary" size="xl">Extra Large</twig:ui:button>{% endverbatim %}{% endset %}
    {{ ui.story('Sizes', sizesPreview, sizesCode) }}

    {# With Left Icon #}
    {% set withIconPreview %}
        <div class="flex flex-wrap gap-3">
            <twig:ui:button color="primary" icon="lucide:plus">Add Item</twig:ui:button>
            <twig:ui:button color="success" icon="lucide:check">Confirm</twig:ui:button>
            <twig:ui:button color="danger" icon="lucide:trash">Delete</twig:ui:button>
            <twig:ui:button variant="outline" color="neutral" icon="lucide:download">Download</twig:ui:button>
        </div>
    {% endset %}
    {% set withIconCode %}{% verbatim %}<twig:ui:button color="primary" icon="lucide:plus">Add Item</twig:ui:button>
<twig:ui:button color="success" icon="lucide:check">Confirm</twig:ui:button>
<twig:ui:button color="danger" icon="lucide:trash">Delete</twig:ui:button>
<twig:ui:button variant="outline" color="neutral" icon="lucide:download">Download</twig:ui:button>{% endverbatim %}{% endset %}
    {{ ui.story('With Left Icon', withIconPreview, withIconCode) }}

    {# With Right Icon #}
    {% set rightIconPreview %}
        <div class="flex flex-wrap gap-3">
            <twig:ui:button color="primary" iconRight="lucide:arrow-right">Continue</twig:ui:button>
            <twig:ui:button color="secondary" iconRight="lucide:external-link">Open Link</twig:ui:button>
            <twig:ui:button variant="outline" color="neutral" iconRight="lucide:chevron-down">Expand</twig:ui:button>
        </div>
    {% endset %}
    {% set rightIconCode %}{% verbatim %}<twig:ui:button color="primary" iconRight="lucide:arrow-right">Continue</twig:ui:button>
<twig:ui:button color="secondary" iconRight="lucide:external-link">Open Link</twig:ui:button>
<twig:ui:button variant="outline" color="neutral" iconRight="lucide:chevron-down">Expand</twig:ui:button>{% endverbatim %}{% endset %}
    {{ ui.story('With Right Icon', rightIconPreview, rightIconCode) }}

    {# Icon Only #}
    {% set iconOnlyPreview %}
        <div class="flex flex-wrap items-center gap-3">
            <twig:ui:button color="primary" size="sm" icon="lucide:plus" />
            <twig:ui:button color="secondary" icon="lucide:settings" />
            <twig:ui:button variant="outline" color="neutral" icon="lucide:search" />
            <twig:ui:button variant="ghost" color="neutral" icon="lucide:more-vertical" />
            <twig:ui:button color="danger" size="lg" icon="lucide:x" />
        </div>
    {% endset %}
    {% set iconOnlyCode %}{% verbatim %}<twig:ui:button color="primary" size="sm" icon="lucide:plus" />
<twig:ui:button color="secondary" icon="lucide:settings" />
<twig:ui:button variant="outline" color="neutral" icon="lucide:search" />
<twig:ui:button variant="ghost" color="neutral" icon="lucide:more-vertical" />
<twig:ui:button color="danger" size="lg" icon="lucide:x" />{% endverbatim %}{% endset %}
    {{ ui.story('Icon Only', iconOnlyPreview, iconOnlyCode) }}

    {# Loading State #}
    {% set loadingPreview %}
        <div class="flex flex-wrap gap-3">
            <twig:ui:button color="primary" loading>Loading...</twig:ui:button>
            <twig:ui:button color="secondary" loading>Please wait</twig:ui:button>
            <twig:ui:button variant="outline" color="neutral" loading>Processing</twig:ui:button>
        </div>
    {% endset %}
    {% set loadingCode %}{% verbatim %}<twig:ui:button color="primary" loading>Loading...</twig:ui:button>
<twig:ui:button color="secondary" loading>Please wait</twig:ui:button>
<twig:ui:button variant="outline" color="neutral" loading>Processing</twig:ui:button>{% endverbatim %}{% endset %}
    {{ ui.story('Loading State', loadingPreview, loadingCode) }}

    {# Disabled State #}
    {% set disabledPreview %}
        <div class="flex flex-wrap gap-3">
            <twig:ui:button color="primary" disabled>Disabled Primary</twig:ui:button>
            <twig:ui:button color="secondary" disabled>Disabled Secondary</twig:ui:button>
            <twig:ui:button variant="outline" color="neutral" disabled>Disabled Outline</twig:ui:button>
        </div>
    {% endset %}
    {% set disabledCode %}{% verbatim %}<twig:ui:button color="primary" disabled>Disabled Primary</twig:ui:button>
<twig:ui:button color="secondary" disabled>Disabled Secondary</twig:ui:button>
<twig:ui:button variant="outline" color="neutral" disabled>Disabled Outline</twig:ui:button>{% endverbatim %}{% endset %}
    {{ ui.story('Disabled State', disabledPreview, disabledCode) }}

    {# Block / Full Width #}
    {% set blockPreview %}
        <div class="space-y-3 max-w-md">
            <twig:ui:button color="primary" block>Full Width Primary</twig:ui:button>
            <twig:ui:button variant="outline" color="neutral" block icon="lucide:log-in">Sign In</twig:ui:button>
        </div>
    {% endset %}
    {% set blockCode %}{% verbatim %}<twig:ui:button color="primary" block>Full Width Primary</twig:ui:button>
<twig:ui:button variant="outline" color="neutral" block icon="lucide:log-in">Sign In</twig:ui:button>{% endverbatim %}{% endset %}
    {{ ui.story('Block / Full Width', blockPreview, blockCode) }}

    {# As Link #}
    {% set asLinkPreview %}
        <div class="flex flex-wrap gap-3">
            <twig:ui:button color="primary" href="#">Link Button</twig:ui:button>
            <twig:ui:button variant="outline" color="neutral" href="#" iconRight="lucide:external-link">External Link</twig:ui:button>
        </div>
    {% endset %}
    {% set asLinkCode %}{% verbatim %}<twig:ui:button color="primary" href="#">Link Button</twig:ui:button>
<twig:ui:button variant="outline" color="neutral" href="#" iconRight="lucide:external-link">External Link</twig:ui:button>{% endverbatim %}{% endset %}
    {{ ui.story('As Link', asLinkPreview, asLinkCode) }}

    {# Button Types #}
    {% set typesPreview %}
        <div class="flex flex-wrap gap-3">
            <twig:ui:button type="button" variant="outline" color="neutral">Button</twig:ui:button>
            <twig:ui:button type="submit" color="primary">Submit</twig:ui:button>
            <twig:ui:button type="reset" variant="ghost" color="neutral">Reset</twig:ui:button>
        </div>
    {% endset %}
    {% set typesCode %}{% verbatim %}<twig:ui:button type="button" variant="outline" color="neutral">Button</twig:ui:button>
<twig:ui:button type="submit" color="primary">Submit</twig:ui:button>
<twig:ui:button type="reset" variant="ghost" color="neutral">Reset</twig:ui:button>{% endverbatim %}{% endset %}
    {{ ui.story('Button Types', typesPreview, typesCode) }}
</div>
