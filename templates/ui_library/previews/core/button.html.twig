{% import '@Ui/ui_library/_macros.html.twig' as ui %}

<div class="space-y-6">
    {# Props Documentation #}
    {{ ui.props([
        { name: 'variant', type: "'primary' | 'secondary' | 'outline' | 'ghost' | 'danger' | 'success'", default: "'primary'", description: 'Button style variant' },
        { name: 'size', type: "'xs' | 'sm' | 'md' | 'lg' | 'xl'", default: "'md'", description: 'Button size' },
        { name: 'type', type: "'button' | 'submit' | 'reset'", default: "'button'", description: 'Button type attribute' },
        { name: 'href', type: 'string', default: 'null', description: 'If provided, renders as <a> link instead of <button>' },
        { name: 'icon', type: 'string | null', default: 'null', description: 'Icon name (Iconify) shown before content' },
        { name: 'iconRight', type: 'string | null', default: 'null', description: 'Icon name shown after content' },
        { name: 'label', type: 'string | null', default: 'null', description: 'Button label text' },
        { name: 'loading', type: 'boolean', default: 'false', description: 'Show loading spinner and disable button' },
        { name: 'disabled', type: 'boolean', default: 'false', description: 'Disable the button' },
        { name: 'block', type: 'boolean', default: 'false', description: 'Full width button' },
        { name: 'class', type: 'string', default: "''", description: 'Additional CSS classes' },
    ]) }}

    {# Slots Documentation #}
    {{ ui.slots([
        { name: 'content', description: 'Button content (default slot)' },
    ]) }}

    {# All Variants #}
    {% set variantsPreview %}
        <div class="flex flex-wrap gap-3">
            <twig:Ui:button variant="primary">Primary</twig:Ui:button>
            <twig:Ui:button variant="secondary">Secondary</twig:Ui:button>
            <twig:Ui:button variant="outline">Outline</twig:Ui:button>
            <twig:Ui:button variant="ghost">Ghost</twig:Ui:button>
            <twig:Ui:button variant="danger">Danger</twig:Ui:button>
            <twig:Ui:button variant="success">Success</twig:Ui:button>
        </div>
    {% endset %}
    {% set variantsCode %}{% verbatim %}<twig:Ui:button variant="primary">Primary</twig:Ui:button>
<twig:Ui:button variant="secondary">Secondary</twig:Ui:button>
<twig:Ui:button variant="outline">Outline</twig:Ui:button>
<twig:Ui:button variant="ghost">Ghost</twig:Ui:button>
<twig:Ui:button variant="danger">Danger</twig:Ui:button>
<twig:Ui:button variant="success">Success</twig:Ui:button>{% endverbatim %}{% endset %}
    {{ ui.story('Variants', variantsPreview, variantsCode) }}

    {# All Sizes #}
    {% set sizesPreview %}
        <div class="flex flex-wrap items-center gap-3">
            <twig:Ui:button variant="primary" size="xs">Extra Small</twig:Ui:button>
            <twig:Ui:button variant="primary" size="sm">Small</twig:Ui:button>
            <twig:Ui:button variant="primary" size="md">Medium</twig:Ui:button>
            <twig:Ui:button variant="primary" size="lg">Large</twig:Ui:button>
            <twig:Ui:button variant="primary" size="xl">Extra Large</twig:Ui:button>
        </div>
    {% endset %}
    {% set sizesCode %}{% verbatim %}<twig:Ui:button variant="primary" size="xs">Extra Small</twig:Ui:button>
<twig:Ui:button variant="primary" size="sm">Small</twig:Ui:button>
<twig:Ui:button variant="primary" size="md">Medium</twig:Ui:button>
<twig:Ui:button variant="primary" size="lg">Large</twig:Ui:button>
<twig:Ui:button variant="primary" size="xl">Extra Large</twig:Ui:button>{% endverbatim %}{% endset %}
    {{ ui.story('Sizes', sizesPreview, sizesCode) }}

    {# With Left Icon #}
    {% set withIconPreview %}
        <div class="flex flex-wrap gap-3">
            <twig:Ui:button variant="primary" icon="lucide:plus">Add Item</twig:Ui:button>
            <twig:Ui:button variant="success" icon="lucide:check">Confirm</twig:Ui:button>
            <twig:Ui:button variant="danger" icon="lucide:trash">Delete</twig:Ui:button>
            <twig:Ui:button variant="outline" icon="lucide:download">Download</twig:Ui:button>
        </div>
    {% endset %}
    {% set withIconCode %}{% verbatim %}<twig:Ui:button variant="primary" icon="lucide:plus">Add Item</twig:Ui:button>
<twig:Ui:button variant="success" icon="lucide:check">Confirm</twig:Ui:button>
<twig:Ui:button variant="danger" icon="lucide:trash">Delete</twig:Ui:button>
<twig:Ui:button variant="outline" icon="lucide:download">Download</twig:Ui:button>{% endverbatim %}{% endset %}
    {{ ui.story('With Left Icon', withIconPreview, withIconCode) }}

    {# With Right Icon #}
    {% set rightIconPreview %}
        <div class="flex flex-wrap gap-3">
            <twig:Ui:button variant="primary" iconRight="lucide:arrow-right">Continue</twig:Ui:button>
            <twig:Ui:button variant="secondary" iconRight="lucide:external-link">Open Link</twig:Ui:button>
            <twig:Ui:button variant="outline" iconRight="lucide:chevron-down">Expand</twig:Ui:button>
        </div>
    {% endset %}
    {% set rightIconCode %}{% verbatim %}<twig:Ui:button variant="primary" iconRight="lucide:arrow-right">Continue</twig:Ui:button>
<twig:Ui:button variant="secondary" iconRight="lucide:external-link">Open Link</twig:Ui:button>
<twig:Ui:button variant="outline" iconRight="lucide:chevron-down">Expand</twig:Ui:button>{% endverbatim %}{% endset %}
    {{ ui.story('With Right Icon', rightIconPreview, rightIconCode) }}

    {# Icon Only #}
    {% set iconOnlyPreview %}
        <div class="flex flex-wrap items-center gap-3">
            <twig:Ui:button variant="primary" size="sm" icon="lucide:plus" />
            <twig:Ui:button variant="secondary" icon="lucide:settings" />
            <twig:Ui:button variant="outline" icon="lucide:search" />
            <twig:Ui:button variant="ghost" icon="lucide:more-vertical" />
            <twig:Ui:button variant="danger" size="lg" icon="lucide:x" />
        </div>
    {% endset %}
    {% set iconOnlyCode %}{% verbatim %}<twig:Ui:button variant="primary" size="sm" icon="lucide:plus" />
<twig:Ui:button variant="secondary" icon="lucide:settings" />
<twig:Ui:button variant="outline" icon="lucide:search" />
<twig:Ui:button variant="ghost" icon="lucide:more-vertical" />
<twig:Ui:button variant="danger" size="lg" icon="lucide:x" />{% endverbatim %}{% endset %}
    {{ ui.story('Icon Only', iconOnlyPreview, iconOnlyCode) }}

    {# Loading State #}
    {% set loadingPreview %}
        <div class="flex flex-wrap gap-3">
            <twig:Ui:button variant="primary" loading>Loading...</twig:Ui:button>
            <twig:Ui:button variant="secondary" loading>Please wait</twig:Ui:button>
            <twig:Ui:button variant="outline" loading>Processing</twig:Ui:button>
        </div>
    {% endset %}
    {% set loadingCode %}{% verbatim %}<twig:Ui:button variant="primary" loading>Loading...</twig:Ui:button>
<twig:Ui:button variant="secondary" loading>Please wait</twig:Ui:button>
<twig:Ui:button variant="outline" loading>Processing</twig:Ui:button>{% endverbatim %}{% endset %}
    {{ ui.story('Loading State', loadingPreview, loadingCode) }}

    {# Disabled State #}
    {% set disabledPreview %}
        <div class="flex flex-wrap gap-3">
            <twig:Ui:button variant="primary" disabled>Disabled Primary</twig:Ui:button>
            <twig:Ui:button variant="secondary" disabled>Disabled Secondary</twig:Ui:button>
            <twig:Ui:button variant="outline" disabled>Disabled Outline</twig:Ui:button>
        </div>
    {% endset %}
    {% set disabledCode %}{% verbatim %}<twig:Ui:button variant="primary" disabled>Disabled Primary</twig:Ui:button>
<twig:Ui:button variant="secondary" disabled>Disabled Secondary</twig:Ui:button>
<twig:Ui:button variant="outline" disabled>Disabled Outline</twig:Ui:button>{% endverbatim %}{% endset %}
    {{ ui.story('Disabled State', disabledPreview, disabledCode) }}

    {# Block / Full Width #}
    {% set blockPreview %}
        <div class="space-y-3 max-w-md">
            <twig:Ui:button variant="primary" block>Full Width Primary</twig:Ui:button>
            <twig:Ui:button variant="outline" block icon="lucide:log-in">Sign In</twig:Ui:button>
        </div>
    {% endset %}
    {% set blockCode %}{% verbatim %}<twig:Ui:button variant="primary" block>Full Width Primary</twig:Ui:button>
<twig:Ui:button variant="outline" block icon="lucide:log-in">Sign In</twig:Ui:button>{% endverbatim %}{% endset %}
    {{ ui.story('Block / Full Width', blockPreview, blockCode) }}

    {# As Link #}
    {% set asLinkPreview %}
        <div class="flex flex-wrap gap-3">
            <twig:Ui:button variant="primary" href="#">Link Button</twig:Ui:button>
            <twig:Ui:button variant="outline" href="#" iconRight="lucide:external-link">External Link</twig:Ui:button>
        </div>
    {% endset %}
    {% set asLinkCode %}{% verbatim %}<twig:Ui:button variant="primary" href="#">Link Button</twig:Ui:button>
<twig:Ui:button variant="outline" href="#" iconRight="lucide:external-link">External Link</twig:Ui:button>{% endverbatim %}{% endset %}
    {{ ui.story('As Link', asLinkPreview, asLinkCode) }}

    {# Button Types #}
    {% set typesPreview %}
        <div class="flex flex-wrap gap-3">
            <twig:Ui:button type="button" variant="outline">Button</twig:Ui:button>
            <twig:Ui:button type="submit" variant="primary">Submit</twig:Ui:button>
            <twig:Ui:button type="reset" variant="ghost">Reset</twig:Ui:button>
        </div>
    {% endset %}
    {% set typesCode %}{% verbatim %}<twig:Ui:button type="button" variant="outline">Button</twig:Ui:button>
<twig:Ui:button type="submit" variant="primary">Submit</twig:Ui:button>
<twig:Ui:button type="reset" variant="ghost">Reset</twig:Ui:button>{% endverbatim %}{% endset %}
    {{ ui.story('Button Types', typesPreview, typesCode) }}
</div>
