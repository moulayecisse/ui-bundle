{% import '@Ui/ui_library/_macros.html.twig' as ui %}

<div class="space-y-6">
    {# Props Documentation #}
    {{ ui.props([
        { name: 'class', type: 'string', default: "''", description: 'Additional CSS classes for the menu container' },
    ]) }}

    {# Slots Documentation #}
    {{ ui.slots([
        { name: 'content', description: 'Menu items using &lt;twig:Ui:menu:item&gt; components' },
    ]) }}

    {# Related Components #}
    <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4 mb-6">
        <h4 class="font-semibold text-blue-900 dark:text-blue-100 mb-2">Related Components</h4>
        <ul class="text-sm text-blue-800 dark:text-blue-200 space-y-1">
            <li><code class="bg-blue-100 dark:bg-blue-800 px-1 rounded">menu:item</code> - Individual menu item with icon, label, href, active state</li>
            <li><code class="bg-blue-100 dark:bg-blue-800 px-1 rounded">menu:sub</code> - Submenu container</li>
            <li><code class="bg-blue-100 dark:bg-blue-800 px-1 rounded">menu:sub:item</code> - Submenu item for nested navigation</li>
        </ul>
    </div>

    {# Basic Menu - Static Preview #}
    {% set basicPreview %}
        <div class="max-w-xs bg-gray-100 dark:bg-gray-900 p-4 rounded-lg">
            <div class="space-y-1">
                <a href="#" class="group relative flex items-center gap-3 px-3 py-2 font-medium rounded-lg text-sm bg-primary text-white">
                    <twig:ux:icon name="heroicons:home" class="size-4" />
                    <span>Dashboard</span>
                </a>
                <a href="#" class="group relative flex items-center gap-3 px-3 py-2 font-medium rounded-lg text-sm text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800">
                    <twig:ux:icon name="heroicons:users" class="size-4" />
                    <span>Users</span>
                </a>
                <a href="#" class="group relative flex items-center gap-3 px-3 py-2 font-medium rounded-lg text-sm text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800">
                    <twig:ux:icon name="heroicons:cog-6-tooth" class="size-4" />
                    <span>Settings</span>
                </a>
            </div>
        </div>
    {% endset %}
    {% set basicCode %}&lt;twig:Ui:menu&gt;
    &lt;twig:Ui:menu:item label="Dashboard" icon="heroicons:home" active /&gt;
    &lt;twig:Ui:menu:item label="Users" icon="heroicons:users" /&gt;
    &lt;twig:Ui:menu:item label="Settings" icon="heroicons:cog-6-tooth" /&gt;
&lt;/twig:Ui:menu&gt;{% endset %}
    {{ ui.story('Basic Menu', basicPreview, basicCode) }}

    {# With Links - Static Preview #}
    {% set linksPreview %}
        <div class="max-w-xs bg-gray-100 dark:bg-gray-900 p-4 rounded-lg">
            <div class="space-y-1">
                <a href="/" class="group relative flex items-center gap-3 px-3 py-2 font-medium rounded-lg text-sm text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800">
                    <twig:ux:icon name="heroicons:home" class="size-4" />
                    <span>Home</span>
                </a>
                <a href="/about" class="group relative flex items-center gap-3 px-3 py-2 font-medium rounded-lg text-sm text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800">
                    <twig:ux:icon name="heroicons:information-circle" class="size-4" />
                    <span>About</span>
                </a>
                <a href="/contact" class="group relative flex items-center gap-3 px-3 py-2 font-medium rounded-lg text-sm text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800">
                    <twig:ux:icon name="heroicons:envelope" class="size-4" />
                    <span>Contact</span>
                </a>
            </div>
        </div>
    {% endset %}
    {% set linksCode %}&lt;twig:Ui:menu&gt;
    &lt;twig:Ui:menu:item label="Home" icon="heroicons:home" href="/" /&gt;
    &lt;twig:Ui:menu:item label="About" icon="heroicons:information-circle" href="/about" /&gt;
    &lt;twig:Ui:menu:item label="Contact" icon="heroicons:envelope" href="/contact" /&gt;
&lt;/twig:Ui:menu&gt;{% endset %}
    {{ ui.story('With Links', linksPreview, linksCode) }}

    {# Submenu Example (Code Only) #}
    {% set submenuPreview %}
        <div class="bg-gray-100 dark:bg-gray-800 rounded-lg p-4">
            <p class="text-sm text-gray-600 dark:text-gray-400 mb-3">
                Menu items can contain submenus by nesting <code class="bg-gray-200 dark:bg-gray-700 px-1 rounded">menu:sub:item</code> components inside a parent item.
            </p>
            <div class="max-w-xs bg-white dark:bg-gray-900 rounded-lg p-3">
                <div class="space-y-1">
                    <div class="flex items-center gap-3 px-3 py-2 text-sm text-gray-600 dark:text-gray-400">
                        <twig:ux:icon name="heroicons:cube" class="size-4" />
                        <span>Products</span>
                        <twig:ux:icon name="heroicons:chevron-down" class="size-4 ml-auto" />
                    </div>
                    <div class="pl-6 space-y-1">
                        <a href="#" class="block px-3 py-1.5 text-sm text-gray-500 hover:text-gray-700 dark:text-gray-400">All Products</a>
                        <a href="#" class="block px-3 py-1.5 text-sm text-gray-500 hover:text-gray-700 dark:text-gray-400">Categories</a>
                        <a href="#" class="block px-3 py-1.5 text-sm text-gray-500 hover:text-gray-700 dark:text-gray-400">Inventory</a>
                    </div>
                </div>
            </div>
        </div>
    {% endset %}
    {% set submenuCode %}&lt;twig:Ui:menu&gt;
    &lt;twig:Ui:menu:item label="Dashboard" icon="heroicons:home" /&gt;
    &lt;twig:Ui:menu:item label="Products" icon="heroicons:cube"&gt;
        {# Children become submenu items #}
        &lt;twig:Ui:menu:sub:item label="All Products" href="/products" /&gt;
        &lt;twig:Ui:menu:sub:item label="Categories" href="/categories" /&gt;
        &lt;twig:Ui:menu:sub:item label="Inventory" href="/inventory" /&gt;
    &lt;/twig:Ui:menu:item&gt;
    &lt;twig:Ui:menu:item label="Orders" icon="heroicons:shopping-cart" /&gt;
&lt;/twig:Ui:menu&gt;{% endset %}
    {{ ui.story('With Submenu', submenuPreview, submenuCode) }}
</div>
