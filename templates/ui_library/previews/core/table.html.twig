{% import '@Ui/ui_library/_macros.html.twig' as ui %}

<div class="space-y-6">
    {# Props Documentation #}
    {{ ui.props([
        { name: 'class', type: 'string', default: "''", description: 'Additional CSS classes for the table element' },
        { name: 'striped', type: 'boolean', default: 'false', description: 'Alternate row background colors' },
        { name: 'hover', type: 'boolean', default: 'false', description: 'Highlight rows on hover' },
        { name: 'compact', type: 'boolean', default: 'false', description: 'Reduce cell padding for compact display' },
        { name: 'size', type: 'string', default: "'md'", description: 'Table text size (sm, md, lg)' },
        { name: 'variant', type: 'string', default: "'default'", description: 'Visual style variant (default, card, simple)' },
        { name: 'stickyHeader', type: 'boolean', default: 'false', description: 'Make header sticky on scroll' },
        { name: 'responsive', type: 'boolean', default: 'true', description: 'Wrap table in overflow container' },
    ]) }}

    {# Slots Documentation #}
    {{ ui.slots([
        { name: 'thead', description: 'Table header rows (&lt;twig:ui:tr&gt; with &lt;twig:ui:th&gt; cells)' },
        { name: 'tbody', description: 'Table body rows (&lt;twig:ui:tr&gt; with &lt;twig:ui:td&gt; cells)' },
        { name: 'tfoot', description: 'Optional table footer rows' },
    ]) }}

    {# Related Components #}
    <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4 mb-6">
        <h4 class="font-semibold text-blue-900 dark:text-blue-100 mb-2">Related Components</h4>
        <ul class="text-sm text-blue-800 dark:text-blue-200 space-y-1">
            <li><code class="bg-blue-100 dark:bg-blue-800 px-1 rounded">tr</code> - Table row (selected, disabled, clickable props)</li>
            <li><code class="bg-blue-100 dark:bg-blue-800 px-1 rounded">th</code> - Table header cell (sortable, sorted, align, width props)</li>
            <li><code class="bg-blue-100 dark:bg-blue-800 px-1 rounded">td</code> - Table data cell (align, nowrap, truncate, muted props)</li>
        </ul>
    </div>

    {# Basic Table #}
    {% set basicPreview %}
        <twig:ui:table>
            {% block thead %}
                <twig:ui:tr>
                    <twig:ui:th>Name</twig:ui:th>
                    <twig:ui:th>Email</twig:ui:th>
                    <twig:ui:th>Role</twig:ui:th>
                </twig:ui:tr>
            {% endblock %}
            {% block tbody %}
                <twig:ui:tr>
                    <twig:ui:td>John Doe</twig:ui:td>
                    <twig:ui:td>john@example.com</twig:ui:td>
                    <twig:ui:td>Admin</twig:ui:td>
                </twig:ui:tr>
                <twig:ui:tr>
                    <twig:ui:td>Jane Smith</twig:ui:td>
                    <twig:ui:td>jane@example.com</twig:ui:td>
                    <twig:ui:td>Editor</twig:ui:td>
                </twig:ui:tr>
            {% endblock %}
        </twig:ui:table>
    {% endset %}
    {% set basicCode %}&lt;twig:ui:table&gt;
    {% verbatim %}{% block thead %}{% endverbatim %}
        &lt;twig:ui:tr&gt;
            &lt;twig:ui:th&gt;Name&lt;/twig:ui:th&gt;
            &lt;twig:ui:th&gt;Email&lt;/twig:ui:th&gt;
            &lt;twig:ui:th&gt;Role&lt;/twig:ui:th&gt;
        &lt;/twig:ui:tr&gt;
    {% verbatim %}{% endblock %}{% endverbatim %}
    {% verbatim %}{% block tbody %}{% endverbatim %}
        &lt;twig:ui:tr&gt;
            &lt;twig:ui:td&gt;John Doe&lt;/twig:ui:td&gt;
            &lt;twig:ui:td&gt;john@example.com&lt;/twig:ui:td&gt;
            &lt;twig:ui:td&gt;Admin&lt;/twig:ui:td&gt;
        &lt;/twig:ui:tr&gt;
    {% verbatim %}{% endblock %}{% endverbatim %}
&lt;/twig:ui:table&gt;{% endset %}
    {{ ui.story('Basic Table', basicPreview, basicCode) }}

    {# Striped and Hover #}
    {% set stripedPreview %}
        <twig:ui:table striped hover>
            {% block thead %}
                <twig:ui:tr>
                    <twig:ui:th>Name</twig:ui:th>
                    <twig:ui:th>Email</twig:ui:th>
                    <twig:ui:th>Role</twig:ui:th>
                </twig:ui:tr>
            {% endblock %}
            {% block tbody %}
                <twig:ui:tr>
                    <twig:ui:td>John Doe</twig:ui:td>
                    <twig:ui:td>john@example.com</twig:ui:td>
                    <twig:ui:td>Admin</twig:ui:td>
                </twig:ui:tr>
                <twig:ui:tr>
                    <twig:ui:td>Jane Smith</twig:ui:td>
                    <twig:ui:td>jane@example.com</twig:ui:td>
                    <twig:ui:td>Editor</twig:ui:td>
                </twig:ui:tr>
                <twig:ui:tr>
                    <twig:ui:td>Bob Wilson</twig:ui:td>
                    <twig:ui:td>bob@example.com</twig:ui:td>
                    <twig:ui:td>User</twig:ui:td>
                </twig:ui:tr>
            {% endblock %}
        </twig:ui:table>
    {% endset %}
    {% set stripedCode %}&lt;twig:ui:table striped hover&gt;
    ...
&lt;/twig:ui:table&gt;{% endset %}
    {{ ui.story('Striped with Hover', stripedPreview, stripedCode) }}

    {# Sortable Headers #}
    {% set sortablePreview %}
        <twig:ui:table>
            {% block thead %}
                <twig:ui:tr>
                    <twig:ui:th sortable sorted="asc">Name</twig:ui:th>
                    <twig:ui:th sortable>Email</twig:ui:th>
                    <twig:ui:th sortable align="right">Amount</twig:ui:th>
                </twig:ui:tr>
            {% endblock %}
            {% block tbody %}
                <twig:ui:tr>
                    <twig:ui:td>Alice</twig:ui:td>
                    <twig:ui:td>alice@example.com</twig:ui:td>
                    <twig:ui:td align="right">$120.00</twig:ui:td>
                </twig:ui:tr>
                <twig:ui:tr>
                    <twig:ui:td>Bob</twig:ui:td>
                    <twig:ui:td>bob@example.com</twig:ui:td>
                    <twig:ui:td align="right">$85.50</twig:ui:td>
                </twig:ui:tr>
            {% endblock %}
        </twig:ui:table>
    {% endset %}
    {% set sortableCode %}&lt;twig:ui:th sortable sorted="asc"&gt;Name&lt;/twig:ui:th&gt;
&lt;twig:ui:th sortable&gt;Email&lt;/twig:ui:th&gt;
&lt;twig:ui:th sortable align="right"&gt;Amount&lt;/twig:ui:th&gt;{% endset %}
    {{ ui.story('Sortable Headers', sortablePreview, sortableCode) }}

    {# Card Variant #}
    {% set cardPreview %}
        <twig:ui:table variant="card" striped>
            {% block thead %}
                <twig:ui:tr>
                    <twig:ui:th>Product</twig:ui:th>
                    <twig:ui:th align="right">Price</twig:ui:th>
                    <twig:ui:th align="center">Stock</twig:ui:th>
                </twig:ui:tr>
            {% endblock %}
            {% block tbody %}
                <twig:ui:tr>
                    <twig:ui:td>Widget A</twig:ui:td>
                    <twig:ui:td align="right">$29.99</twig:ui:td>
                    <twig:ui:td align="center">150</twig:ui:td>
                </twig:ui:tr>
                <twig:ui:tr>
                    <twig:ui:td>Widget B</twig:ui:td>
                    <twig:ui:td align="right">$49.99</twig:ui:td>
                    <twig:ui:td align="center">75</twig:ui:td>
                </twig:ui:tr>
            {% endblock %}
        </twig:ui:table>
    {% endset %}
    {% set cardCode %}&lt;twig:ui:table variant="card" striped&gt;
    ...
&lt;/twig:ui:table&gt;{% endset %}
    {{ ui.story('Card Variant', cardPreview, cardCode) }}

    {# Row States #}
    {% set statesPreview %}
        <twig:ui:table hover>
            {% block thead %}
                <twig:ui:tr>
                    <twig:ui:th>Item</twig:ui:th>
                    <twig:ui:th>Status</twig:ui:th>
                </twig:ui:tr>
            {% endblock %}
            {% block tbody %}
                <twig:ui:tr selected>
                    <twig:ui:td>Selected Row</twig:ui:td>
                    <twig:ui:td><twig:ui:badge color="primary">Selected</twig:ui:badge></twig:ui:td>
                </twig:ui:tr>
                <twig:ui:tr>
                    <twig:ui:td>Normal Row</twig:ui:td>
                    <twig:ui:td><twig:ui:badge color="gray">Normal</twig:ui:badge></twig:ui:td>
                </twig:ui:tr>
                <twig:ui:tr disabled>
                    <twig:ui:td>Disabled Row</twig:ui:td>
                    <twig:ui:td><twig:ui:badge color="gray">Disabled</twig:ui:badge></twig:ui:td>
                </twig:ui:tr>
            {% endblock %}
        </twig:ui:table>
    {% endset %}
    {% set statesCode %}&lt;twig:ui:tr selected&gt;...&lt;/twig:ui:tr&gt;
&lt;twig:ui:tr&gt;...&lt;/twig:ui:tr&gt;
&lt;twig:ui:tr disabled&gt;...&lt;/twig:ui:tr&gt;{% endset %}
    {{ ui.story('Row States', statesPreview, statesCode) }}

    {# Size Variants #}
    {% set sizesPreview %}
        <div class="space-y-8">
            <div>
                <p class="text-sm font-medium text-gray-500 mb-2">Small</p>
                <twig:ui:table size="sm" compact>
                    {% block thead %}
                        <twig:ui:tr>
                            <twig:ui:th>Name</twig:ui:th>
                            <twig:ui:th>Value</twig:ui:th>
                        </twig:ui:tr>
                    {% endblock %}
                    {% block tbody %}
                        <twig:ui:tr>
                            <twig:ui:td>Item 1</twig:ui:td>
                            <twig:ui:td>100</twig:ui:td>
                        </twig:ui:tr>
                    {% endblock %}
                </twig:ui:table>
            </div>
            <div>
                <p class="text-sm font-medium text-gray-500 mb-2">Large</p>
                <twig:ui:table size="lg">
                    {% block thead %}
                        <twig:ui:tr>
                            <twig:ui:th>Name</twig:ui:th>
                            <twig:ui:th>Value</twig:ui:th>
                        </twig:ui:tr>
                    {% endblock %}
                    {% block tbody %}
                        <twig:ui:tr>
                            <twig:ui:td>Item 1</twig:ui:td>
                            <twig:ui:td>100</twig:ui:td>
                        </twig:ui:tr>
                    {% endblock %}
                </twig:ui:table>
            </div>
        </div>
    {% endset %}
    {% set sizesCode %}&lt;twig:ui:table size="sm" compact&gt;...&lt;/twig:ui:table&gt;
&lt;twig:ui:table size="lg"&gt;...&lt;/twig:ui:table&gt;{% endset %}
    {{ ui.story('Size Variants', sizesPreview, sizesCode) }}
</div>
