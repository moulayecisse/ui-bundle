{% import '@Ui/ui_library/_macros.html.twig' as ui %}

<div class="space-y-6">
    {# Basic Text #}
    {% set basicPreview %}
        <twig:Ui:type:text value="Hello, World!" />
    {% endset %}
    {% set basicCode %}{% verbatim %}<twig:Ui:type:text value="Hello, World!" />{% endverbatim %}{% endset %}
    {{ ui.story('Basic Text', basicPreview, basicCode) }}

    {# Empty with Placeholder #}
    {% set placeholderPreview %}
        <twig:Ui:type:text value="" placeholder="No value" />
    {% endset %}
    {% set placeholderCode %}{% verbatim %}<twig:Ui:type:text value="" placeholder="No value" />{% endverbatim %}{% endset %}
    {{ ui.story('Empty with Placeholder', placeholderPreview, placeholderCode) }}

    {# Truncated Text #}
    {% set truncatePreview %}
        <div class="max-w-xs">
            <twig:Ui:type:text value="This is a very long text that should be truncated when it exceeds the container width" truncate />
        </div>
    {% endset %}
    {% set truncateCode %}{% verbatim %}<twig:Ui:type:text value="This is a very long text..." truncate />{% endverbatim %}{% endset %}
    {{ ui.story('Truncated', truncatePreview, truncateCode) }}

    {# As Link #}
    {% set linkPreview %}
        <twig:Ui:type:text value="Click here" href="https://example.com" />
    {% endset %}
    {% set linkCode %}{% verbatim %}<twig:Ui:type:text value="Click here" href="https://example.com" />{% endverbatim %}{% endset %}
    {{ ui.story('As Link', linkPreview, linkCode) }}

    {# With Copy Button #}
    {% set copyPreview %}
        <twig:Ui:type:text value="user@example.com" copyable />
    {% endset %}
    {% set copyCode %}{% verbatim %}<twig:Ui:type:text value="user@example.com" copyable />{% endverbatim %}{% endset %}
    {{ ui.story('With Copy Button', copyPreview, copyCode) }}
</div>
