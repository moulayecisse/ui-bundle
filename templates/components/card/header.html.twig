{% props title = '', description = '', class = '' %}

{% set class = ('flex justify-between items-center px-5 py-3 gap-5 ' ~ class )|tailwind_merge %}
{% set titleBlock %}{% block title title|raw %}{% endset %}
{% set descriptionBlock %}{% block description description|raw %}{% endset %}
{% set actionsBlock %}{% block actions '' %}{% endset %}

<div {{ attributes}} class="{{ class }}">
    <div class="flex flex-col flex-1 gap-2">
        {% block content %}
            <twig:Ui:card:title {{ ...attributes.nested('title') }}>{{ titleBlock|raw }}</twig:Ui:card:title>
            <twig:Ui:card:description {{ ...attributes.nested('description') }}>{{ descriptionBlock|raw }}</twig:Ui:card:description>
        {% endblock %}
    </div>

    {% block actions_wrapper %}
        <twig:Ui:card:actions {{ ...attributes.nested('actions') }}>{{ actionsBlock|raw }}</twig:Ui:card:actions>
    {% endblock %}
</div>
