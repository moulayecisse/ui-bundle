{% props value = false %}

<twig:ux:icon 
    name="heroicons:check-16-solid" 
    data-value="{{ value ? 'true' : 'false' }}"
    class="size-5 text-red-600 data-[value=true]:text-green-600 data-[value=true]:block data-[value=false]:hidden"
/>
<twig:ux:icon 
    name="heroicons:x-mark-16-solid" 
    data-value="{{ value ? 'true' : 'false' }}"
    class="size-5 text-red-600 data-[value=false]:text-red-600 data-[value=false]:block data-[value=true]:hidden"
/>
