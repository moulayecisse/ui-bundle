{% props
    expanded = false,
    class = '',
%}

{% set class = ('overflow-hidden group-data-[collapsed=true]/sidebar:hidden ' ~ class)|tailwind_merge %}

<div
    {{ attributes }}
    data-cisse--ui-bundle--menu-target="submenu"
    data-open="{{ expanded ? 'true' : 'false' }}"
    class="{{ class }}{{ expanded ? '' : ' hidden' }}"
>
    <ul class="flex flex-col gap-1 mt-2 ml-7 border-l border-white/20 pl-3">
        {% block content '' %}
    </ul>
</div>
