{% props
    type = 'button',
    class = '',
    variant = 'solid',
    color = 'primary',
    size = 'md',
    href = null,
    icon = null,
    iconRight = null,
    label = null,
    loading = false,
    disabled = false,
    block = false,
    bordered = false,
%}

{# Nested attributes for fine-grained customization #}
{% set iconAttrs = attributes.nested('icon') %}
{% set iconRightAttrs = attributes.nested('iconRight') %}
{% set labelAttrs = attributes.nested('label') %}

{# Color definitions for solid variant #}
{% set solidColors = {
    'primary': 'bg-primary text-primary-foreground hover:bg-primary/90 focus:ring-primary',
    'secondary': 'bg-secondary text-secondary-foreground hover:bg-secondary/90 focus:ring-secondary',
    'success': 'bg-emerald-500 text-white hover:bg-emerald-600 focus:ring-emerald-500',
    'warning': 'bg-amber-500 text-white hover:bg-amber-600 focus:ring-amber-500',
    'danger': 'bg-red-500 text-white hover:bg-red-600 focus:ring-red-500',
    'info': 'bg-blue-500 text-white hover:bg-blue-600 focus:ring-blue-500',
    'neutral': 'bg-gray-600 text-white hover:bg-gray-700 focus:ring-gray-500 dark:bg-gray-500 dark:hover:bg-gray-600',
    'white': 'bg-white text-gray-900 hover:bg-gray-100 focus:ring-gray-300 dark:bg-gray-900 dark:text-white dark:hover:bg-gray-800 dark:focus:ring-gray-700',
    'black': 'bg-slate-900 text-white hover:bg-slate-800 focus:ring-slate-700 dark:bg-white dark:text-slate-900 dark:hover:bg-slate-100 dark:focus:ring-slate-300',
} %}

{# Color definitions for outline variant #}
{% set outlineColors = {
    'primary': 'border-primary text-primary hover:bg-primary/10 focus:ring-primary',
    'secondary': 'border-secondary text-secondary hover:bg-secondary/10 focus:ring-secondary',
    'success': 'border-emerald-500 text-emerald-600 hover:bg-emerald-50 focus:ring-emerald-500 dark:text-emerald-400 dark:hover:bg-emerald-950',
    'warning': 'border-amber-500 text-amber-600 hover:bg-amber-50 focus:ring-amber-500 dark:text-amber-400 dark:hover:bg-amber-950',
    'danger': 'border-red-500 text-red-600 hover:bg-red-50 focus:ring-red-500 dark:text-red-400 dark:hover:bg-red-950',
    'info': 'border-blue-500 text-blue-600 hover:bg-blue-50 focus:ring-blue-500 dark:text-blue-400 dark:hover:bg-blue-950',
    'neutral': 'border-gray-300 text-gray-700 hover:bg-gray-50 focus:ring-gray-500 dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-800',
    'white': 'border-gray-200 text-gray-700 hover:bg-gray-50 focus:ring-gray-300 dark:border-gray-700 dark:text-gray-300 dark:hover:bg-gray-800',
    'black': 'border-slate-800 text-slate-900 hover:bg-slate-100 focus:ring-slate-700 dark:border-slate-200 dark:text-white dark:hover:bg-slate-800',
} %}

{# Color definitions for ghost variant #}
{% set ghostColors = {
    'primary': 'text-primary hover:bg-primary/10 focus:ring-primary',
    'secondary': 'text-secondary hover:bg-secondary/10 focus:ring-secondary',
    'success': 'text-emerald-600 hover:bg-emerald-50 focus:ring-emerald-500 dark:text-emerald-400 dark:hover:bg-emerald-950',
    'warning': 'text-amber-600 hover:bg-amber-50 focus:ring-amber-500 dark:text-amber-400 dark:hover:bg-amber-950',
    'danger': 'text-red-600 hover:bg-red-50 focus:ring-red-500 dark:text-red-400 dark:hover:bg-red-950',
    'info': 'text-blue-600 hover:bg-blue-50 focus:ring-blue-500 dark:text-blue-400 dark:hover:bg-blue-950',
    'neutral': 'text-gray-700 hover:bg-gray-100 focus:ring-gray-500 dark:text-gray-300 dark:hover:bg-gray-800',
    'white': 'text-gray-700 hover:bg-gray-100 focus:ring-gray-300 dark:text-gray-300 dark:hover:bg-gray-800',
    'black': 'text-slate-900 hover:bg-slate-100 focus:ring-slate-700 dark:text-white dark:hover:bg-slate-800',
} %}

{# Color definitions for soft variant #}
{% set softColors = {
    'primary': 'bg-primary/10 text-primary hover:bg-primary/20 focus:ring-primary dark:bg-primary/20 dark:hover:bg-primary/30',
    'secondary': 'bg-secondary/10 text-secondary hover:bg-secondary/20 focus:ring-secondary dark:bg-secondary/20 dark:hover:bg-secondary/30',
    'success': 'bg-emerald-100 text-emerald-700 hover:bg-emerald-200 focus:ring-emerald-500 dark:bg-emerald-900/30 dark:text-emerald-400 dark:hover:bg-emerald-900/50',
    'warning': 'bg-amber-100 text-amber-700 hover:bg-amber-200 focus:ring-amber-500 dark:bg-amber-900/30 dark:text-amber-400 dark:hover:bg-amber-900/50',
    'danger': 'bg-red-100 text-red-700 hover:bg-red-200 focus:ring-red-500 dark:bg-red-900/30 dark:text-red-400 dark:hover:bg-red-900/50',
    'info': 'bg-blue-100 text-blue-700 hover:bg-blue-200 focus:ring-blue-500 dark:bg-blue-900/30 dark:text-blue-400 dark:hover:bg-blue-900/50',
    'neutral': 'bg-gray-100 text-gray-700 hover:bg-gray-200 focus:ring-gray-500 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700',
    'white': 'bg-gray-100 text-gray-700 hover:bg-gray-200 focus:ring-gray-300 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700',
    'black': 'bg-slate-200 text-slate-900 hover:bg-slate-300 focus:ring-slate-700 dark:bg-slate-700 dark:text-white dark:hover:bg-slate-600',
} %}

{# Border classes for bordered prop #}
{% set borderColors = {
    'primary': 'border border-primary/30 dark:border-primary/40',
    'secondary': 'border border-secondary/30 dark:border-secondary/40',
    'success': 'border border-emerald-600/30 dark:border-emerald-400/40',
    'warning': 'border border-amber-600/30 dark:border-amber-400/40',
    'danger': 'border border-red-600/30 dark:border-red-400/40',
    'info': 'border border-blue-600/30 dark:border-blue-400/40',
    'neutral': 'border border-gray-400/50 dark:border-gray-500/50',
    'white': 'border border-gray-300 dark:border-gray-600',
    'black': 'border border-slate-400/50 dark:border-slate-400/50',
} %}

{% set borderedClass = bordered ? (borderColors[color] ?? borderColors['primary']) : '' %}

{# Get variant-specific color classes #}
{% set variantColorMap = {
    'solid': solidColors,
    'outline': outlineColors,
    'ghost': ghostColors,
    'soft': softColors,
} %}

{% set currentVariantColors = variantColorMap[variant] ?? solidColors %}
{% set colorClass = currentVariantColors[color] ?? currentVariantColors['primary'] %}

{# Variant base classes #}
{% set variantBaseClass = {
    'solid': '',
    'outline': 'border bg-transparent',
    'ghost': 'bg-transparent',
    'soft': '',
}[variant] ?? '' %}

{# Size classes #}
{% set sizeClasses = {
    'xs': 'px-2 py-1 text-xs gap-1',
    'sm': 'px-3 py-1.5 text-sm gap-1.5',
    'md': 'px-4 py-2 text-sm gap-2',
    'lg': 'px-5 py-2.5 text-base gap-2',
    'xl': 'px-6 py-3 text-lg gap-2.5',
} %}

{# Icon size classes #}
{% set iconSizeClasses = {
    'xs': 'size-3',
    'sm': 'size-4',
    'md': 'size-4',
    'lg': 'size-5',
    'xl': 'size-6',
} %}

{% set baseClass = 'inline-flex items-center justify-center font-medium rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed' %}
{% set blockClass = block ? 'w-full' : '' %}

{% set class = (baseClass ~ ' ' ~ variantBaseClass ~ ' ' ~ colorClass ~ ' ' ~ borderedClass ~ ' ' ~ (sizeClasses[size] ?? sizeClasses['md']) ~ ' ' ~ blockClass ~ ' ' ~ class)|tailwind_merge %}

{% set iconSize = iconSizeClasses[size] ?? iconSizeClasses['md'] %}

{% set contentBlock %}{% block content %}
    {# Loading spinner #}
    {% if loading %}
        <twig:ux:icon name="lucide:loader-2" class="{{ iconSize }} animate-spin" />
    {% elseif icon %}
        <twig:ux:icon name="{{ icon }}" class="{{ (iconSize ~ ' ' ~ iconAttrs.render('class'))|tailwind_merge }}" {{ ...iconAttrs.without('class') }} />
    {% endif %}

    {# Label/slot content #}
    {% if label %}
        <span class="{{ labelAttrs.render('class')|tailwind_merge }}" {{ labelAttrs.without('class') }}>{{ label }}</span>
    {% endif %}

    {# Right icon (hidden when loading) #}
    {% if iconRight and not loading %}
        <twig:ux:icon name="{{ iconRight }}" class="{{ (iconSize ~ ' ' ~ iconRightAttrs.render('class'))|tailwind_merge }}" {{ ...iconRightAttrs.without('class') }} />
    {% endif %}
{% endblock %}{% endset %}

{% if href %}
    <a
        {{ attributes }}
        href="{{ href }}"
        class="{{ class }}"
    >
        {{ contentBlock|raw }}
    </a>
{% else %}
    <button
        {{ attributes }}
        type="{{ type }}"
        class="{{ class }}"
        {% if disabled or loading %}disabled{% endif %}
    >
        {{ contentBlock|raw }}
    </button>
{% endif %}
