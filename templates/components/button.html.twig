{% props
    type = 'button',
    class = '',
    variant = 'primary',
    size = 'md',
    href = null,
    icon = null,
    iconRight = null,
    label = null,
    loading = false,
    disabled = false,
    block = false,
%}

{# Variant classes matching Vue Button #}
{% set variantClasses = {
    'primary': 'bg-primary text-primary-foreground hover:bg-primary/90 focus:ring-primary',
    'secondary': 'bg-secondary text-secondary-foreground hover:bg-secondary/90 focus:ring-secondary',
    'outline': 'border border-gray-300 bg-transparent text-gray-700 hover:bg-gray-50 focus:ring-primary dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-800',
    'ghost': 'bg-transparent text-gray-700 hover:bg-gray-100 focus:ring-primary dark:text-gray-300 dark:hover:bg-gray-800',
    'danger': 'bg-red-500 text-white hover:bg-red-600 focus:ring-red-500',
    'success': 'bg-green-500 text-white hover:bg-green-600 focus:ring-green-500',
} %}

{# Size classes matching Vue Button #}
{% set sizeClasses = {
    'xs': 'px-2 py-1 text-xs gap-1',
    'sm': 'px-3 py-1.5 text-sm gap-1.5',
    'md': 'px-4 py-2 text-sm gap-2',
    'lg': 'px-5 py-2.5 text-base gap-2',
    'xl': 'px-6 py-3 text-lg gap-2.5',
} %}

{# Icon size classes #}
{% set iconSizeClasses = {
    'xs': 'size-3',
    'sm': 'size-4',
    'md': 'size-4',
    'lg': 'size-5',
    'xl': 'size-6',
} %}

{% set baseClass = 'inline-flex items-center justify-center font-medium rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed' %}
{% set blockClass = block ? 'w-full' : '' %}

{% set class = (baseClass ~ ' ' ~ (variantClasses[variant] ?? variantClasses['primary']) ~ ' ' ~ (sizeClasses[size] ?? sizeClasses['md']) ~ ' ' ~ blockClass ~ ' ' ~ class)|tailwind_merge %}

{% set iconSize = iconSizeClasses[size] ?? iconSizeClasses['md'] %}

{% set contentBlock %}{% block content %}
    {# Loading spinner #}
    {% if loading %}
        <twig:ux:icon name="lucide:loader-2" class="{{ iconSize }} animate-spin" />
    {% elseif icon %}
        <twig:ux:icon name="{{ icon }}" class="{{ iconSize }}" />
    {% endif %}

    {# Label/slot content #}
    {% if label %}
        <span>{{ label }}</span>
    {% endif %}

    {# Right icon (hidden when loading) #}
    {% if iconRight and not loading %}
        <twig:ux:icon name="{{ iconRight }}" class="{{ iconSize }}" />
    {% endif %}
{% endblock %}{% endset %}

{% if href %}
    <a
        {{ attributes }}
        href="{{ href }}"
        class="{{ class }}"
    >
        {{ contentBlock|raw }}
    </a>
{% else %}
    <button
        {{ attributes }}
        type="{{ type }}"
        class="{{ class }}"
        {% if disabled or loading %}disabled{% endif %}
    >
        {{ contentBlock|raw }}
    </button>
{% endif %}
