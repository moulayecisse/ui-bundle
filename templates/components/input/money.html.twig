{% props
  form = null,
  class = '',
  value = null,
  name = null,
  id = null,
  required = null,
  autofocus = null,
  disabled = null,
  placeholder = '0.00',
  currency = 'EUR',
  min = null,
  max = null,
  decimals = 2,
  size = 'md',
  variant = 'default',
  rounded = 'lg',
%}

{# Nested attributes for fine-grained customization #}
{% set wrapperAttrs = attributes.nested('wrapper') %}
{% set inputAttrs = attributes.nested('input') %}
{% set symbolAttrs = attributes.nested('symbol') %}

{% set id = id ?? name %}

{% if form %}
  {% set value = value ?? field_value(form) %}
  {% set name = name ?? field_name(form) %}
  {% set id = id ?? form.vars.id %}
  {% set required = required ?? form.vars.required %}
  {% set disabled = disabled ?? form.vars.disabled %}
{% endif %}

{% set currencies = {
  'EUR': { symbol: '€', position: 'suffix' },
  'USD': { symbol: '$', position: 'prefix' },
  'GBP': { symbol: '£', position: 'prefix' },
  'XOF': { symbol: 'CFA', position: 'suffix' },
  'MAD': { symbol: 'DH', position: 'suffix' },
  'CHF': { symbol: 'CHF', position: 'suffix' },
  'CAD': { symbol: 'CA$', position: 'prefix' },
} %}

{% set config = currencies[currency] ?? currencies['EUR'] %}

{# Size configuration for input padding #}
{% set sizeConfig = {
  'sm': 'px-2.5 py-1',
  'md': 'px-3 py-1.5',
  'lg': 'px-4 py-2',
} %}

{% set inputPadding = sizeConfig[size] ?? sizeConfig['md'] %}

<twig:ui:input-wrapper
  :disabled="disabled"
  :size="size"
  :variant="variant"
  :rounded="rounded"
  class="{{ (class ~ ' ' ~ wrapperAttrs.render('class'))|tailwind_merge }}"
  {{ ...wrapperAttrs.without('class') }}
>
  {% block before %}
    {% if config.position == 'prefix' %}
      <span class="{{ ('text-sm font-medium text-gray-500 dark:text-gray-400 ' ~ symbolAttrs.render('class'))|tailwind_merge }}" {{ symbolAttrs.without('class') }}>
        {{ config.symbol }}
      </span>
    {% endif %}
  {% endblock %}

  {% block content %}
    <input
      {{ attributes.without('wrapper', 'input', 'symbol') }}
      class="{{ ('block w-full bg-transparent focus:outline-none text-right ' ~ inputPadding ~ ' ' ~ inputAttrs.render('class'))|tailwind_merge }}"
      {{ inputAttrs.without('class') }}
      {% if value is not null %}value="{{ value }}"{% endif %}
      {% if name %}name="{{ name }}"{% endif %}
      {% if id %}id="{{ id }}"{% endif %}
      type="text"
      inputmode="decimal"
      placeholder="{{ placeholder }}"
      {% if min is not null %}data-min="{{ min }}"{% endif %}
      {% if max is not null %}data-max="{{ max }}"{% endif %}
      data-decimals="{{ decimals }}"
      {{ required ? 'required' }}
      {{ autofocus ? 'autofocus' }}
      {{ disabled ? 'disabled' }}
    >
  {% endblock %}

  {% block after %}
    {% if config.position == 'suffix' %}
      <span class="{{ ('text-sm font-medium text-gray-500 dark:text-gray-400 ' ~ symbolAttrs.render('class'))|tailwind_merge }}" {{ symbolAttrs.without('class') }}>
        {{ config.symbol }}
      </span>
    {% endif %}
  {% endblock %}
</twig:ui:input-wrapper>
