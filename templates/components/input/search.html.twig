{% props
  form = null,
  class = '',
  value = null,
  name = null,
  id = null,
  icon = 'heroicons:magnifying-glass',
  placeholder = 'Search...',
  required = null,
  autofocus = null,
  autocomplete = null,
  disabled = null,
  size = 'md',
  variant = 'default',
  rounded = 'lg',
%}

{# Nested attributes for fine-grained customization #}
{% set wrapperAttrs = attributes.nested('wrapper') %}
{% set iconAttrs = attributes.nested('icon') %}
{% set inputAttrs = attributes.nested('input') %}

{% set id = id ?? name %}

{% if form %}
  {% set value = value ?? field_value(form) %}
  {% set name = name ?? field_name(form) %}
  {% set id = id ?? form.vars.id %}
  {% set required = required ?? form.vars.required %}
  {% set disabled = disabled ?? form.vars.disabled %}
{% endif %}

{# Size configuration for icon and padding #}
{% set inputSizeConfig = {
  'sm': { icon: 'size-4', padding: 'px-2.5 py-1' },
  'md': { icon: 'size-5', padding: 'px-3 py-1.5' },
  'lg': { icon: 'size-6', padding: 'px-4 py-2' },
} %}

{% set inputSize = inputSizeConfig[size] ?? inputSizeConfig['md'] %}

<twig:ui:input-wrapper
  :disabled="disabled"
  :size="size"
  :variant="variant"
  :rounded="rounded"
  class="{{ (class ~ ' ' ~ wrapperAttrs.render('class'))|tailwind_merge }}"
  before:class="pl-1"
  {{ ...wrapperAttrs.without('class') }}
>
  {% block before %}
    <twig:ux:icon
      name="{{ iconAttrs.render('name')|default(icon) }}"
      class="{{ (inputSize.icon ~ ' text-gray-400 dark:text-gray-500 ' ~ iconAttrs.render('class'))|tailwind_merge }}"
    />
  {% endblock %}

  {% block content %}
    <!--suppress HtmlFormInputWithoutLabel -->
    <input
      {{ attributes.without('wrapper', 'icon', 'input') }}
      type="search"
      class="{{ ('block w-full bg-transparent focus:outline-none ' ~ inputSize.padding ~ ' ' ~ inputAttrs.render('class'))|tailwind_merge }}"
      {{ inputAttrs.without('class') }}
      {% if value is not null %}value="{{ value }}"{% endif %}
      {% if name %}name="{{ name }}"{% endif %}
      {% if id %}id="{{ id }}"{% endif %}
      {% if placeholder %}placeholder="{{ placeholder }}"{% endif %}
      {% if autocomplete %}autocomplete="{{ autocomplete }}"{% endif %}
      {{ required ? 'required' }}
      {{ autofocus ? 'autofocus' }}
      {{ disabled ? 'disabled' }}
    >
  {% endblock %}
</twig:ui:input-wrapper>
