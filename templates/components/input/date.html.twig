{% props
  type = 'date',
  form = null,
  class = '',
  value = null,
  name = null,
  id = null,
  required = null,
  autofocus = false,
  autocomplete = null,
  placeholder = 'YYYY-MM-DD',
  disabled = null,
  size = 'md',
  variant = 'default',
  rounded = 'lg',
%}

{# Nested attributes for fine-grained customization #}
{% set wrapperAttrs = attributes.nested('wrapper') %}
{% set inputAttrs = attributes.nested('input') %}
{% set iconAttrs = attributes.nested('icon') %}

{% set id = id ?? name %}

{% if form %}
  {% set value = value ?? field_value(form) %}
  {% set name = name ?? field_name(form) %}
  {% set id = id ?? form.vars.id %}
  {% set required = required ?? form.vars.required %}
  {% set disabled = disabled ?? form.vars.disabled %}
{% endif %}

{# Size configuration for input padding and icon #}
{% set dateSizeConfig = {
  'sm': { padding: 'px-2.5 py-1', icon: 'size-4' },
  'md': { padding: 'px-3 py-1.5', icon: 'size-5' },
  'lg': { padding: 'px-4 py-2', icon: 'size-6' },
} %}

{% set dateSize = dateSizeConfig[size] ?? dateSizeConfig['md'] %}

<twig:ui:input-wrapper
  :disabled="disabled"
  :size="size"
  :variant="variant"
  :rounded="rounded"
  class="{{ (class ~ ' ' ~ wrapperAttrs.render('class'))|tailwind_merge }}"
  {{ ...wrapperAttrs.without('class') }}
>
  {% block content %}
    <input
      {{ inputAttrs.without('class') }}
      {% if value is not null %}value="{{ value }}"{% endif %}
      {% if name %}name="{{ name }}"{% endif %}
      {% if id %}id="{{ id }}"{% endif %}
      {% if autocomplete %}autocomplete="{{ autocomplete }}"{% endif %}
      type="{{ type }}"
      {{ required ? 'required' }}
      {{ autofocus ? 'autofocus' }}
      {{ disabled ? 'disabled' }}
      class="{{ ('block w-full bg-transparent focus:outline-none ' ~ dateSize.padding ~ ' ' ~ inputAttrs.render('class'))|tailwind_merge }}"
      onclick="this.showPicker()"
    />
  {% endblock %}

  {% block after %}
    <span
      class="{{ ('pointer-events-none text-gray-500 dark:text-gray-400 ' ~ iconAttrs.render('class'))|tailwind_merge }}"
      {{ iconAttrs.without('class') }}
    >
      <svg
        class="{{ 'fill-current ' ~ dateSize.icon }}"
        viewBox="0 0 20 20"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          fill-rule="evenodd"
          clip-rule="evenodd"
          d="M6.66659 1.5415C7.0808 1.5415 7.41658 1.87729 7.41658 2.2915V2.99984H12.5833V2.2915C12.5833 1.87729 12.919 1.5415 13.3333 1.5415C13.7475 1.5415 14.0833 1.87729 14.0833 2.2915V2.99984L15.4166 2.99984C16.5212 2.99984 17.4166 3.89527 17.4166 4.99984V7.49984V15.8332C17.4166 16.9377 16.5212 17.8332 15.4166 17.8332H4.58325C3.47868 17.8332 2.58325 16.9377 2.58325 15.8332V7.49984V4.99984C2.58325 3.89527 3.47868 2.99984 4.58325 2.99984L5.91659 2.99984V2.2915C5.91659 1.87729 6.25237 1.5415 6.66659 1.5415ZM6.66659 4.49984H4.58325C4.30711 4.49984 4.08325 4.7237 4.08325 4.99984V6.74984H15.9166V4.99984C15.9166 4.7237 15.6927 4.49984 15.4166 4.49984H13.3333H6.66659ZM15.9166 8.24984H4.08325V15.8332C4.08325 16.1093 4.30711 16.3332 4.58325 16.3332H15.4166C15.6927 16.3332 15.9166 16.1093 15.9166 15.8332V8.24984Z"
          fill=""
        />
      </svg>
    </span>
  {% endblock %}
</twig:ui:input-wrapper>
