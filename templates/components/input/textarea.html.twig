{% props
    class = '',
    value = '',
    rows = 3,
    form = null,
    name = null,
    id = null,
    value = null,
    required = null,
    autofocus = false,
    disabled = null, %}

{% if form %}
    {% set name = name ?? form.vars.full_name %}
    {% set id = id ?? form.vars.id %}
    {% set value = value ?? form.vars.value %}
    {% set required = required ?? form.vars.required %}
    {% set disabled = disabled ?? form.vars.disabled %}
{% endif %}

{% set contentBlock %}{% block content value %}{% endset %}

<twig:Ui:input-wrapper
        :disabled="disabled"
        :class="class"
><textarea
  {{ attributes }}
    class="block w-full bg-transparent px-3 py-1.5 focus:outline-none"
    rows="{{ rows }}"
    {{ outerScope.attributes }}
            {% if name %}name="{{ name }}"{% endif %}
            {% if id %}id="{{ id }}"{% endif %}
            {{ required ? 'required' }}
            {{ autofocus ? 'autofocus' }}
            {{ disabled ? 'disabled' }}
>{{ contentBlock|raw }}</textarea></twig:Ui:input-wrapper>

