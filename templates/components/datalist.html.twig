{% props items = [], class = '' %}
{% set class = ('divide-y divide-gray-100 dark:divide-gray-900 ' ~ class)|tailwind_merge %}

<dl {{ attributes }} class="{{ class }}">

  {% block content %}
    {% for item in items %}
      {% set block_content %}
        {% set block_name = 'item_' ~ loop.index %}

        {% if block(block_name) is defined %}
          {{ block(block_name) }}
        {% else %}
          <twig:ui:datalist:item>
            {% set label_block_name = 'label_' ~ loop.index %}
            {% if block(label_block_name) is defined %}
              {{ block(label_block_name) }}
            {% else %}
              <twig:ui:datalist:label>{{ (item.label ?? '')|raw }}</twig:ui:datalist:label>
            {% endif %}

            {% set value_block_name = 'value_' ~ loop.index %}
            {% if block(value_block_name) is defined %}
              {{ block(value_block_name) }}
            {% else %}
              <twig:ui:datalist:value>{{ (item.value ?? '')|raw }}</twig:ui:datalist:value>
            {% endif %}
          </twig:ui:datalist:item>
        {% endif %}
      {% endset %}

      {{ block_content|raw }}
    {% endfor %}
  {% endblock %}
</dl>
