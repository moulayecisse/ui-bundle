{# @deprecated Use <twig:ui:card collapsible> instead #}
{# Kept for backward compatibility #}
{% props
    class = '',
    title = '',
    description = '',
    defaultExpanded = true,
    divide = false,
    icon = '',
%}

{% set headerContent %}{% block header '' %}{% endset %}
{% set actionsContent %}{% block actions '' %}{% endset %}
{% set mainContent %}{% block content '' %}{% endset %}
{% set footerContent %}{% block footer '' %}{% endset %}

<twig:ui:card
    collapsible
    :title="title"
    :description="description"
    :defaultExpanded="defaultExpanded"
    :divide="divide"
    :icon="icon"
    class="{{ class }}"
    {{ ...attributes }}
>
    <twig:block name="header">{{ headerContent|raw }}</twig:block>
    <twig:block name="actions">{{ actionsContent|raw }}</twig:block>
    <twig:block name="content">{{ mainContent|raw }}</twig:block>
    <twig:block name="footer">{{ footerContent|raw }}</twig:block>
</twig:ui:card>
