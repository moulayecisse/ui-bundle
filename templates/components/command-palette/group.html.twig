{% props
    class = '',
    heading = null,
%}

{% set contentBlock %}{% block content '' %}{% endset %}

<div
    {{ attributes }}
    data-cisse--ui-bundle--command-palette-target="group"
    class="{{ ('px-2 ' ~ class)|tailwind_merge }}"
>
    {% if heading %}
        <div class="px-2 py-1.5 text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">
            {{ heading }}
        </div>
    {% endif %}
    <div class="space-y-0.5">
        {{ contentBlock|raw }}
    </div>
</div>
