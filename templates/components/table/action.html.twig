{% props
  class = '',
%}
{%- set contentBlock -%}{% block content '' %}{%- endset -%}

{% if contentBlock %}
  <twig:ui:button {{ ...attributes }} class="{{ ('p-1.5 ' ~ class)|tailwind_merge }}">{{ contentBlock|raw }}</twig:ui:button>
{% else %}
  <twig:ui:button {{ ...attributes }} class="{{ ('p-1.5 ' ~ class)|tailwind_merge }}" />
{% endif %}
