{% props
    class = '',
    first = false,
    align = 'left',
    nowrap = false,
    truncate = false,
    muted = false,
    text = null,
%}

{% set alignClasses = {
    'left': 'text-left',
    'center': 'text-center',
    'right': 'text-right',
} %}

{% set baseClass = 'px-3 py-4 text-sm font-medium in-data-[compact=true]:py-2 in-data-[size=sm]:text-xs in-data-[size=lg]:text-base' %}
{% set colorClass = muted ? 'text-slate-400 dark:text-slate-500' : 'text-slate-700 dark:text-slate-300' %}
{% set class = (baseClass ~ ' ' ~ colorClass ~ ' ' ~ (alignClasses[align] ?? alignClasses['left']) ~ ' ' ~ (first ? 'pl-4 sm:pl-0 ' : '') ~ (nowrap ? 'whitespace-nowrap ' : '') ~ (truncate ? 'max-w-xs truncate ' : '') ~ class)|tailwind_merge %}

<td {{ attributes }} class="{{ class }}">
    {% block content text %}
</td>