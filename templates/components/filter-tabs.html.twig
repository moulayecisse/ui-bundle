{# templates/components/Ui/filter-tabs.html.twig #}
{# Tab-like filter controls component #}
{% props
    class = '',
    options = [],
    value = null,
    name = 'filter',
    variant = 'pills',
    size = 'md',
    fullWidth = false
%}

{# Size classes #}
{% set sizeClasses = {
    'sm': 'px-3 py-1.5 text-xs',
    'md': 'px-4 py-2.5 text-sm',
    'lg': 'px-5 py-3 text-base'
} %}

{# Pills variant #}
{% if variant == 'pills' %}
    {% set containerClass = ('inline-flex p-1 bg-white dark:bg-slate-800 rounded-2xl shadow-sm border border-gray-100 dark:border-slate-700 gap-1 ' ~ (fullWidth ? 'w-full' : '') ~ ' ' ~ class)|tailwind_merge %}

    <div
        {{ attributes }}
        data-controller="cisse--ui-bundle--filter-tabs"
        class="{{ containerClass }}"
    >
        <input type="hidden" name="{{ name }}" data-cisse--ui-bundle--filter-tabs-target="input" value="{{ value }}" />

        {% for option in options %}
            <button
                type="button"
                data-action="click->cisse--ui-bundle--filter-tabs#select"
                data-value="{{ option.key }}"
                data-cisse--ui-bundle--filter-tabs-target="tab"
                {% if option.disabled is defined and option.disabled %}disabled{% endif %}
                class="flex items-center justify-center gap-2 rounded-xl font-medium transition-all {{ fullWidth ? 'flex-1' : '' }} {{ sizeClasses[size] }} {{ value == option.key ? 'bg-primary-500 text-white shadow-md' : 'text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white hover:bg-gray-50 dark:hover:bg-slate-700' }} {{ option.disabled is defined and option.disabled ? 'opacity-50 cursor-not-allowed' : '' }}"
            >
                {% if option.icon is defined and option.icon %}
                    <twig:ux:icon name="{{ option.icon }}" class="size-4" />
                {% endif %}
                <span>{{ option.label }}</span>
                {% if option.count is defined %}
                    <span class="px-1.5 py-0.5 rounded-full text-xs font-medium {{ value == option.key ? 'bg-white/20 text-white' : 'bg-gray-100 dark:bg-slate-700 text-gray-600 dark:text-gray-400' }}">
                        {{ option.count }}
                    </span>
                {% endif %}
            </button>
        {% endfor %}
    </div>

{# Underline variant #}
{% elseif variant == 'underline' %}
    {% set containerClass = ('flex border-b border-gray-200 dark:border-slate-700 ' ~ (fullWidth ? 'w-full' : '') ~ ' ' ~ class)|tailwind_merge %}

    <div
        {{ attributes }}
        data-controller="cisse--ui-bundle--filter-tabs"
        class="{{ containerClass }}"
    >
        <input type="hidden" name="{{ name }}" data-cisse--ui-bundle--filter-tabs-target="input" value="{{ value }}" />

        {% for option in options %}
            <button
                type="button"
                data-action="click->cisse--ui-bundle--filter-tabs#select"
                data-value="{{ option.key }}"
                data-cisse--ui-bundle--filter-tabs-target="tab"
                {% if option.disabled is defined and option.disabled %}disabled{% endif %}
                class="flex items-center justify-center gap-2 font-medium transition-all border-b-2 -mb-px {{ fullWidth ? 'flex-1' : '' }} {{ sizeClasses[size] }} {{ value == option.key ? 'border-primary-500 text-primary-600 dark:text-primary-400' : 'border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300' }} {{ option.disabled is defined and option.disabled ? 'opacity-50 cursor-not-allowed' : '' }}"
            >
                {% if option.icon is defined and option.icon %}
                    <twig:ux:icon name="{{ option.icon }}" class="size-4" />
                {% endif %}
                <span>{{ option.label }}</span>
                {% if option.count is defined %}
                    <span class="px-1.5 py-0.5 rounded-full text-xs font-medium {{ value == option.key ? 'bg-primary-100 dark:bg-primary-900/30 text-primary-600 dark:text-primary-400' : 'bg-gray-100 dark:bg-slate-700 text-gray-500' }}">
                        {{ option.count }}
                    </span>
                {% endif %}
            </button>
        {% endfor %}
    </div>

{# Boxed variant #}
{% elseif variant == 'boxed' %}
    {% set containerClass = ('inline-flex bg-gray-100 dark:bg-slate-800 rounded-xl p-1 gap-1 ' ~ (fullWidth ? 'w-full' : '') ~ ' ' ~ class)|tailwind_merge %}

    <div
        {{ attributes }}
        data-controller="cisse--ui-bundle--filter-tabs"
        class="{{ containerClass }}"
    >
        <input type="hidden" name="{{ name }}" data-cisse--ui-bundle--filter-tabs-target="input" value="{{ value }}" />

        {% for option in options %}
            <button
                type="button"
                data-action="click->cisse--ui-bundle--filter-tabs#select"
                data-value="{{ option.key }}"
                data-cisse--ui-bundle--filter-tabs-target="tab"
                {% if option.disabled is defined and option.disabled %}disabled{% endif %}
                class="flex items-center justify-center gap-2 rounded-lg font-medium transition-all {{ fullWidth ? 'flex-1' : '' }} {{ sizeClasses[size] }} {{ value == option.key ? 'bg-white dark:bg-slate-700 text-gray-900 dark:text-white shadow-sm' : 'text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white' }} {{ option.disabled is defined and option.disabled ? 'opacity-50 cursor-not-allowed' : '' }}"
            >
                {% if option.icon is defined and option.icon %}
                    <twig:ux:icon name="{{ option.icon }}" class="size-4" />
                {% endif %}
                <span>{{ option.label }}</span>
                {% if option.count is defined %}
                    <span class="px-1.5 py-0.5 rounded-full text-xs font-medium {{ value == option.key ? 'bg-gray-100 dark:bg-slate-600 text-gray-600 dark:text-gray-300' : 'bg-gray-200 dark:bg-slate-700 text-gray-500 dark:text-gray-400' }}">
                        {{ option.count }}
                    </span>
                {% endif %}
            </button>
        {% endfor %}
    </div>
{% endif %}
