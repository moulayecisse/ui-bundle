{# UX BUNDLE TABS COMPONENT #}
{% props
    class = '',
    current = '',
    tabs = [],
    variant = 'underline',
    size = 'md',
    fullWidth = false,
    orientation = 'horizontal',
    animated = true,
%}

{# Size configurations #}
{% set sizeClasses = {
    'sm': 'text-xs px-3 py-1.5',
    'md': 'text-sm px-4 py-2',
    'lg': 'text-base px-5 py-2.5',
} %}

{% set iconSizes = {
    'sm': 'size-3',
    'md': 'size-4',
    'lg': 'size-5',
} %}

{# Variant classes matching Vue Tabs #}
{% set variantClasses = {
    'underline': {
        'container': 'border-b border-gray-200 dark:border-gray-700',
        'tab': 'border-b-2 -mb-px px-4 py-2',
        'active': 'border-primary text-primary dark:text-primary',
        'inactive': 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 dark:text-gray-400 dark:hover:text-gray-300'
    },
    'pills': {
        'container': 'gap-2',
        'tab': 'px-4 py-2 rounded-lg',
        'active': 'bg-primary text-white',
        'inactive': 'text-gray-500 hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-800'
    },
    'boxed': {
        'container': 'bg-gray-100 dark:bg-gray-800 p-1 rounded-lg gap-1',
        'tab': 'px-4 py-2 rounded-md',
        'active': 'bg-white dark:bg-gray-900 text-gray-900 dark:text-white shadow-sm',
        'inactive': 'text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300'
    }
} %}

{% set currentVariant = variantClasses[variant] ?? variantClasses['underline'] %}
{% set orientationClasses = {
    'horizontal': 'flex-row',
    'vertical': 'flex-col',
} %}
{% set containerClass = ('flex ' ~ (orientationClasses[orientation] ?? 'flex-row') ~ ' ' ~ currentVariant.container ~ ' ' ~ (fullWidth ? 'w-full' : '') ~ ' ' ~ class)|tailwind_merge %}
{% set tabSizeClass = sizeClasses[size] ?? sizeClasses['md'] %}
{% set iconSize = iconSizes[size] ?? iconSizes['md'] %}

<div
    {{ attributes }}
    data-controller="cisse--ui-bundle--tabs"
    data-cisse--ui-bundle--tabs-current-value="{{ current }}"
    data-orientation="{{ orientation }}"
    data-animated="{{ animated ? 'true' : 'false' }}"
    class="{{ orientation == 'vertical' ? 'flex gap-4' : '' }}"
>
    <div class="{{ containerClass }}" role="tablist">
        {# If tabs array is provided, render tabs from it #}
        {% if tabs|length > 0 %}
            {% for tab in tabs %}
                <button
                    type="button"
                    role="tab"
                    data-action="click->cisse--ui-bundle--tabs#select"
                    data-cisse--ui-bundle--tabs-target="tab"
                    data-key="{{ tab.key }}"
                    aria-selected="{{ current == tab.key ? 'true' : 'false' }}"
                    {% if tab.disabled is defined and tab.disabled %}disabled{% endif %}
                    class="font-medium {{ animated ? 'transition-colors' : '' }} focus:outline-none disabled:cursor-not-allowed disabled:opacity-50 {{ tabSizeClass }} {{ currentVariant.tab }} {{ current == tab.key ? currentVariant.active : currentVariant.inactive }} {{ fullWidth ? 'flex-1 justify-center' : '' }} inline-flex items-center"
                >
                    {% if tab.icon is defined and tab.icon %}
                        <twig:ux:icon name="{{ tab.icon }}" class="{{ iconSize }} mr-1.5" />
                    {% endif %}
                    {{ tab.label }}
                    {% if tab.badge is defined and tab.badge %}
                        <twig:Ui:badge size="sm" class="ml-2">{{ tab.badge }}</twig:Ui:badge>
                    {% endif %}
                </button>
            {% endfor %}
        {% else %}
            {# Use block content for manual tab items #}
            {% block content '' %}
        {% endif %}
    </div>
    <div class="{{ orientation == 'vertical' ? 'flex-1' : 'mt-4' }}" data-cisse--ui-bundle--tabs-target="panels">
        {% block panels '' %}
    </div>
</div>
