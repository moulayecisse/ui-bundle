{# templates/components/dropdown/header.html.twig #}
{% props
    icon = null,
    class = '',
%}

<div
    {{ attributes.without('class') }}
    class="{{ ('flex items-center gap-2 px-3 py-2 text-sm font-medium text-gray-900 dark:text-gray-100 ' ~ class)|tailwind_merge }}"
>
    {% if icon %}
        <twig:ux:icon
            name="{{ icon }}"
            class="{{ ('size-4 shrink-0 text-gray-500 dark:text-gray-400 ' ~ attributes.nested('icon').render('class'))|tailwind_merge }}"
        />
    {% endif %}

    <span class="flex-1">
        {% block content %}{% endblock %}
    </span>
</div>
