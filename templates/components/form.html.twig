{# @var \Symfony\Component\Form\FormView form #}
{% props
  form = null,
  name = null,
  method = null,
  action = null,
  enctype = null,

  title = null,
  description = null,

  layout = 'vertical',
  cols = 12,
  gap = 6,
  divide = false,
  class = '',
%}

{# Nested attributes for fine-grained customization #}
{% set headerAttrs = attributes.nested('header') %}
{% set titleAttrs = attributes.nested('title') %}
{% set descriptionAttrs = attributes.nested('description') %}
{% set gridAttrs = attributes.nested('grid') %}
{% set footerAttrs = attributes.nested('footer') %}
{% set submitAttrs = attributes.nested('submit') %}
{% set cancelAttrs = attributes.nested('cancel') %}

{# Extract nested values with defaults #}
{% set submitLabel = submitAttrs.render('label')|default(null) %}
{% set submitIcon = submitAttrs.render('icon')|default(null) %}
{% set cancelLabel = cancelAttrs.render('label')|default(null) %}
{% set cancelIcon = cancelAttrs.render('icon')|default(null) %}
{% set hideCancel = cancelAttrs.has('hide') %}
{% set hideSubmit = submitAttrs.has('hide') %}

{# Check if inline layout #}
{% set isInline = layout == 'inline' %}

{# Footer is hidden by default, shown if footer:show or any footer element is configured #}
{% set showFooter = (footerAttrs.has('show') or submitLabel or cancelLabel) and not isInline %}
{% set hasButtons = submitLabel or cancelLabel %}

{% if form %}
  {% set name = name ?? form.vars.full_name %}
  {% set method = method ?? form.vars.method %}
  {% set action = action ?? form.vars.action %}
{% endif %}

{% set headerBlock %}{% block header '' %}{% endset %}
{% set footerBlock %}{% block footer '' %}{% endset %}

{# Gap classes mapping #}
{% set gapClass = 'gap-' ~ gap %}

{# Expose layout to child components via outerScope #}
{% set _formLayout = layout %}

{# Inline layout classes #}
{% set inlineClass = isInline ? 'flex flex-wrap items-end ' ~ gapClass : 'grid grid-cols-' ~ cols ~ ' ' ~ gapClass ~ ' data-[divide=true]:divide-y data-[divide=true]:divide-gray-200 data-[divide=true]:dark:divide-gray-700' %}

{# Reusable buttons markup #}
{% set buttonsMarkup %}
  {% if cancelLabel and not hideCancel %}
    <twig:ui:button
      type="button"
      variant="{{ cancelAttrs.render('variant')|default('ghost') }}"
      icon="{{ cancelIcon }}"
      label="{{ cancelLabel }}"
      {{ ...cancelAttrs.without('label', 'hide', 'variant', 'icon') }}
    />
  {% endif %}
  {% if submitLabel and not hideSubmit %}
    <twig:ui:button
      type="submit"
      icon="{{ submitIcon }}"
      label="{{ submitLabel }}"
      {{ ...submitAttrs.without('label', 'hide', 'icon') }}
    />
  {% endif %}
{% endset %}

<form
  {{ attributes.without('header', 'title', 'description', 'grid', 'footer', 'submit', 'cancel') }}
  {% if method %}method="{{ method }}"{% endif %}
  {% if name %}name="{{ name }}"{% endif %}
  {% if action %}action="{{ action }}"{% endif %}
  {% if enctype %}enctype="{{ enctype }}"{% endif %}
  class="{{ class }}"
>
  {% if form._token is defined %}
    <input type="hidden" name="{{ field_name(form._token) }}" value="{{ field_value(form._token) }}">
  {% endif %}

  {# Header Section - hidden for inline layout #}
  {% if not isInline and (headerBlock|trim is not empty or title or description) %}
    <div
      class="{{ ('pb-5 mb-5 ' ~ headerAttrs.render('class'))|tailwind_merge }}"
      {{ headerAttrs.without('class') }}
    >
      {% if headerBlock|trim is not empty %}
        {{ headerBlock|raw }}
      {% else %}
        {% if title %}
          <h2
            class="{{ ('text-base/7 font-semibold text-gray-900 dark:text-gray-100 ' ~ titleAttrs.render('class'))|tailwind_merge }}"
            {{ titleAttrs.without('class') }}
          >
            {{ title }}
          </h2>
        {% endif %}

        {% if description %}
          <p
            class="{{ ('mt-1 max-w-2xl text-sm/6 text-gray-600 dark:text-gray-400 ' ~ descriptionAttrs.render('class'))|tailwind_merge }}"
            {{ descriptionAttrs.without('class') }}
          >
            {{ description }}
          </p>
        {% endif %}
      {% endif %}
    </div>
  {% endif %}

  {# Content Section - grid or inline flex #}
  <div
    data-layout="{{ layout }}"
    data-divide="{{ divide ? 'true' : 'false' }}"
    class="{{ (inlineClass ~ ' ' ~ gridAttrs.render('class'))|tailwind_merge }}"
    {{ gridAttrs.without('class') }}
  >
    {% block content %}
      {% for child in (form.children ?? [])|filter(child => child.vars.name != '_token') %}
        {% set childName = child.vars.name %}
        {% if block(childName) is defined %}
          {{ block(childName) }}
        {% else %}
          {% if 'hidden' in child.vars.block_prefixes %}
            <input type="hidden" name="{{ field_name(child) }}" value="{{ field_value(child) }}">
          {% else %}
            <twig:ui:input-group
              :form="child"
              :layout="isInline ? 'inline' : layout"
              {{ ...child.vars.row_attr }}
            />
          {% endif %}
        {% endif %}
      {% endfor %}
    {% endblock %}

    {# Inline layout: render buttons inside the flex container #}
    {% if isInline and hasButtons %}
      {{ buttonsMarkup|raw }}
    {% endif %}
  </div>

  {# Footer Section - hidden by default and for inline layout #}
  {% if not isInline and (footerBlock|trim is not empty or showFooter) %}
    <div
      class="{{ ('border-gray-200 dark:border-gray-700 border-t pt-5 mt-5 flex items-center justify-end gap-x-4 ' ~ footerAttrs.render('class'))|tailwind_merge }}"
      {{ footerAttrs.without('class', 'show') }}
    >
      {% if footerBlock|trim is not empty %}
        {{ footerBlock|raw }}
      {% else %}
        {{ buttonsMarkup|raw }}
      {% endif %}
    </div>
  {% endif %}
</form>
