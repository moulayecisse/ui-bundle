{% props
  title = null,
  description = null,
  breadcrumbs = [],
  class = '',
%}

{% set actions_block %}{% block actions '' %}{% endset %}

<div {{ attributes.without('breadcrumbs', 'header', 'title', 'description', 'actions', 'content') }} class="{{ ('flex flex-col gap-4 ' ~ class)|tailwind_merge }}">
  {# Breadcrumbs #}
  {% if breadcrumbs|length > 0 %}
    <nav aria-label="Breadcrumb" class="{{ attributes.nested('breadcrumbs').render('class')|tailwind_merge }}" {{ attributes.nested('breadcrumbs').without('class') }}>
      <ol class="flex items-center">
        {% for breadcrumb in breadcrumbs %}
          <li class="flex items-center">
            {% if loop.index > 1 %}
              <span class="mx-3 text-sm font-semibold text-gray-400 dark:text-gray-600">/</span>
            {% endif %}

            <a
              href="{{ breadcrumb.link }}"
              class="text-sm transition-colors {{ loop.last ? 'text-gray-400 dark:text-gray-600' : 'font-semibold text-gray-900 hover:text-primary/90 hover:underline dark:text-gray-100' }}"
            >
              {{ breadcrumb.label }}
            </a>
          </li>
        {% endfor %}
      </ol>
    </nav>
  {% endif %}

  {# Page Header #}
  <div class="{{ ('flex flex-col gap-4 md:flex-row md:items-start md:justify-between ' ~ attributes.nested('header').render('class'))|tailwind_merge }}" {{ attributes.nested('header').without('class') }}>
    <div class="flex flex-col gap-1 min-w-0 flex-1">
      {% if title %}
        <h1 class="{{ ('text-2xl font-bold text-gray-900 dark:text-gray-100 truncate ' ~ attributes.nested('title').render('class'))|tailwind_merge }}" {{ attributes.nested('title').without('class') }}>
          {{ title }}
        </h1>
      {% endif %}

      {% if description %}
        <p class="{{ ('text-sm text-gray-600 dark:text-gray-400 ' ~ attributes.nested('description').render('class'))|tailwind_merge }}" {{ attributes.nested('description').without('class') }}>
          {{ description }}
        </p>
      {% endif %}
    </div>

    {% if actions_block|trim %}
      <div class="{{ ('flex items-center gap-2 flex-wrap shrink-0 ' ~ attributes.nested('actions').render('class'))|tailwind_merge }}" {{ attributes.nested('actions').without('class') }}>
        {{ actions_block|raw }}
      </div>
    {% endif %}
  </div>

    {# Page Content #}
  <div class="{{ ('flex-1 ' ~ attributes.nested('content').render('class'))|tailwind_merge }}" {{ attributes.nested('content').without('class') }}>
    {% block content '' %}
  </div>
</div>
