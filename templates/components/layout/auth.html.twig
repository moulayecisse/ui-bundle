{% props
  appName = '',
  appIcon = null,
  appIconClass = 'size-7 text-white',
  headline = '',
  subHeadline = '',
  description = '',
  features = [],
  featureIcon = 'heroicons:check',
  featureIconClass = 'size-5 text-white',
  gradientFrom = 'from-primary-700',
  gradientTo = 'to-primary-800',
  showDecorations = true,
  showPattern = true,
  formTitle = null,
  formSubtitle = null,
  homeLink = '/',
  class = '',
%}

{% set content_block %}{% block content '' %}{% endset %}
{% set branding_logo_block %}{% block branding_logo '' %}{% endset %}
{% set mobile_logo_block %}{% block mobile_logo '' %}{% endset %}

<div {{ attributes.without('branding', 'formPanel', 'form', 'formHeader', 'features', 'mobileLogo') }} class="{{ ('min-h-screen flex ' ~ class)|tailwind_merge }}">
  {# Branding Panel (Left Side) #}
  <div class="{{ ('hidden lg:flex lg:w-1/2 xl:w-2/5 bg-gradient-to-br ' ~ gradientFrom ~ ' ' ~ gradientTo ~ ' relative overflow-hidden ' ~ attributes.nested('branding').render('class'))|tailwind_merge }}" {{ attributes.nested('branding').without('class') }}>
    {# Decorations #}
    {% if showDecorations %}
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute -top-20 -right-20 size-96 bg-white/5 rounded-full blur-3xl"></div>
        <div class="absolute -bottom-32 -left-32 size-80 bg-white/10 rounded-full blur-3xl"></div>
      </div>
    {% endif %}

    {# Pattern overlay #}
    {% if showPattern %}
      <div class="absolute inset-0 opacity-10" style="background-image: radial-gradient(circle, white 1px, transparent 1px); background-size: 24px 24px;"></div>
    {% endif %}

    <div class="relative flex flex-col justify-center px-12 py-8 w-full">
      {# Logo #}
      <div class="mb-10">
        {% if branding_logo_block|trim %}
          {{ branding_logo_block|raw }}
        {% else %}
          <a href="{{ homeLink }}" class="flex items-center gap-3">
            {% if appIcon %}
              <div class="size-12 rounded-xl bg-white/20 flex items-center justify-center">
                <twig:ux:icon name="{{ appIcon }}" class="{{ appIconClass }}"/>
              </div>
            {% endif %}
            {% if appName %}
              <span class="text-2xl font-bold text-white">{{ appName }}</span>
            {% endif %}
          </a>
        {% endif %}
      </div>

      {# Headlines #}
      {% if headline or subHeadline %}
        <div class="mb-8">
          {% if headline %}
            <h1 class="text-4xl font-light text-white/90 mb-2">{{ headline }}</h1>
          {% endif %}
          {% if subHeadline %}
            <h2 class="text-5xl font-bold text-white">{{ subHeadline }}</h2>
          {% endif %}
        </div>
      {% endif %}

      {# Description #}
      {% if description %}
        <p class="text-lg text-white/80 mb-8 max-w-md">{{ description }}</p>
      {% endif %}

      {# Features #}
      {% if features|length > 0 %}
        <div class="{{ ('space-y-4 ' ~ attributes.nested('features').render('class'))|tailwind_merge }}" {{ attributes.nested('features').without('class') }}>
          {% for feature in features %}
            <div class="flex items-center gap-3">
              <div class="size-8 rounded-lg bg-white/20 flex items-center justify-center shrink-0">
                <twig:ux:icon name="{{ feature.icon is defined and feature.icon ? feature.icon : featureIcon }}" class="{{ feature.iconClass is defined and feature.iconClass ? feature.iconClass : featureIconClass }}"/>
              </div>
              <span class="text-white/90">{{ feature.text ?? feature }}</span>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>

  {# Form Panel (Right Side) #}
  <div class="{{ ('flex-1 flex flex-col bg-gray-50 dark:bg-gray-900 ' ~ attributes.nested('formPanel').render('class'))|tailwind_merge }}" {{ attributes.nested('formPanel').without('class') }}>
    {# Mobile Logo #}
    <div class="{{ ('lg:hidden px-6 py-4 ' ~ attributes.nested('mobileLogo').render('class'))|tailwind_merge }}" {{ attributes.nested('mobileLogo').without('class') }}>
      {% if mobile_logo_block|trim %}
        {{ mobile_logo_block|raw }}
      {% else %}
        <a href="{{ homeLink }}" class="flex items-center gap-2">
          {% if appIcon %}
            <div class="size-10 rounded-lg bg-primary flex items-center justify-center">
              <twig:ux:icon name="{{ appIcon }}" class="size-6 text-white"/>
            </div>
          {% endif %}
          {% if appName %}
            <span class="text-xl font-bold text-gray-900 dark:text-white">{{ appName }}</span>
          {% endif %}
        </a>
      {% endif %}
    </div>

    {# Form Container #}
    <div class="{{ ('flex-1 flex items-center justify-center px-6 py-12 ' ~ attributes.nested('form').render('class'))|tailwind_merge }}" {{ attributes.nested('form').without('class') }}>
      <div class="w-full max-w-md">
        {# Form Header #}
        {% if formTitle or formSubtitle %}
          <div class="{{ ('text-center mb-8 ' ~ attributes.nested('formHeader').render('class'))|tailwind_merge }}" {{ attributes.nested('formHeader').without('class') }}>
            {% if formTitle %}
              <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">{{ formTitle }}</h2>
            {% endif %}
            {% if formSubtitle %}
              <p class="text-gray-600 dark:text-gray-400">{{ formSubtitle }}</p>
            {% endif %}
          </div>
        {% endif %}

        {# Form Content #}
        {{ content_block|raw }}
      </div>
    </div>
  </div>
</div>
