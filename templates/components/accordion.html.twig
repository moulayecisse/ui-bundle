{% props
    class = '',
    active = null,
    multiple = false,
    duration = 300,
    easing = 'ease-out',
    variant = 'default',
    size = 'md',
    iconPosition = 'right',
    flush = false,
%}

{# Variant classes #}
{% set variantClasses = {
    'default': '',
    'bordered': 'border border-gray-200 dark:border-gray-700 rounded-lg divide-y divide-gray-200 dark:divide-gray-700',
    'separated': 'space-y-2',
    'card': 'bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-700 rounded-lg shadow-sm divide-y divide-gray-200 dark:divide-gray-700',
} %}

{% set class = ('w-full group ' ~ (variantClasses[variant] ?? '') ~ ' ' ~ class)|tailwind_merge %}

<div
        {{ attributes }}
        data-controller="cisse--ui-bundle--accordion"
        {% if active is not null %}data-cisse--ui-bundle--accordion-active-value="{{ active }}"{% endif %}
        data-cisse--ui-bundle--accordion-multiple-value="{{ multiple ? 'true' : 'false' }}"
        data-cisse--ui-bundle--accordion-duration-value="{{ duration }}"
        data-cisse--ui-bundle--accordion-easing-value="{{ easing }}"
        data-variant="{{ variant }}"
        data-size="{{ size }}"
        data-icon-position="{{ iconPosition }}"
        data-flush="{{ flush ? 'true' : 'false' }}"
        class="{{ class }}"
>
    {% block content '' %}
</div>