{% props
  items = 5,
  showAvatar = false,
  showDescription = true,
  class = '',
%}

<div {{ attributes }} class="{{ ('space-y-4 ' ~ class)|tailwind_merge }}" aria-hidden="true">
  {% for item in 1..items %}
    <div class="flex items-center gap-3">
      {# Avatar #}
      {% if showAvatar %}
        <div class="size-10 rounded-full bg-gray-200 dark:bg-gray-700 animate-pulse shrink-0"></div>
      {% endif %}

      {# Content #}
      <div class="flex-1 space-y-2">
        <div
          class="h-4 bg-gray-200 dark:bg-gray-700 rounded animate-pulse"
          style="width: {{ 50 + random(30) }}%"
        ></div>
        {% if showDescription %}
          <div
            class="h-3 bg-gray-200 dark:bg-gray-700 rounded animate-pulse"
            style="width: {{ 30 + random(40) }}%"
          ></div>
        {% endif %}
      </div>
    </div>
  {% endfor %}
</div>
