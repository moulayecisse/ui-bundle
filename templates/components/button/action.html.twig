{% props
  class = '',
%}
{%- set contentBlock -%}{% block content '' %}{%- endset -%}

{% if contentBlock %}
  <twig:Ui:button {{ ...attributes }} class="{{ ('px-2 py-1 ' ~ class)|tailwind_merge }}">{{ contentBlock|raw }}</twig:Ui:button>
{% else %}
  <twig:Ui:button {{ ...attributes }} class="{{ ('px-2 py-1 ' ~ class)|tailwind_merge }}" />
{% endif %}
