{% props title = '', class = '' %}

{% set class = ('block border-b border-gray-800/10 dark:border-gray-200/10 pb-4 pt-4 first:pt-0 last:border-b-0 last:pb-0 ' ~ class)|tailwind_merge %}

<div
  {{ attributes.without('x-data') }}
  x-id="['accordion-item']"
  class="{{ class }}"
>
  <h2>
    <button
      type="button"
      x-on:click="expanded($id('accordion-item'))"
      class="group flex w-full items-center justify-between text-left font-medium text-gray-800 dark:text-gray-200"
    >
      <span class="flex-1">{% block title title|raw %}</span>


      <twig:ui
        name="heroicons:chevron-down-20-solid"
        x-bind:data-open="active === $id('accordion-item')"
        class="size-5 shrink-0 text-gray-300 dark:text-gray-700 group-hover:text-gray-800 dark:group-hover:text-gray-200 transition-transform duration-300 ease-in-out rotate-0 data-open:rotate-180"
      />
    </button>
  </h2>

  <div x-show="active === $id('accordion-item')" x-collapse>
    {% block content_wrapper %}
      <div class="pt-2 text-gray-600 dark:text-gray-400">
        {% block content '' %}
      </div>
    {% endblock %}

  </div>
</div>
